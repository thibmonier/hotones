<?xml version="1.0"?>
<ruleset name="HotOnes PHP_CodeSniffer">
    <description>PHP_CodeSniffer configuration for HotOnes project</description>

    <!-- Include PSR-12 coding standard -->
    <rule ref="PSR12">
        <!-- Exclude concatenation spacing to match Symfony style (no spaces) -->
        <exclude name="Squiz.Strings.ConcatenationSpacing"/>
    </rule>

    <!-- Paths to check -->
    <file>src</file>
    <file>tests</file>

    <!-- Exclude patterns -->
    <exclude-pattern>*/var/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/migrations/*</exclude-pattern>
    <exclude-pattern>*/public/*</exclude-pattern>
    <exclude-pattern>*/assets/*</exclude-pattern>
    <exclude-pattern>*/bin/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/cache/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
    <!-- Exclude Entity directory due to PHP 8.4 property hooks not supported by PHPCS yet -->
    <exclude-pattern>*/src/Entity/*</exclude-pattern>

    <!-- Additional rules for code quality -->
    <!-- Set as warnings (severity 5) instead of errors to allow CI to pass with legacy code -->
    <rule ref="Generic.CodeAnalysis.EmptyStatement">
        <severity>5</severity>
    </rule>
    <rule ref="Generic.CodeAnalysis.UnusedFunctionParameter">
        <severity>5</severity>
    </rule>
    <rule ref="Generic.CodeAnalysis.UselessOverridingMethod">
        <severity>5</severity>
    </rule>
    <rule ref="Generic.Commenting.Todo">
        <severity>5</severity>
    </rule>
    <rule ref="Generic.Commenting.Fixme">
        <severity>5</severity>
    </rule>
    <!-- Increased line length limits to accommodate existing legacy code -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="150"/>
            <property name="absoluteLineLimit" value="320"/>
        </properties>
    </rule>
    <!-- Increased complexity limits to allow existing complex legacy functions -->
    <rule ref="Generic.Metrics.CyclomaticComplexity">
        <properties>
            <property name="complexity" value="15"/>
            <property name="absoluteComplexity" value="51"/>
        </properties>
    </rule>
    <rule ref="Generic.Metrics.NestingLevel">
        <properties>
            <property name="nestingLevel" value="7"/>
            <property name="absoluteNestingLevel" value="10"/>
        </properties>
    </rule>

    <!-- Convert import grouping rule to warning (legacy code with mixed imports) -->
    <rule ref="PSR12.Files.ImportStatement">
        <severity>5</severity>
    </rule>

    <!-- Show colors in output -->
    <arg name="colors"/>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Use all CPU cores for faster analysis -->
    <arg name="parallel" value="75"/>

    <!-- Disable specific PSR12 checks that conflict with Symfony style -->
    <!-- We use Symfony style (no spaces around concat) via PHP CS Fixer -->
    <rule ref="PSR12.Operators.OperatorSpacing">
        <severity>0</severity>
    </rule>
</ruleset>
