{% extends 'layouts/layouts-without-nav.html.twig' %}
{% block title %}Lock Screen{% endblock %}

{% block body_tag %}
<body>
{% endblock %}

{% block content %}

<div class="account-pages my-5 pt-sm-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card overflow-hidden">
                    <div class="bg-primary-subtle">
                        <div class="row">
                            <div class="col-7">
                                <div class="text-primary p-4">
                                    <h5 class="text-primary">Lock screen</h5>
                                    <p>Enter your password to unlock the screen!</p>
                                </div>
                            </div>
                            <div class="col-5 align-self-end">
                                <img src="assets/images/profile-img.png" alt="" class="img-fluid">
                            </div>
                        </div>
                    </div>
                    <div class="card-body pt-0"> 
                        <div>
                            <a href="/">
                                <div class="avatar-md profile-user-wid mb-4">
                                    <span class="avatar-title rounded-circle bg-light">
<picture>
                                        <source srcset="{{ asset('assets/images/logo-hotones.png') }}" type="image/png">
                                        <img src="{{ asset('assets/images/logo-hotones.jpeg') }}" alt="HotOnes" class="rounded-circle img-fluid" style="max-height:34px;height:auto;width:auto;">
                                    </picture>
                                    </span>
                                </div>
                            </a>
                        </div>
                        <div class="p-2">
                            <form action="/">
    
                                <div class="user-thumb text-center mb-4">
                                    <img src="assets/images/users/avatar-1.jpg" class="rounded-circle img-thumbnail avatar-md" alt="thumbnail">
                                    <h5 class="font-size-15 mt-3">Maria Laird</h5>
                                </div>
    
                                <div class="mb-3">
                                    <label for="userpassword">Password</label>
                                    <input type="password" class="form-control" id="userpassword" placeholder="Enter password">
                                </div>
    
                                <div class="text-end">
                                    <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Unlock</button>
                                </div>

                            </form>
                        </div>
    
                    </div>
                </div>
                <div class="mt-5 text-center">
                    <p>Not you ? return <a href="auth-login" class="fw-medium text-primary"> Sign In </a> </p>
                    <p>Â© {{ 'now'|date('Y') }} Skote. Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesbrand</p>
                </div>

            </div>
        </div>
    </div>
</div>
    
{% endblock %}
 
{% block javascripts %}
    <!-- App js -->
    <script src="assets/js/app.js"></script>
{% endblock %}
