{% extends 'layouts/layouts-vertical.html.twig' %}

{% block title %}Modifier {{ contributor.name }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Modifier {{ contributor.name }}</h4>
                <div class="page-title-right">
                    <div class="btn-group">
                        <a href="{{ path('contributor_show', {'id': contributor.id}) }}" class="btn btn-secondary">
                            <i class="bx bx-arrow-back me-1"></i> Retour
                        </a>
                        <a href="{{ path('contributor_index') }}" class="btn btn-outline-secondary">
                            <i class="bx bx-list-ul me-1"></i> Liste
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <form method="post">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Informations générales</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Nom complet *</label>
                                    <input type="text" class="form-control" id="name" name="name"
                                           value="{{ contributor.name }}" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" name="email"
                                           value="{{ contributor.email }}">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="phone" class="form-label">Téléphone</label>
                                    <input type="tel" class="form-control" id="phone" name="phone"
                                           value="{{ contributor.phone }}">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="user_id" class="form-label">Compte utilisateur</label>
                                    <select class="form-control" id="user_id" name="user_id">
                                        <option value="">Aucun compte lié</option>
                                        {% for user in users %}
                                            <option value="{{ user.id }}"
                                                    {{ contributor.user and contributor.user.id == user.id ? 'selected' : '' }}>
                                                {{ user.firstName }} {{ user.lastName }} ({{ user.email }})
                                            </option>
                                        {% endfor %}
                                    </select>
                                    <small class="form-text text-muted">Associer à un compte utilisateur existant</small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="notes" class="form-label">Notes</label>
                            <textarea class="form-control" id="notes" name="notes" rows="3">{{ contributor.notes }}</textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="active" name="active"
                                               value="1" {{ contributor.active ? 'checked' : '' }}>
                                        <label class="form-check-label" for="active">
                                            Contributeur actif
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Informations financières</h4>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="bx bx-info-circle me-2"></i>
                            <strong>Information :</strong> Ces données peuvent être surchargées par les périodes d'emploi.
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="cjm" class="form-label">Coût Journalier Moyen (CJM)</label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" id="cjm" name="cjm"
                                               step="1" min="0" value="{{ contributor.cjm }}">
                                        <span class="input-group-text">€</span>
                                    </div>
                                    <small class="form-text text-muted">Coût pour l'entreprise par jour</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="tjm" class="form-label">Tarif Journalier Moyen (TJM)</label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" id="tjm" name="tjm"
                                               step="1" min="0" value="{{ contributor.tjm }}">
                                        <span class="input-group-text">€</span>
                                    </div>
                                    <small class="form-text text-muted">Tarif de vente moyen par jour</small>
                                </div>
                            </div>
                        </div>

                        <div class="row" id="margin-preview" style="display: none;">
                            <div class="col-md-6">
                                <div class="alert alert-light border">
                                    <h6 class="mb-2">Aperçu de la marge</h6>
                                    <div id="margin-calculation"></div>
                                </div>
                            </div>
                        </div>

                        {% if contributor.cjm and contributor.tjm %}
                            {% set currentMargin = contributor.tjm - contributor.cjm %}
                            {% set currentMarginRate = (currentMargin / contributor.tjm * 100)|round(1) %}
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="alert alert-light border">
                                        <h6 class="mb-2">Marge actuelle</h6>
                                        <div class="d-flex justify-content-between">
                                            <span>Marge :</span>
                                            <span class="fw-bold {% if currentMarginRate >= 20 %}text-success{% elseif currentMarginRate >= 10 %}text-warning{% else %}text-danger{% endif %}">
                                                {{ currentMargin }}€ ({{ currentMarginRate }}%)
                                            </span>
                                        </div>
                                        <small class="text-muted">TJM {{ contributor.tjm }}€ - CJM {{ contributor.cjm }}€</small>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Profils métier</h4>
                    </div>
                    <div class="card-body">
                        {% if profiles %}
                            <div class="mb-3">
                                <small class="text-muted">Sélectionnez les profils correspondant aux compétences du contributeur</small>
                            </div>
                            {% for profile in profiles %}
                                {% set isSelected = false %}
                                {% for contributorProfile in contributor.profiles %}
                                    {% if contributorProfile.id == profile.id %}
                                        {% set isSelected = true %}
                                    {% endif %}
                                {% endfor %}
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="profile_{{ profile.id }}"
                                           name="profiles[]" value="{{ profile.id }}" {{ isSelected ? 'checked' : '' }}>
                                    <label class="form-check-label" for="profile_{{ profile.id }}">
                                        <strong>{{ profile.name }}</strong>
                                        {% if profile.description %}
                                            <br><small class="text-muted">{{ profile.description }}</small>
                                        {% endif %}
                                    </label>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="text-center py-3">
                                <div class="avatar-sm mx-auto mb-3">
                                    <div class="avatar-title bg-light text-muted rounded-circle">
                                        <i class="bx bx-user-circle"></i>
                                    </div>
                                </div>
                                <p class="text-muted mb-0">Aucun profil disponible</p>
                                <small class="text-muted">Créez d'abord des profils métier</small>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="bx bx-save me-1"></i> Enregistrer les modifications
                            </button>
                            <a href="{{ path('contributor_show', {'id': contributor.id}) }}" class="btn btn-outline-secondary">
                                <i class="bx bx-x me-1"></i> Annuler
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Actions rapides</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="{{ path('contributor_timesheets', {'id': contributor.id}) }}" class="btn btn-outline-primary btn-sm">
                                <i class="bx bx-time me-1"></i> Voir les temps passés
                            </a>
                            <a href="{{ path('contributor_employment_periods', {'id': contributor.id}) }}" class="btn btn-outline-info btn-sm">
                                <i class="bx bx-briefcase me-1"></i> Périodes d'emploi
                            </a>
                        </div>
                    </div>
                </div>

                {% if is_granted('ROLE_MANAGER') %}
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h5 class="card-title mb-0">Zone dangereuse</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-3">Désactiver ce contributeur le rendra invisible dans les nouvelles saisies.</p>
                        <form method="post" action="{{ path('contributor_delete', {'id': contributor.id}) }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contributor.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm w-100"
                                    onclick="return confirm('Êtes-vous sûr de vouloir désactiver ce contributeur ?')">
                                <i class="bx bx-user-x me-1"></i> Désactiver le contributeur
                            </button>
                        </form>
                    </div>
                </div>
                {% endif %}

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Aide</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <h6 class="font-size-14">Coût Journalier Moyen (CJM)</h6>
                            <p class="text-muted font-size-13 mb-0">
                                Coût réel pour l'entreprise incluant salaire, charges sociales,
                                avantages et coûts indirects.
                            </p>
                        </div>
                        <div class="mb-3">
                            <h6 class="font-size-14">Tarif Journalier Moyen (TJM)</h6>
                            <p class="text-muted font-size-13 mb-0">
                                Tarif de vente moyen facturé aux clients pour ce contributeur.
                            </p>
                        </div>
                        <div>
                            <h6 class="font-size-14">Profils métier</h6>
                            <p class="text-muted font-size-13 mb-0">
                                Compétences et rôles que peut tenir le contributeur dans les projets.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const cjmInput = document.getElementById('cjm');
            const tjmInput = document.getElementById('tjm');
            const marginPreview = document.getElementById('margin-preview');
            const marginCalculation = document.getElementById('margin-calculation');

            function updateMarginPreview() {
                const cjm = parseFloat(cjmInput.value) || 0;
                const tjm = parseFloat(tjmInput.value) || 0;

                if (cjm > 0 && tjm > 0) {
                    const margin = tjm - cjm;
                    const marginRate = (margin / tjm * 100).toFixed(1);

                    let colorClass = 'text-success';
                    if (marginRate < 10) colorClass = 'text-danger';
                    else if (marginRate < 20) colorClass = 'text-warning';

                    marginCalculation.innerHTML = `
                        <div class="d-flex justify-content-between">
                            <span>Nouvelle marge :</span>
                            <span class="${colorClass} fw-bold">${margin}€ (${marginRate}%)</span>
                        </div>
                        <small class="text-muted">TJM ${tjm}€ - CJM ${cjm}€</small>
                    `;
                    marginPreview.style.display = 'block';
                } else {
                    marginPreview.style.display = 'none';
                }
            }

            // Calculer la marge au chargement si les valeurs sont présentes
            updateMarginPreview();

            cjmInput.addEventListener('input', updateMarginPreview);
            tjmInput.addEventListener('input', updateMarginPreview);
        });
    </script>
{% endblock %}
