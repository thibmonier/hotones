{% extends 'layouts/base.html.twig' %}

{% block title %}Modifier contributeur{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Modifier contributeur : {{ contributor.name }}</h4>
                <div class="page-title-right">
                    <a href="{{ path('contributor_index') }}" class="btn btn-secondary">
                        <i class="bx bx-arrow-back me-1"></i> Retour
                    </a>
                </div>
            </div>
        </div>
    </div>

    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Informations générales</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.firstName) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.lastName) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.email) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.user) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.phoneProfessional) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.phonePersonal) }}
                            </div>
                        </div>

                        {{ form_row(form.address) }}
                        {{ form_row(form.avatarFile) }}
                        {{ form_row(form.notes) }}
                        {{ form_row(form.active) }}
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Informations financières</h4>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="bx bx-info-circle me-2"></i>
                            <strong>Information :</strong> Ces données peuvent être surchargées par les périodes d'emploi.
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.cjm) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.tjm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Profils métier</h4>
                    </div>
                    <div class="card-body">
                        {{ form_row(form.profiles) }}
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="bx bx-save me-1"></i> Enregistrer les modifications
                            </button>
                            <a href="{{ path('contributor_index') }}" class="btn btn-outline-secondary">
                                <i class="bx bx-x me-1"></i> Annuler
                            </a>
                        </div>
                    </div>
                </div>

                {{ form_rest(form) }}

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Aide</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <h6 class="font-size-14">Coût Journalier Moyen (CJM)</h6>
                            <p class="text-muted font-size-13 mb-0">
                                Coût réel pour l'entreprise incluant salaire, charges sociales,
                                avantages et coûts indirects.
                            </p>
                        </div>
                        <div class="mb-3">
                            <h6 class="font-size-14">Tarif Journalier Moyen (TJM)</h6>
                            <p class="text-muted font-size-13 mb-0">
                                Tarif de vente moyen facturé aux clients pour ce contributeur.
                            </p>
                        </div>
                        <div>
                            <h6 class="font-size-14">Profils métier</h6>
                            <p class="text-muted font-size-13 mb-0">
                                Compétences et rôles que peut tenir le contributeur dans les projets.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const cjmInput = document.getElementById('cjm');
            const tjmInput = document.getElementById('tjm');
            const marginPreview = document.getElementById('margin-preview');
            const marginCalculation = document.getElementById('margin-calculation');

            function updateMarginPreview() {
                const cjm = parseFloat(cjmInput.value) || 0;
                const tjm = parseFloat(tjmInput.value) || 0;

                if (cjm > 0 && tjm > 0) {
                    const margin = tjm - cjm;
                    const marginRate = (margin / tjm * 100).toFixed(1);

                    let colorClass = 'text-success';
                    if (marginRate < 10) colorClass = 'text-danger';
                    else if (marginRate < 20) colorClass = 'text-warning';

                    marginCalculation.innerHTML = `
                        <div class="d-flex justify-content-between">
                            <span>Marge :</span>
                            <span class="${colorClass} fw-bold">${margin}€ (${marginRate}%)</span>
                        </div>
                        <small class="text-muted">TJM ${tjm}€ - CJM ${cjm}€</small>
                    `;
                    marginPreview.style.display = 'block';
                } else {
                    marginPreview.style.display = 'none';
                }
            }

            cjmInput.addEventListener('input', updateMarginPreview);
            tjmInput.addEventListener('input', updateMarginPreview);
        });
    </script>
{% endblock %}
