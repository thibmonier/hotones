{% extends 'layouts/base.html.twig' %}

{% block title %}Nouveau collaborateur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css">
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            {% include 'components/page_header.html.twig' with {
                title: 'Nouveau collaborateur',
                breadcrumb: [
                    {label: 'Collaborateurs', path: 'contributor_index'},
                    {label: 'Nouveau', path: null}
                ],
                actions: [
                    {label: 'Retour', path: 'contributor_index', icon: 'bx-arrow-back', class: 'btn-outline-secondary'}
                ]
            } %}
        </div>
    </div>

    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bx bx-user me-2"></i>
                            Informations générales
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.firstName) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.lastName) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.email) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.user) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                {{ form_row(form.manager) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.phoneProfessional) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.phonePersonal) }}
                            </div>
                        </div>

                        {{ form_row(form.address) }}
                        {{ form_row(form.avatarFile) }}
                        {{ form_row(form.notes) }}
                        {{ form_row(form.active) }}
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bx bx-euro me-2"></i>
                            Informations financières
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="bx bx-info-circle me-2"></i>
                            <strong>Information :</strong> Ces données peuvent être surchargées par les périodes d'emploi.
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.cjm) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.tjm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bx bx-briefcase me-2"></i>
                            Profils métier
                        </h5>
                    </div>
                    <div class="card-body">
                        {{ form_row(form.profiles) }}
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bx bx-save me-1"></i> Créer
                            </button>
                            <a href="{{ path('contributor_index') }}" class="btn btn-outline-secondary">
                                <i class="bx bx-x me-1"></i> Annuler
                            </a>
                        </div>
                    </div>
                </div>

                {{ form_rest(form) }}

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bx bx-help-circle me-2"></i>
                            Aide
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <h6 class="font-size-14">Coût Journalier Moyen (CJM)</h6>
                            <p class="text-muted font-size-13 mb-0">
                                Coût réel pour l'entreprise incluant salaire, charges sociales,
                                avantages et coûts indirects.
                            </p>
                        </div>
                        <div class="mb-3">
                            <h6 class="font-size-14">Tarif Journalier Moyen (TJM)</h6>
                            <p class=\"text-muted font-size-13 mb-0\">
                                Tarif de vente moyen facturé aux clients pour ce collaborateur.
                            </p>
                        </div>
                        <div>
                            <h6 class="font-size-14">Profils métier</h6>
                            <p class=\"text-muted font-size-13 mb-0\">
                                Compétences et rôles que peut tenir le collaborateur dans les projets.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Choices.js for profiles
            const profilesSelect = document.querySelector('.select2-multiple');
            if (profilesSelect) {
                new Choices(profilesSelect, {
                    removeItemButton: true,
                    placeholder: true,
                    placeholderValue: profilesSelect.getAttribute('data-placeholder') || 'Sélectionner des profils',
                    searchPlaceholderValue: 'Rechercher...',
                    noResultsText: 'Aucun profil trouvé',
                    noChoicesText: 'Aucun profil disponible',
                    itemSelectText: 'Cliquer pour sélectionner',
                });
            }

            const cjmInput = document.getElementById('cjm');
            const tjmInput = document.getElementById('tjm');
            const marginPreview = document.getElementById('margin-preview');
            const marginCalculation = document.getElementById('margin-calculation');

            if (cjmInput && tjmInput && marginPreview && marginCalculation) {
                function updateMarginPreview() {
                    const cjm = parseFloat(cjmInput.value) || 0;
                    const tjm = parseFloat(tjmInput.value) || 0;

                    if (cjm > 0 && tjm > 0) {
                        const margin = tjm - cjm;
                        const marginRate = (margin / tjm * 100).toFixed(1);

                        let colorClass = 'text-success';
                        if (marginRate < 10) colorClass = 'text-danger';
                        else if (marginRate < 20) colorClass = 'text-warning';

                        marginCalculation.innerHTML = `
                            <div class="d-flex justify-content-between">
                                <span>Marge :</span>
                                <span class="${colorClass} fw-bold">${margin}€ (${marginRate}%)</span>
                            </div>
                            <small class="text-muted">TJM ${tjm}€ - CJM ${cjm}€</small>
                        `;
                        marginPreview.style.display = 'block';
                    } else {
                        marginPreview.style.display = 'none';
                    }
                }

                cjmInput.addEventListener('input', updateMarginPreview);
                tjmInput.addEventListener('input', updateMarginPreview);
            }
        });
    </script>
{% endblock %}
