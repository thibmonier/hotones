{% extends 'layouts/base.html.twig' %}

{% block title %}Contributeurs{% endblock %}

{% block content %}
    {{ component('breadcrumb', { title: 'Contributeurs', pagetitle: 'Gestion' }) }}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Contributeurs</h4>
                <div class="page-title-right">
                    {% if is_granted('ROLE_MANAGER') %}
                        <a href="{{ path('contributor_new') }}" class="btn btn-primary">
                            <i class="bx bx-plus me-1"></i> Nouveau contributeur
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Bloc filtres (contributeurs) -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    {% set activeFiltersCount = 0 %}
                    {% set activeFiltersCount = activeFiltersCount
                        + ((search and search|length > 0) ? 1 : 0)
                        + (active != 'all' ? 1 : 0)
                        + (sort != 'name' ? 1 : 0)
                        + (dir != 'ASC' ? 1 : 0)
                        + (pagination.per_page != 20 ? 1 : 0)
                    %}
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="mb-0">Filtres
                            {% if activeFiltersCount > 0 %}
                                <span class="badge bg-info ms-2">{{ activeFiltersCount }}</span>
                            {% endif %}
                        </h5>
                        <div class="btn-group">
                            <a href="{{ path('contributor_export_csv', { search: search, active: active, sort: sort, dir: dir }) }}" class="btn btn-sm btn-outline-primary">Exporter CSV</a>
                            <a href="{{ path('contributor_index', { reset: 1 }) }}" class="btn btn-sm btn-outline-secondary">Effacer</a>
                            <button type="button" class="btn btn-sm btn-outline-dark" data-bs-toggle="collapse" data-bs-target="#filters-contributors" aria-expanded="true" aria-controls="filters-contributors" id="filters-toggle-contributors">
                                <i class="bx bx-chevron-up"></i>
                            </button>
                        </div>
                    </div>
                    <div id="filters-contributors" class="collapse show">
                        {% set chips = [] %}
                        {% if search and search|length > 0 %}
                            {% set chips = chips|merge(['Recherche: ' ~ search]) %}
                        {% endif %}
                        {% if active != 'all' %}
                            {% set chips = chips|merge(['Statut: ' ~ (active == 'active' ? 'Actifs' : 'Inactifs')]) %}
                        {% endif %}
                        {% if sort != 'name' or dir != 'ASC' %}
                            {% set chips = chips|merge(['Tri: ' ~ sort ~ ' ' ~ dir]) %}
                        {% endif %}
                        {% if pagination.per_page != 20 %}
                            {% set chips = chips|merge(['Par page: ' ~ pagination.per_page]) %}
                        {% endif %}
                        {% if chips|length > 0 %}
                            <div class="mb-2 small text-muted">
                                {% for c in chips %}
                                    <span class="badge bg-light text-dark me-1">{{ c }}</span>
                                {% endfor %}
                            </div>
                            <script>
                              (function(){ try { window.__ACTIVE_FILTERS = {{ chips|json_encode|raw }}; window.dispatchEvent(new Event('active-filters-changed')); } catch(e) {} })();
                            </script>
                        {% else %}
                            <script>try { window.__ACTIVE_FILTERS = []; window.dispatchEvent(new Event('active-filters-changed')); } catch(e) {}</script>
                        {% endif %}
                        <form method="get" class="mb-3">
                            <div class="row g-3 align-items-end">
                                <div class="col-md-5">
                                    <label class="form-label">Recherche</label>
                                    <input type="text" name="search" class="form-control" 
                                           placeholder="Rechercher par nom, prénom ou email..." 
                                           value="{{ search }}">
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Statut</label>
                                    <select name="active" class="form-select">
                                        <option value="all" {{ active == 'all' ? 'selected' : '' }}>Tous les statuts</option>
                                        <option value="active" {{ active == 'active' ? 'selected' : '' }}>Actifs uniquement</option>
                                        <option value="inactive" {{ active == 'inactive' ? 'selected' : '' }}>Inactifs uniquement</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Par page</label>
                                    <select name="per_page" class="form-select">
                                        {% for n in [10,20,50,100] %}
                                            <option value="{{ n }}" {{ pagination.per_page == n ? 'selected' : '' }}>{{ n }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <div class="btn-group w-100" role="group">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bx bx-search"></i> Filtrer
                                        </button>
                                        <a href="{{ path('contributor_index', { reset: 1 }) }}" class="btn btn-secondary" title="Réinitialiser">
                                            <i class="bx bx-reset"></i>
                                        </a>
                                    </div>
                                </div>
                                <input type="hidden" name="sort" value="{{ sort }}">
                                <input type="hidden" name="dir" value="{{ dir }}">
                            </div>
                        </form>
                    </div>
                    <script>
                        (function(){
                          var key='filters:contributors:collapsed';
                          var el=document.getElementById('filters-contributors');
                          var btn=document.getElementById('filters-toggle-contributors');
                          if(!el||!btn) return;
                          try {
                            var hasActive={{ (chips|length > 0) ? 'true' : 'false' }};
                            var isSmall=window.matchMedia('(max-width: 767.98px)').matches;
                            var collapsed = localStorage.getItem(key) === '1' || (isSmall && !hasActive);
                            if (collapsed) { el.classList.remove('show'); btn.setAttribute('aria-expanded','false'); }
                            var updateIcon=function(){ var i=btn.querySelector('i'); if(!i) return; if (el.classList.contains('show')) { i.className='bx bx-chevron-up'; localStorage.setItem(key,'0'); btn.setAttribute('aria-expanded','true'); } else { i.className='bx bx-chevron-down'; localStorage.setItem(key,'1'); btn.setAttribute('aria-expanded','false'); } };
                            el.addEventListener('shown.bs.collapse', updateIcon);
                            el.addEventListener('hidden.bs.collapse', updateIcon);
                            updateIcon();
                          } catch(e) {}
                        })();
                    </script>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="card-title mb-0">Liste des contributeurs</h4>
                        </div>
                        <div class="col-auto">
                            <span class="badge bg-primary">{{ pagination.total }} contributeur{{ pagination.total > 1 ? 's' : '' }}</span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {% if contributors %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>
                                            <a href="{{ path('contributor_index', { search: search, active: active, sort: 'name', dir: sort == 'name' and dir == 'ASC' ? 'DESC' : 'ASC' }) }}" class="text-decoration-none text-reset">
                                                Nom
                                                {% if sort == 'name' %}
                                                    <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                                {% endif %}
                                            </a>
                                        </th>
                                        <th>
                                            <a href="{{ path('contributor_index', { search: search, active: active, sort: 'email', dir: sort == 'email' and dir == 'ASC' ? 'DESC' : 'ASC' }) }}" class="text-decoration-none text-reset">
                                                Contact
                                                {% if sort == 'email' %}
                                                    <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                                {% endif %}
                                            </a>
                                        </th>
                                        <th>Profils</th>
                                        <th>Coûts</th>
                                        <th>Compte lié</th>
                                        <th>Manager</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for contributor in contributors %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-xs me-3">
                                                        {% if contributor.avatarFilename %}
                                                            <img src="{{ path('avatar_show', {'filename': contributor.avatarFilename}) }}"
                                                                 alt="{{ contributor.name }}"
                                                                 class="rounded-circle" style="width: 32px; height: 32px; object-fit: cover;">
                                                        {% else %}
                                                            <span class="avatar-title rounded-circle bg-primary text-white font-size-16">
                                                                {{ contributor.firstName|slice(0, 1)|upper }}{{ contributor.lastName|slice(0, 1)|upper }}
                                                            </span>
                                                        {% endif %}
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">
                                                            <a href="{{ path('contributor_show', {'id': contributor.id}) }}" class="text-dark">
                                                                {{ contributor.name }}
                                                            </a>
                                                            {% if not contributor.active %}
                                                                <span class="badge bg-secondary ms-2">Inactif</span>
                                                            {% endif %}
                                                        </h6>
                                                        {% if contributor.notes %}
                                                            <small class="text-muted">{{ contributor.notes|slice(0, 50) }}...</small>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                {% if contributor.email %}
                                                    <div><i class="bx bx-envelope me-1 text-muted"></i> {{ contributor.email }}</div>
                                                {% endif %}
                                                {% if contributor.phoneProfessional %}
                                                    <div><i class="bx bx-phone me-1 text-muted"></i> {{ contributor.phoneProfessional }}</div>
                                                {% endif %}
                                                {% if contributor.phonePersonal %}
                                                    <div><i class="bx bx-mobile me-1 text-muted"></i> {{ contributor.phonePersonal }}</div>
                                                {% endif %}
                                                {% if not contributor.email and not contributor.phoneProfessional and not contributor.phonePersonal %}
                                                    <span class="text-muted">Non renseigné</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if contributor.profiles|length > 0 %}
                                                    {% for profile in contributor.profiles %}
                                                        <span class="badge bg-info me-1">{{ profile.name }}</span>
                                                    {% endfor %}
                                                {% else %}
                                                    <span class="text-muted">Aucun profil</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if contributor.cjm %}
                                                    <div class="text-success">CJM: {{ contributor.cjm|number_format(0) }}€</div>
                                                {% endif %}
                                                {% if contributor.tjm %}
                                                    <div class="text-primary">TJM: {{ contributor.tjm|number_format(0) }}€</div>
                                                {% endif %}
                                                {% if not contributor.cjm and not contributor.tjm %}
                                                    <span class="text-muted">Non défini</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if contributor.user %}
                                                    <span class="badge bg-success">
                                                        <i class="bx bx-check me-1"></i>
                                                        {{ contributor.user.firstName }} {{ contributor.user.lastName }}
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-warning">
                                                        <i class="bx bx-x me-1"></i>
                                                        Aucun compte
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if contributor.manager %}
                                                    <a href="{{ path('contributor_show', {'id': contributor.manager.id}) }}" class="text-dark text-decoration-none">
                                                        <i class="bx bx-user-check me-1 text-info"></i>
                                                        {{ contributor.manager.fullName }}
                                                    </a>
                                                {% else %}
                                                    <span class="text-muted">
                                                        <i class="bx bx-user-x me-1"></i>
                                                        Aucun manager
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('contributor_show', {'id': contributor.id}) }}"
                                                       class="btn btn-sm btn-outline-primary" title="Voir">
                                                        <i class="bx bx-show"></i>
                                                    </a>
                                                    {% if is_granted('ROLE_MANAGER') %}
                                                        <a href="{{ path('contributor_edit', {'id': contributor.id}) }}"
                                                           class="btn btn-sm btn-outline-success" title="Modifier">
                                                            <i class="bx bx-edit"></i>
                                                        </a>
                                                        <a href="{{ path('contributor_employment_periods', {'id': contributor.id}) }}"
                                                           class="btn btn-sm btn-outline-info" title="Périodes d'emploi">
                                                            <i class="bx bx-briefcase"></i>
                                                        </a>
                                                    {% endif %}
                                                    <a href="{{ path('contributor_timesheets', {'id': contributor.id}) }}"
                                                       class="btn btn-sm btn-outline-secondary" title="Temps passés">
                                                        <i class="bx bx-time"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <div class="avatar-md mx-auto mb-4">
                                <div class="avatar-title bg-light text-primary rounded-circle font-size-24">
                                    <i class="bx bx-user"></i>
                                </div>
                            </div>
                            <h5>Aucun contributeur</h5>
                            <p class="text-muted">Commencez par ajouter votre premier contributeur à l'équipe.</p>
                            {% if is_granted('ROLE_MANAGER') %}
                                <a href="{{ path('contributor_new') }}" class="btn btn-primary">
                                    <i class="bx bx-plus me-1"></i> Ajouter un contributeur
                                </a>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {% if pagination.total_pages > 1 %}
    <div class="row mt-2">
        <div class="col-12">
            <nav>
                <ul class="pagination">
                    <li class="page-item {{ pagination.current_page == 1 ? 'disabled' : '' }}">
                        <a class="page-link" href="{{ path('contributor_index', { search: search, active: active, sort: sort, dir: dir, per_page: pagination.per_page, page: pagination.current_page - 1 }) }}">Précédent</a>
                    </li>
                    {% for p in 1..pagination.total_pages %}
                        <li class="page-item {{ p == pagination.current_page ? 'active' : '' }}">
                            <a class="page-link" href="{{ path('contributor_index', { search: search, active: active, sort: sort, dir: dir, per_page: pagination.per_page, page: p }) }}">{{ p }}</a>
                        </li>
                    {% endfor %}
                    <li class="page-item {{ pagination.current_page == pagination.total_pages ? 'disabled' : '' }}">
                        <a class="page-link" href="{{ path('contributor_index', { search: search, active: active, sort: sort, dir: dir, per_page: pagination.per_page, page: pagination.current_page + 1 }) }}">Suivant</a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-1">
                            <p class="text-truncate font-size-14 mb-2">TJM moyen</p>
                            {% if stats_avg_tjm is not null %}
                                <h4 class="mb-2">{{ stats_avg_tjm|number_format(0) }}€</h4>
                            {% else %}
                                <h4 class="mb-2">-</h4>
                            {% endif %}
                        </div>
                        <div class="avatar-sm">
                            <span class="avatar-title bg-light text-primary rounded-3">
                                <i class="bx bx-euro font-size-24"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    {% if pagination.total > 0 %}
    <div class="row">
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-1">
                            <p class="text-truncate font-size-14 mb-2">Total contributeurs</p>
                            <h4 class="mb-2">{{ pagination.total }}</h4>
                        </div>
                        <div class="avatar-sm">
                            <span class="avatar-title bg-light text-primary rounded-3">
                                <i class="bx bx-group font-size-24"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-1">
                            <p class="text-truncate font-size-14 mb-2">Avec compte utilisateur</p>
                            <h4 class="mb-2">{{ stats_linked_users }}</h4>
                        </div>
                        <div class="avatar-sm">
                            <span class="avatar-title bg-light text-success rounded-3">
                                <i class="bx bx-user-check font-size-24"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-1">
                            <p class="text-truncate font-size-14 mb-2">CJM moyen</p>
                            {% if stats_avg_cjm is not null %}
                                <h4 class="mb-2">{{ stats_avg_cjm|number_format(0) }}€</h4>
                            {% else %}
                                <h4 class="mb-2">-</h4>
                            {% endif %}
                        </div>
                        <div class="avatar-sm">
                            <span class="avatar-title bg-light text-warning rounded-3">
                                <i class="bx bx-euro font-size-24"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
{% endblock %}
