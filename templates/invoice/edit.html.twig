{% extends 'layouts/base.html.twig' %}

{% block title %}Modifier la facture {{ invoice.invoiceNumber }}{% endblock %}

{% block content %}
    {{ component('breadcrumb', {
        title: 'Modifier la facture ' ~ invoice.invoiceNumber,
        pagetitle: 'Factures',
        parent_route: 'invoice_show',
        parent_params: {id: invoice.id},
        parent_label: 'Détails de la facture'
    }) }}

    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Modifier la facture {{ invoice.invoiceNumber }}</h4>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <div class="alert alert-warning mb-4">
                        <i class="bx bx-info-circle me-2"></i>
                        <strong>Attention :</strong> Seules les factures en brouillon peuvent être modifiées.
                    </div>

                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.client) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.project) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.issuedAt) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.dueDate) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.amountHt) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.tvaRate) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.status) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.paymentTerms) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.internalNotes) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('invoice_show', {id: invoice.id}) }}" class="btn btn-light">
                                <i class="bx bx-x me-1"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bx bx-save me-1"></i> Enregistrer les modifications
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Informations facture</h5>
                    <div class="small">
                        <p class="mb-2">
                            <span class="text-muted">Numéro :</span><br>
                            <strong>{{ invoice.invoiceNumber }}</strong>
                        </p>
                        <p class="mb-2">
                            <span class="text-muted">Statut actuel :</span><br>
                            <span class="badge bg-secondary">{{ invoice.status }}</span>
                        </p>
                        <p class="mb-2">
                            <span class="text-muted">Créée le :</span><br>
                            {{ invoice.createdAt|date('d/m/Y à H:i') }}
                        </p>
                        <p class="mb-0">
                            <span class="text-muted">Dernière modification :</span><br>
                            {{ invoice.updatedAt|date('d/m/Y à H:i') }}
                        </p>
                    </div>
                </div>
            </div>

            <div class="card bg-light">
                <div class="card-body">
                    <h6>Restrictions</h6>
                    <ul class="small mb-0">
                        <li>Le numéro de facture ne peut pas être modifié</li>
                        <li>Seules les factures en brouillon peuvent être éditées</li>
                        <li>Les montants seront automatiquement recalculés</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
