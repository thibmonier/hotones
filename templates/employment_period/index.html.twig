{% extends 'layouts/base.html.twig' %}

{% block title %}Périodes d'emploi{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Périodes d'emploi</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
                        <li class="breadcrumb-item active">Périodes d'emploi</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="card-title mb-0">
                                <i class="bx bx-briefcase me-2"></i>
                                Liste des périodes d'emploi
                            </h4>
                        </div>
                        <div class="col-auto">
                            <div class="d-flex gap-2">
                                <!-- Filtre par contributeur -->
                                <form method="get" class="d-inline-block">
                                    <select name="contributor" class="form-select form-select-sm" onchange="this.form.submit()">
                                        <option value="">Tous les contributeurs</option>
                                        {% for contributor in contributors %}
                                            <option value="{{ contributor.id }}" {% if selectedContributor == contributor.id %}selected{% endif %}>
                                                {{ contributor.name }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </form>
                                
                                <a href="{{ path('employment_period_new') }}" class="btn btn-primary btn-sm">
                                    <i class="bx bx-plus me-1"></i> Nouvelle période
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {% if periods %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Contributeur</th>
                                        <th>Période</th>
                                        <th>Profils</th>
                                        <th class="text-end">Salaire</th>
                                        <th class="text-end">CJM</th>
                                        <th class="text-end">TJM</th>
                                        <th class="text-center">Temps</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for period in periods %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-xs me-3">
                                                        <span class="avatar-title bg-soft-primary text-primary rounded-circle">
                                                            {{ period.contributor.name|first|upper }}
                                                        </span>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">{{ period.contributor.name }}</h6>
                                                        <small class="text-muted">{{ period.contributor.email ?: 'Email non renseigné' }}</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>{{ period.startDate|date('d/m/Y') }}</strong>
                                                    {% if period.endDate %}
                                                        → {{ period.endDate|date('d/m/Y') }}
                                                    {% else %}
                                                        → <span class="badge bg-success">En cours</span>
                                                    {% endif %}
                                                </div>
                                                <small class="text-muted">
                                                    {% if period.endDate %}
                                                        {{ period.startDate.diff(period.endDate).days }} jours
                                                    {% else %}
                                                        {{ period.startDate.diff(date()) |abs.days }} jours
                                                    {% endif %}
                                                </small>
                                            </td>
                                            <td>
                                                {% if period.profiles|length > 0 %}
                                                    {% for profile in period.profiles %}
                                                        <span class="badge bg-soft-info text-info me-1">{{ profile.name }}</span>
                                                    {% endfor %}
                                                {% else %}
                                                    <span class="text-muted">Aucun profil</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-end">
                                                {% if period.salary %}
                                                    <strong>{{ period.salary|number_format(0, ',', ' ') }} €</strong>
                                                {% else %}
                                                    <span class="text-muted">Non renseigné</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-end">
                                                {% if period.cjm %}
                                                    <strong>{{ period.cjm|number_format(0, ',', ' ') }} €</strong>
                                                {% else %}
                                                    <span class="text-muted">Non renseigné</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-end">
                                                {% if period.tjm %}
                                                    <strong>{{ period.tjm|number_format(0, ',', ' ') }} €</strong>
                                                {% else %}
                                                    <span class="text-muted">Non renseigné</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                <div>
                                                    <span class="badge bg-soft-primary text-primary">
                                                        {{ period.weeklyHours }}h/sem
                                                    </span>
                                                </div>
                                                {% if period.workTimePercentage != '100.00' %}
                                                    <small class="text-warning">{{ period.workTimePercentage }}%</small>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-light dropdown-toggle" type="button" 
                                                            data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="bx bx-dots-horizontal-rounded"></i>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <a class="dropdown-item" href="{{ path('employment_period_show', {id: period.id}) }}">
                                                                <i class="bx bx-show me-2"></i>Voir les détails
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item" href="{{ path('employment_period_edit', {id: period.id}) }}">
                                                                <i class="bx bx-edit-alt me-2"></i>Modifier
                                                            </a>
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <a class="dropdown-item text-danger" href="#" 
                                                               onclick="confirmDelete('{{ period.id }}', '{{ period.contributor.name }}', '{{ period.startDate|date('d/m/Y') }}')">
                                                                <i class="bx bx-trash me-2"></i>Supprimer
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <div class="avatar-md mx-auto mb-4">
                                <span class="avatar-title bg-soft-primary text-primary rounded-circle font-size-20">
                                    <i class="bx bx-briefcase"></i>
                                </span>
                            </div>
                            <h5 class="font-size-16">Aucune période d'emploi trouvée</h5>
                            <p class="text-muted">Commencez par créer une nouvelle période d'emploi.</p>
                            <a href="{{ path('employment_period_new') }}" class="btn btn-primary">
                                <i class="bx bx-plus me-1"></i> Créer une période
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Formulaire caché pour la suppression -->
    <form id="delete-form" method="post" style="display: none;">
        <input type="hidden" name="_token" id="delete-token">
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function confirmDelete(periodId, contributorName, startDate) {
            const message = `Voulez-vous vraiment supprimer la période d'emploi de ${contributorName} commencée le ${startDate} ?\n\nCette action est irréversible.`;
            
            if (confirm(message)) {
                const form = document.getElementById('delete-form');
                const token = '{{ csrf_token('delete') }}' + periodId;
                
                form.action = `{{ path('employment_period_delete', {id: '__ID__'}) }}`.replace('__ID__', periodId);
                document.getElementById('delete-token').value = token;
                form.submit();
            }
        }
    </script>
{% endblock %}