{% extends 'layouts/base.html.twig' %}

{% block title %}Périodes d'emploi{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            {% include 'components/page_header.html.twig' with {
                title: 'Périodes d\'emploi',
                breadcrumb: [
                    {label: 'Administration', path: null},
                    {label: 'Périodes d\'emploi', path: null}
                ],
                actions: [
                    {label: 'Exporter CSV', path: 'employment_period_export_csv', params: filters, icon: 'bx-download', class: 'btn-outline-secondary', permission: 'ROLE_MANAGER'},
                    {label: 'Nouvelle période', path: 'employment_period_new', icon: 'bx-plus', class: 'btn-primary', permission: 'ROLE_COMPTA'}
                ]
            } %}
        </div>
    </div>

    <!-- Filtres -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    {% set activeFiltersCount = 0 %}
                    {% set activeFiltersCount = activeFiltersCount
                        + (filters.contributor ? 1 : 0)
                        + (filters.status ? 1 : 0)
                        + (sort != 'startDate' ? 1 : 0)
                        + (dir != 'DESC' ? 1 : 0)
                    %}
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="mb-0">Filtres
                            {% if activeFiltersCount > 0 %}
                                <span class="badge bg-info ms-2">{{ activeFiltersCount }}</span>
                            {% endif %}
                        </h5>
                        <div class="btn-group">
                            <a href="{{ path('employment_period_export_csv', filters) }}" class="btn btn-sm btn-outline-primary">Exporter CSV</a>
                            <a href="{{ path('employment_period_index', { reset: 1 }) }}" class="btn btn-sm btn-outline-secondary">Effacer</a>
                            <button type="button" class="btn btn-sm btn-outline-dark" data-bs-toggle="collapse" data-bs-target="#filters-employment-periods" aria-expanded="true" aria-controls="filters-employment-periods" id="filters-toggle-employment-periods">
                                <i class="bx bx-chevron-up"></i>
                            </button>
                        </div>
                    </div>
                    <div id="filters-employment-periods" class="collapse show">
                        {% set chips = [] %}
                        {% if filters.contributor %}
                            {% set contributorObj = (contributors|filter(c => c.id == filters.contributor)|first) %}
                            {% set chips = chips|merge(['Contributeur: ' ~ (contributorObj ? contributorObj.name : filters.contributor)]) %}
                        {% endif %}
                        {% if filters.status %}
                            {% set statusLabels = {'active': 'En cours', 'ended': 'Terminées'} %}
                            {% set chips = chips|merge(['Statut: ' ~ (statusLabels[filters.status] ?? filters.status)]) %}
                        {% endif %}
                        {% if sort != 'startDate' or dir != 'DESC' %}
                            {% set sortLabels = {'contributor': 'Contributeur', 'startDate': 'Date début', 'salary': 'Salaire', 'cjm': 'CJM', 'tjm': 'TJM'} %}
                            {% set chips = chips|merge(['Tri: ' ~ (sortLabels[sort] ?? sort) ~ ' ' ~ dir]) %}
                        {% endif %}
                        {% if chips|length > 0 %}
                            <div class="mb-2 small text-muted">
                                {% for c in chips %}
                                    <span class="badge bg-light text-dark me-1">{{ c }}</span>
                                {% endfor %}
                            </div>
                            <script>
                              (function(){
                                try { window.__ACTIVE_FILTERS = {{ chips|json_encode|raw }}; window.dispatchEvent(new Event('active-filters-changed')); } catch(e) {}
                              })();
                            </script>
                        {% else %}
                            <script>try { window.__ACTIVE_FILTERS = []; window.dispatchEvent(new Event('active-filters-changed')); } catch(e) {}</script>
                        {% endif %}
                        <form method="get" class="row g-2 align-items-end">
                            <div class="col-md-4">
                                <label class="form-label">Contributeur</label>
                                <select class="form-select" name="contributor">
                                    <option value="">Tous les contributeurs</option>
                                    {% for contributor in contributors %}
                                        <option value="{{ contributor.id }}" {% if filters.contributor == contributor.id %}selected{% endif %}>
                                            {{ contributor.name }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Statut</label>
                                <select class="form-select" name="status">
                                    <option value="">Tous</option>
                                    <option value="active" {% if filters.status == 'active' %}selected{% endif %}>En cours</option>
                                    <option value="ended" {% if filters.status == 'ended' %}selected{% endif %}>Terminées</option>
                                </select>
                            </div>
                            <div class="col-12 mt-2 d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Filtrer</button>
                                <a href="{{ path('employment_period_index', { reset: 1 }) }}" class="btn btn-outline-secondary">Réinitialiser</a>
                            </div>
                        </form>
                    </div>
                    <script>
                        (function(){
                          var key='filters:employment-periods:collapsed';
                          var el=document.getElementById('filters-employment-periods');
                          var btn=document.getElementById('filters-toggle-employment-periods');
                          if(!el||!btn) return;
                          try {
                            var hasActive={{ (chips|length > 0) ? 'true' : 'false' }};
                            var isSmall=window.matchMedia('(max-width: 767.98px)').matches;
                            var collapsed = localStorage.getItem(key) === '1' || (isSmall && !hasActive);
                            if (collapsed) { el.classList.remove('show'); btn.setAttribute('aria-expanded','false'); }
                            var updateIcon=function(){ var i=btn.querySelector('i'); if(!i) return; if (el.classList.contains('show')) { i.className='bx bx-chevron-up'; localStorage.setItem(key,'0'); btn.setAttribute('aria-expanded','true'); } else { i.className='bx bx-chevron-down'; localStorage.setItem(key,'1'); btn.setAttribute('aria-expanded','false'); } };
                            el.addEventListener('shown.bs.collapse', updateIcon);
                            el.addEventListener('hidden.bs.collapse', updateIcon);
                            updateIcon();
                          } catch(e) {}
                        })();
                    </script>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>
                                        <a href="{{ path('employment_period_index', filters|merge({ sort: 'contributor', dir: sort == 'contributor' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Contributeur
                                            {% if sort == 'contributor' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>
                                        <a href="{{ path('employment_period_index', filters|merge({ sort: 'startDate', dir: sort == 'startDate' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Période
                                            {% if sort == 'startDate' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>Profils</th>
                                    <th class="text-end">
                                        <a href="{{ path('employment_period_index', filters|merge({ sort: 'salary', dir: sort == 'salary' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Salaire
                                            {% if sort == 'salary' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th class="text-end">
                                        <a href="{{ path('employment_period_index', filters|merge({ sort: 'cjm', dir: sort == 'cjm' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            CJM
                                            {% if sort == 'cjm' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th class="text-end">
                                        <a href="{{ path('employment_period_index', filters|merge({ sort: 'tjm', dir: sort == 'tjm' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            TJM
                                            {% if sort == 'tjm' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th class="text-center">Temps</th>
                                    <th class="text-center">Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for period in periods %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-xs me-2">
                                                <span class="avatar-title rounded bg-primary">
                                                    {{ period.contributor.name|first|upper }}
                                                </span>
                                            </div>
                                            <div>
                                                <strong>{{ period.contributor.name }}</strong>
                                                {% if period.contributor.email %}
                                                    <div class="text-muted small">{{ period.contributor.email }}</div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <strong>{{ period.startDate|date('d/m/Y') }}</strong>
                                            {% if period.endDate %}
                                                → {{ period.endDate|date('d/m/Y') }}
                                            {% else %}
                                                → <span class="badge bg-success">En cours</span>
                                            {% endif %}
                                        </div>
                                        <small class="text-muted">
                                            {% if period.endDate %}
                                                {{ period.startDate.diff(period.endDate).days }} jours
                                            {% else %}
                                                {{ period.startDate.diff(date()).days |abs }} jours
                                            {% endif %}
                                        </small>
                                    </td>
                                    <td>
                                        {% if period.profiles|length > 0 %}
                                            {% for profile in period.profiles %}
                                                <span class="badge bg-info me-1">{{ profile.name }}</span>
                                            {% endfor %}
                                        {% else %}
                                            <span class="text-muted">—</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        {% if period.salary %}
                                            <strong>{{ period.salary|number_format(0, ',', ' ') }} €</strong>
                                        {% else %}
                                            <span class="text-muted">—</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        {% if period.cjm %}
                                            <strong>{{ period.cjm|number_format(0, ',', ' ') }} €</strong>
                                        {% else %}
                                            <span class="text-muted">—</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        {% if period.tjm %}
                                            <strong>{{ period.tjm|number_format(0, ',', ' ') }} €</strong>
                                        {% else %}
                                            <span class="text-muted">—</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-light text-dark">{{ period.weeklyHours }}h/sem</span>
                                        {% if period.workTimePercentage != '100.00' %}
                                            <div><small class="text-warning">{{ period.workTimePercentage }}%</small></div>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        {% if period.endDate == null or period.endDate >= date() %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Terminé</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('employment_period_show', {'id': period.id}) }}" class="btn btn-outline-secondary btn-sm" title="Voir">
                                                <i class="bx bx-show"></i>
                                            </a>
                                            <a href="{{ path('employment_period_edit', {'id': period.id}) }}" class="btn btn-outline-primary btn-sm" title="Modifier">
                                                <i class="bx bx-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="9" class="text-center text-muted">
                                        <div class="py-4">
                                            <i class="bx bx-briefcase font-size-24 mb-2"></i>
                                            <p>Aucune période d'emploi trouvée</p>
                                            {% if is_granted('ROLE_COMPTA') %}
                                            <a href="{{ path('employment_period_new') }}" class="btn btn-primary">Créer la première période</a>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {# Pagination #}
                    {% if periods.pageCount > 1 %}
                        {% include 'components/pagination.html.twig' with {
                            currentPage: periods.currentPageNumber,
                            totalPages: periods.pageCount,
                            itemsPerPage: periods.itemNumberPerPage,
                            totalItems: periods.totalItemCount,
                            queryParams: filters|default({})
                        } %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
