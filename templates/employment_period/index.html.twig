{% extends 'layouts/base.html.twig' %}

{% block title %}Périodes d'emploi{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            {% include 'components/page_header.html.twig' with {
                title: 'Périodes d\'emploi',
                breadcrumb: [
                    {label: 'Administration', path: null},
                    {label: 'Périodes d\'emploi', path: null}
                ],
                actions: [
                    {label: 'Exporter CSV', path: 'employment_period_export_csv', params: filters, icon: 'bx-download', class: 'btn-outline-secondary', permission: 'ROLE_MANAGER'},
                    {label: 'Nouvelle période', path: 'employment_period_new', icon: 'bx-plus', class: 'btn-primary', permission: 'ROLE_COMPTA'}
                ]
            } %}
        </div>
    </div>

    {# Filtres #}
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" action="{{ path('employment_period_index') }}" class="row g-2 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label">Contributeur</label>
                            <select class="form-select form-select-sm" name="contributor">
                                <option value="">Tous les contributeurs</option>
                                {% for contributor in contributors %}
                                    <option value="{{ contributor.id }}" {% if filters.contributor == contributor.id %}selected{% endif %}>
                                        {{ contributor.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Statut</label>
                            <select class="form-select form-select-sm" name="status">
                                <option value="">Tous</option>
                                <option value="active" {% if filters.status == 'active' %}selected{% endif %}>En cours</option>
                                <option value="ended" {% if filters.status == 'ended' %}selected{% endif %}>Terminées</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Par page</label>
                            <select class="form-select form-select-sm" name="per_page">
                                <option value="10" {% if app.request.query.get('per_page') == '10' %}selected{% endif %}>10</option>
                                <option value="25" {% if app.request.query.get('per_page', '25') == '25' %}selected{% endif %}>25</option>
                                <option value="50" {% if app.request.query.get('per_page') == '50' %}selected{% endif %}>50</option>
                                <option value="100" {% if app.request.query.get('per_page') == '100' %}selected{% endif %}>100</option>
                            </select>
                        </div>
                        <div class="col-12 mt-2">
                            <button type="submit" class="btn btn-primary btn-sm">Filtrer</button>
                            <a href="{{ path('employment_period_index') }}" class="btn btn-outline-secondary btn-sm">Réinitialiser</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Contributeur</th>
                                    <th>Période</th>
                                    <th>Profils</th>
                                    <th class="text-end">Salaire</th>
                                    <th class="text-end">CJM</th>
                                    <th class="text-end">TJM</th>
                                    <th class="text-center">Temps</th>
                                    <th class="text-center">Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for period in periods %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-xs me-2">
                                                <span class="avatar-title rounded bg-primary">
                                                    {{ period.contributor.name|first|upper }}
                                                </span>
                                            </div>
                                            <div>
                                                <strong>{{ period.contributor.name }}</strong>
                                                {% if period.contributor.email %}
                                                    <div class="text-muted small">{{ period.contributor.email }}</div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <strong>{{ period.startDate|date('d/m/Y') }}</strong>
                                            {% if period.endDate %}
                                                → {{ period.endDate|date('d/m/Y') }}
                                            {% else %}
                                                → <span class="badge bg-success">En cours</span>
                                            {% endif %}
                                        </div>
                                        <small class="text-muted">
                                            {% if period.endDate %}
                                                {{ period.startDate.diff(period.endDate).days }} jours
                                            {% else %}
                                                {{ period.startDate.diff(date()) |abs.days }} jours
                                            {% endif %}
                                        </small>
                                    </td>
                                    <td>
                                        {% if period.profiles|length > 0 %}
                                            {% for profile in period.profiles %}
                                                <span class="badge bg-info me-1">{{ profile.name }}</span>
                                            {% endfor %}
                                        {% else %}
                                            <span class="text-muted">—</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        {% if period.salary %}
                                            <strong>{{ period.salary|number_format(0, ',', ' ') }} €</strong>
                                        {% else %}
                                            <span class="text-muted">—</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        {% if period.cjm %}
                                            <strong>{{ period.cjm|number_format(0, ',', ' ') }} €</strong>
                                        {% else %}
                                            <span class="text-muted">—</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        {% if period.tjm %}
                                            <strong>{{ period.tjm|number_format(0, ',', ' ') }} €</strong>
                                        {% else %}
                                            <span class="text-muted">—</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-light text-dark">{{ period.weeklyHours }}h/sem</span>
                                        {% if period.workTimePercentage != '100.00' %}
                                            <div><small class="text-warning">{{ period.workTimePercentage }}%</small></div>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        {% if period.endDate == null or period.endDate >= date() %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Terminé</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('employment_period_show', {'id': period.id}) }}" class="btn btn-outline-secondary btn-sm" title="Voir">
                                                <i class="bx bx-show"></i>
                                            </a>
                                            <a href="{{ path('employment_period_edit', {'id': period.id}) }}" class="btn btn-outline-primary btn-sm" title="Modifier">
                                                <i class="bx bx-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="9" class="text-center text-muted">
                                        <div class="py-4">
                                            <i class="bx bx-briefcase font-size-24 mb-2"></i>
                                            <p>Aucune période d'emploi trouvée</p>
                                            {% if is_granted('ROLE_COMPTA') %}
                                            <a href="{{ path('employment_period_new') }}" class="btn btn-primary">Créer la première période</a>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {# Pagination #}
                    {% if periods.pageCount > 1 %}
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div class="text-muted">
                            Page {{ periods.currentPageNumber }} sur {{ periods.pageCount }} ({{ periods.totalItemCount }} périodes au total)
                        </div>
                        <div>
                            {{ knp_pagination_render(periods) }}
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
