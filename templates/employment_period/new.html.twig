{% extends 'layouts/base.html.twig' %}

{% block title %}Nouvelle période d'emploi{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Nouvelle période d'emploi</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('employment_period_index') }}">Périodes d'emploi</a></li>
                        <li class="breadcrumb-item active">Nouvelle période</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <form method="post" autocomplete="off">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Informations générales</h4>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="contributor_id" class="form-label">Contributeur <span class="text-danger">*</span></label>
                                <select name="contributor_id" id="contributor_id" class="form-select" required>
                                    <option value="">Sélectionner un contributeur</option>
                                    {% for contributor in contributors %}
                                        <option value="{{ contributor.id }}" {% if period.contributor is defined and period.contributor and period.contributor.id == contributor.id %}selected{% endif %}>
                                            {{ contributor.name }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="start_date" class="form-label">Date de début <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="start_date" name="start_date" 
                                       value="{{ period.startDate ? period.startDate|date('Y-m-d') : '' }}" required>
                            </div>
                            <div class="col-md-6">
                                <label for="end_date" class="form-label">Date de fin</label>
                                <input type="date" class="form-control" id="end_date" name="end_date" 
                                       value="{{ period.endDate ? period.endDate|date('Y-m-d') : '' }}">
                                <div class="form-text">Laisser vide pour une période en cours</div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label for="notes" class="form-label">Notes</label>
                                <textarea class="form-control" id="notes" name="notes" rows="3" 
                                          placeholder="Notes et commentaires sur cette période d'emploi">{{ period.notes }}</textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Données financières</h4>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label for="salary" class="form-label">Salaire mensuel (€)</label>
                                <input type="number" class="form-control" id="salary" name="salary" 
                                       step="0.01" min="0" value="{{ period.salary }}" 
                                       placeholder="3500.00">
                            </div>
                            <div class="col-md-4">
                                <label for="cjm" class="form-label">CJM - Coût Journalier Moyen (€)</label>
                                <input type="number" class="form-control" id="cjm" name="cjm" 
                                       step="0.01" min="0" value="{{ period.cjm }}" 
                                       placeholder="450.00">
                            </div>
                            <div class="col-md-4">
                                <label for="tjm" class="form-label">TJM - Taux Journalier Moyen (€)</label>
                                <input type="number" class="form-control" id="tjm" name="tjm" 
                                       step="0.01" min="0" value="{{ period.tjm }}" 
                                       placeholder="550.00">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="weekly_hours" class="form-label">Heures hebdomadaires</label>
                                <input type="number" class="form-control" id="weekly_hours" name="weekly_hours" 
                                       step="0.5" min="1" max="60" value="{{ period.weeklyHours ?: 35 }}" 
                                       placeholder="35.0">
                            </div>
                            <div class="col-md-6">
                                <label for="work_time_percentage" class="form-label">Pourcentage temps de travail (%)</label>
                                <input type="number" class="form-control" id="work_time_percentage" name="work_time_percentage" 
                                       step="0.1" min="1" max="100" value="{{ period.workTimePercentage ?: 100 }}" 
                                       placeholder="100.0">
                                <div class="form-text">Pour le temps partiel (ex: 80%)</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Profils associés</h4>
                    </div>
                    <div class="card-body">
                        {% if profiles %}
                            {% for profile in profiles %}
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" name="profiles[]" 
                                           value="{{ profile.id }}" id="profile_{{ profile.id }}"
                                           {% if period.profiles and profile in period.profiles %}checked{% endif %}>
                                    <label class="form-check-label" for="profile_{{ profile.id }}">
                                        <strong>{{ profile.name }}</strong>
                                        {% if profile.description %}
                                            <br><small class="text-muted">{{ profile.description }}</small>
                                        {% endif %}
                                    </label>
                                </div>
                            {% endfor %}
                        {% else %}
                            <p class="text-muted">Aucun profil métier disponible.</p>
                        {% endif %}
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Aide</h4>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <h6 class="alert-heading">Informations</h6>
                            <ul class="mb-0 small">
                                <li><strong>CJM</strong> : Coût journalier pour l'entreprise</li>
                                <li><strong>TJM</strong> : Taux journalier facturable au client</li>
                                <li><strong>Profils</strong> : Compétences et rôles du contributeur</li>
                                <li>Les dates de début/fin définissent la période d'activité</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between">
                    <a href="{{ path('employment_period_index') }}" class="btn btn-secondary">
                        <i class="bx bx-arrow-back me-1"></i> Annuler
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bx bx-save me-1"></i> Créer la période
                    </button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Validation côté client
        document.querySelector('form').addEventListener('submit', function(e) {
            const startDate = document.getElementById('start_date').value;
            const endDate = document.getElementById('end_date').value;
            
            if (endDate && endDate < startDate) {
                e.preventDefault();
                alert('La date de fin ne peut pas être antérieure à la date de début.');
                return false;
            }
        });
    </script>
{% endblock %}