{% extends 'layouts/base.html.twig' %}

{% block title %}Dashboard Commercial{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Performances Commerciales</h4>
            </div>
        </div>
    </div>

    {# Filtres uniformisés #}
    {% set currentYear = 'now'|date('Y')|number_format(0, '', '') %}
    {% set activeFilters = [] %}
    {% if selectedYear != currentYear %}
        {% set activeFilters = activeFilters|merge(['Année: ' ~ selectedYear]) %}
    {% endif %}
    {% if filterUserRole %}
        {% set roleName = filterUserRole == 'commercial' ? 'Commercial' : 'Chef de projet' %}
        {% set activeFilters = activeFilters|merge(['Rôle: ' ~ roleName]) %}
    {% endif %}
    {% if filterUserId %}
        {% set userName = (users|filter(u => u.id == filterUserId)|first).fullName|default('#' ~ filterUserId) %}
        {% set activeFilters = activeFilters|merge(['Utilisateur: ' ~ userName]) %}
    {% endif %}

    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="mb-0">
                            <i class="bx bx-filter-alt me-2"></i>Filtres
                            {% if activeFilters|length > 0 %}
                                <span class="badge bg-info ms-2">{{ activeFilters|length }}</span>
                            {% endif %}
                        </h5>
                        <div class="btn-group">
                            {# Années rapides #}
                            <div class="btn-group me-2">
                                {% for year in availableYears|slice(0, 3) %}
                                    <a href="{{ path('sales_dashboard_index', {year: year}) }}" class="btn btn-sm btn-outline-primary {% if selectedYear == year %}active{% endif %}">{{ year }}</a>
                                {% endfor %}
                            </div>
                            <a href="{{ path('sales_dashboard_export_pdf', {year: selectedYear, user_id: filterUserId, user_role: filterUserRole}) }}" class="btn btn-sm btn-outline-secondary" title="Exporter PDF">
                                <i class="bx bx-download"></i>
                            </a>
                            <a href="{{ path('sales_dashboard_index') }}" class="btn btn-sm btn-outline-secondary" title="Réinitialiser">
                                <i class="bx bx-reset"></i>
                            </a>
                            <button type="button" class="btn btn-sm btn-outline-dark" data-bs-toggle="collapse" data-bs-target="#filters-sales" aria-expanded="true" id="filters-toggle-sales">
                                <i class="bx bx-chevron-up"></i>
                            </button>
                        </div>
                    </div>

                    <div id="filters-sales" class="collapse show">
                        {# Chips des filtres actifs #}
                        {% if activeFilters|length > 0 %}
                            <div class="mb-3">
                                {% for chip in activeFilters %}
                                    <span class="badge bg-light text-dark me-1 mb-1">{{ chip }}</span>
                                {% endfor %}
                            </div>
                        {% endif %}

                        {# Période analysée #}
                        <div class="alert alert-info py-2 mb-3">
                            <i class="bx bx-calendar me-2"></i>
                            Année analysée : <strong>{{ selectedYear }}</strong>
                        </div>

                        <form method="get" action="{{ path('sales_dashboard_index') }}" class="row g-2 align-items-end" id="filter-form">
                            <div class="col-md-2">
                                <label class="form-label">Année</label>
                                <select class="form-select form-select-sm" name="year" id="year-select" onchange="this.form.submit()">
                                    {% for year in availableYears %}
                                        <option value="{{ year }}" {% if year == selectedYear %}selected{% endif %}>{{ year }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Filtrer par rôle</label>
                                <select class="form-select form-select-sm" name="user_role" id="role-select" onchange="toggleUserSelect()">
                                    <option value="">Tous</option>
                                    <option value="commercial" {% if filterUserRole == 'commercial' %}selected{% endif %}>Commercial</option>
                                    <option value="chef_projet" {% if filterUserRole == 'chef_projet' %}selected{% endif %}>Chef de projet</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Utilisateur</label>
                                <select class="form-select form-select-sm" name="user_id" id="user-select" onchange="this.form.submit()" {% if not filterUserRole %}style="display:none;"{% endif %}>
                                    <option value="">Tous les utilisateurs</option>
                                    {% for user in users %}
                                        <option value="{{ user.id }}" {% if filterUserId == user.id %}selected{% endif %}>{{ user.fullName }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-12 mt-2 d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Filtrer</button>
                                <a href="{{ path('sales_dashboard_index') }}" class="btn btn-outline-secondary">Réinitialiser</a>
                            </div>
                        </form>
                    </div>

                    <script>
                        (function(){
                            var key = 'filters:sales:collapsed';
                            var el = document.getElementById('filters-sales');
                            var btn = document.getElementById('filters-toggle-sales');
                            if (!el || !btn) return;
                            try {
                                var hasActive = {{ activeFilters|length > 0 ? 'true' : 'false' }};
                                var isSmall = window.matchMedia('(max-width: 767.98px)').matches;
                                var collapsed = localStorage.getItem(key) === '1' || (isSmall && !hasActive);
                                if (collapsed) { el.classList.remove('show'); btn.setAttribute('aria-expanded', 'false'); }
                                var updateIcon = function() {
                                    var i = btn.querySelector('i');
                                    if (!i) return;
                                    if (el.classList.contains('show')) {
                                        i.className = 'bx bx-chevron-up';
                                        localStorage.setItem(key, '0');
                                        btn.setAttribute('aria-expanded', 'true');
                                    } else {
                                        i.className = 'bx bx-chevron-down';
                                        localStorage.setItem(key, '1');
                                        btn.setAttribute('aria-expanded', 'false');
                                    }
                                };
                                el.addEventListener('shown.bs.collapse', updateIcon);
                                el.addEventListener('hidden.bs.collapse', updateIcon);
                                updateIcon();
                            } catch(e) {}
                        })();
                    </script>
                </div>
            </div>
        </div>
    </div>

    {# KPI Cards #}
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card card-h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted mb-3 lh-1 d-block">Devis en attente</span>
                            <h4 class="mb-3">
                                <span class="counter-value text-primary">{{ pendingCount }}</span>
                            </h4>
                            <small class="text-muted">À signer</small>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <div class="avatar-sm bg-white rounded">
                                <span class="avatar-title bg-white text-dark font-size-24">
                                    <i class="bx bx-file"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted mb-3 lh-1 d-block">CA Signé {{ selectedYear }}</span>
                            <h4 class="mb-3">
                                <span class="counter-value text-success">{{ signedRevenue|number_format(0, ',', ' ') }}€</span>
                            </h4>
                            <small class="text-muted">Signés, gagnés, terminés</small>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <div class="avatar-sm bg-white rounded">
                                <span class="avatar-title bg-white text-dark font-size-24">
                                    <i class="bx bx-euro"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted mb-3 lh-1 d-block">CA Moyen / Mois</span>
                            <h4 class="mb-3">
                                <span class="counter-value text-info">{{ (signedRevenue / 12)|number_format(0, ',', ' ') }}€</span>
                            </h4>
                            <small class="text-muted">Moyenne mensuelle</small>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <div class="avatar-sm bg-white rounded">
                                <span class="avatar-title bg-white text-dark font-size-24">
                                    <i class="bx bx-trending-up"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted mb-3 lh-1 d-block">Taux de conversion</span>
                            <h4 class="mb-3">
                                <span class="counter-value {% if conversionRate >= 50 %}text-success{% elseif conversionRate >= 30 %}text-warning{% else %}text-danger{% endif %}">
                                    {{ conversionRate|number_format(1, ',', ' ') }}%
                                </span>
                            </h4>
                            <small class="text-muted">Devis signés / Créés</small>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <div class="avatar-sm bg-white rounded">
                                <span class="avatar-title bg-white text-dark font-size-24">
                                    <i class="bx bx-target-lock"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Comparaison annuelle #}
    {% if yearComparison %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0"><i class="bx bx-stats me-2"></i>Comparaison {{ yearComparison.current.year }} vs {{ yearComparison.previous.year }}</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="text-center">
                                <p class="text-muted mb-2">Chiffre d'affaires</p>
                                <h4>
                                    {{ yearComparison.current.revenue|number_format(0, ',', ' ') }}€
                                    {% set revenueDiff = yearComparison.current.revenue - yearComparison.previous.revenue %}
                                    {% set revenuePercent = yearComparison.previous.revenue > 0 ? ((revenueDiff / yearComparison.previous.revenue) * 100) : 0 %}
                                    <small class="{% if revenueDiff >= 0 %}text-success{% else %}text-danger{% endif %}">
                                        <i class="bx bx-{% if revenueDiff >= 0 %}trending-up{% else %}trending-down{% endif %}"></i>
                                        {{ revenuePercent|abs|number_format(1, ',', ' ') }}%
                                    </small>
                                </h4>
                                <p class="text-muted small">{{ yearComparison.previous.year }}: {{ yearComparison.previous.revenue|number_format(0, ',', ' ') }}€</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <p class="text-muted mb-2">Nombre de devis</p>
                                <h4>
                                    {{ yearComparison.current.count }}
                                    {% set countDiff = yearComparison.current.count - yearComparison.previous.count %}
                                    {% set countPercent = yearComparison.previous.count > 0 ? ((countDiff / yearComparison.previous.count) * 100) : 0 %}
                                    <small class="{% if countDiff >= 0 %}text-success{% else %}text-danger{% endif %}">
                                        <i class="bx bx-{% if countDiff >= 0 %}trending-up{% else %}trending-down{% endif %}"></i>
                                        {{ countPercent|abs|number_format(1, ',', ' ') }}%
                                    </small>
                                </h4>
                                <p class="text-muted small">{{ yearComparison.previous.year }}: {{ yearComparison.previous.count }}</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <p class="text-muted mb-2">Taux de conversion</p>
                                <h4>
                                    {{ yearComparison.current.conversion_rate|number_format(1, ',', ' ') }}%
                                    {% set conversionDiff = yearComparison.current.conversion_rate - yearComparison.previous.conversion_rate %}
                                    <small class="{% if conversionDiff >= 0 %}text-success{% else %}text-danger{% endif %}">
                                        <i class="bx bx-{% if conversionDiff >= 0 %}trending-up{% else %}trending-down{% endif %}"></i>
                                        {{ conversionDiff|abs|number_format(1, ',', ' ') }} pts
                                    </small>
                                </h4>
                                <p class="text-muted small">{{ yearComparison.previous.year }}: {{ yearComparison.previous.conversion_rate|number_format(1, ',', ' ') }}%</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    {# Évolution du CA #}
    <div class="row">
        <div class="col-xl-8">
            <div class="card">
                <div class="card-header">
                    <h5 class=\"card-title mb-0\"><i class=\"bx bx-line-chart me-2\"></i>Évolution Commerciale ({{ selectedYear }})</h5>
                </div>
                <div class="card-body">
                    <canvas id="revenueEvolutionChart" height="100"></canvas>
                </div>
            </div>
        </div>

        <div class="col-xl-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0"><i class="bx bx-receipt me-2"></i>Devis récents</h5>
                </div>
                <div class="card-body">
                    {% if recentOrders is empty %}
                        <p class="text-muted">Aucun devis récent.</p>
                    {% else %}
                        <div class="list-group list-group-flush">
                            {% for order in recentOrders %}
                                <a href="{{ path('order_show', {id: order.id}) }}" class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">{{ order.orderNumber }}</h6>
                                            <p class="mb-1 text-muted small">{{ order.project.name }}</p>
                                        </div>
                                        <div class="text-end">
                                            {{ order_status_badge(order.status)|raw }}
                                            <div class="text-muted small mt-1">{{ order.totalAmount|number_format(0, ',', ' ') }}€</div>
                                        </div>
                                    </div>
                                </a>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
                <div class="card-footer text-center">
                    <a href="{{ path('order_index') }}" class="btn btn-sm btn-link">Voir tous les devis</a>
                </div>
            </div>
        </div>
    </div>

    {# CA par statut #}
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0"><i class="bx bx-bar-chart me-2"></i>Répartition du CA par statut</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Statut</th>
                                    <th class="text-end">Nombre de devis</th>
                                    <th class="text-end">CA Total (€)</th>
                                    <th class="text-end">CA Moyen (€)</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for stat in statsByStatus %}
                                    <tr>
                                        <td>
                                            {{ order_status_badge(stat.status)|raw }}
                                        </td>
                                        <td class="text-end">{{ stat.count }}</td>
                                        <td class="text-end fw-bold">{{ stat.total|number_format(0, ',', ' ') }}</td>
                                        <td class="text-end text-muted">
                                            {% if stat.count > 0 %}
                                                {{ (stat.total / stat.count)|number_format(0, ',', ' ') }}
                                            {% else %}
                                                -
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr class="table-active">
                                    <th>Total</th>
                                    <th class="text-end">
                                        {% set totalCount = 0 %}
                                        {% for stat in statsByStatus %}
                                            {% set totalCount = totalCount + stat.count %}
                                        {% endfor %}
                                        {{ totalCount }}
                                    </th>
                                    <th class="text-end">
                                        {% set totalAmount = 0 %}
                                        {% for stat in statsByStatus %}
                                            {% set totalAmount = totalAmount + stat.total %}
                                        {% endfor %}
                                        {{ totalAmount|number_format(0, ',', ' ') }}
                                    </th>
                                    <th class="text-end">
                                        {% if totalCount > 0 %}
                                            {{ (totalAmount / totalCount)|number_format(0, ',', ' ') }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Gestion des filtres
        function toggleUserSelect() {
            const roleSelect = document.getElementById('role-select');
            const userSelect = document.getElementById('user-select');

            if (roleSelect.value) {
                userSelect.style.display = 'inline-block';
            } else {
                userSelect.style.display = 'none';
                userSelect.value = '';
                document.getElementById('filter-form').submit();
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Graphique d'évolution du CA
            const ctx = document.getElementById('revenueEvolutionChart');
            if (ctx) {
                new Chart(ctx, {
                    type: 'bar', // Type de base en bar pour l'histogramme
                    data: {
                        labels: {{ evolutionData.labels|json_encode|raw }},
                        datasets: [
                            {
                                label: 'Volume de devis créés',
                                data: {{ evolutionData.volume_data|json_encode|raw }},
                                type: 'bar',
                                backgroundColor: 'rgba(54, 162, 235, 0.5)',
                                borderColor: 'rgb(54, 162, 235)',
                                yAxisID: 'yVolume',
                            },
                            {
                                label: 'CA Signé (€)',
                                data: {{ evolutionData.revenue_data|json_encode|raw }},
                                type: 'line',
                                borderColor: 'rgb(75, 192, 192)',
                                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                                tension: 0.4,
                                fill: true,
                                yAxisID: 'yRevenue',
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                display: true,
                                position: 'top'
                            },
                            tooltip: {
                                mode: 'index',
                                intersect: false,
                            }
                        },
                        scales: {
                            x: {
                                stacked: true,
                            },
                            yVolume: {
                                type: 'linear',
                                display: true,
                                position: 'left',
                                title: {
                                    display: true,
                                    text: 'Volume de devis'
                                }
                            },
                            yRevenue: {
                                type: 'linear',
                                display: true,
                                position: 'right',
                                title: {
                                    display: true,
                                    text: 'CA Signé (€)'
                                },
                                grid: {
                                    drawOnChartArea: false, // seulement pour cet axe
                                },
                                ticks: {
                                    callback: function(value) {
                                        return value.toLocaleString('fr-FR') + ' €';
                                    }
                                }
                            }
                        }
                    }
                });
            }
        });
    </script>
{% endblock %}
