{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Informations générales</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    {{ form_label(form.service) }}
                    {{ form_widget(form.service) }}
                    {{ form_errors(form.service) }}
                    {% if form.service.vars.help %}
                        <div class="form-text">{{ form.service.vars.help }}</div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    {{ form_label(form.customName) }}
                    {{ form_widget(form.customName) }}
                    {{ form_errors(form.customName) }}
                    {% if form.customName.vars.help %}
                        <div class="form-text">{{ form.customName.vars.help }}</div>
                    {% endif %}
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.billingPeriod) }}
                        {{ form_widget(form.billingPeriod) }}
                        {{ form_errors(form.billingPeriod) }}
                        {% if form.billingPeriod.vars.help %}
                            <div class="form-text">{{ form.billingPeriod.vars.help }}</div>
                        {% endif %}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.status) }}
                        {{ form_widget(form.status) }}
                        {{ form_errors(form.status) }}
                        {% if form.status.vars.help %}
                            <div class="form-text">{{ form.status.vars.help }}</div>
                        {% endif %}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8 mb-3">
                        <label for="{{ form.price.vars.id }}" class="form-label">
                            Prix <span id="price-period-label"></span>
                        </label>
                        {{ form_widget(form.price) }}
                        {{ form_errors(form.price) }}
                        <div class="form-text" id="price-help-text">
                            Prix selon la période de facturation sélectionnée ci-dessus
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        {{ form_label(form.currency) }}
                        {{ form_widget(form.currency) }}
                        {{ form_errors(form.currency) }}
                    </div>
                </div>

                <script>
                (function() {
                    const billingPeriodSelect = document.getElementById('{{ form.billingPeriod.vars.id }}');
                    const pricePeriodLabel = document.getElementById('price-period-label');
                    const priceHelpText = document.getElementById('price-help-text');

                    function updatePriceLabel() {
                        const period = billingPeriodSelect.value;
                        if (period === 'monthly') {
                            pricePeriodLabel.textContent = 'par mois';
                            pricePeriodLabel.className = 'text-info';
                            priceHelpText.innerHTML = '<strong>Facturation mensuelle :</strong> Le prix saisi sera facturé chaque mois. Le coût annuel sera calculé automatiquement (×12).';
                        } else if (period === 'yearly') {
                            pricePeriodLabel.textContent = 'par an';
                            pricePeriodLabel.className = 'text-primary';
                            priceHelpText.innerHTML = '<strong>Facturation annuelle :</strong> Le prix saisi sera facturé chaque année. Le coût mensuel sera calculé automatiquement (÷12).';
                        } else {
                            pricePeriodLabel.textContent = '';
                            priceHelpText.textContent = 'Prix selon la période de facturation sélectionnée ci-dessus';
                        }
                    }

                    if (billingPeriodSelect && pricePeriodLabel) {
                        billingPeriodSelect.addEventListener('change', updatePriceLabel);
                        updatePriceLabel(); // Init
                    }
                })();
                </script>

                <div class="mb-3">
                    {{ form_label(form.quantity) }}
                    {{ form_widget(form.quantity) }}
                    {{ form_errors(form.quantity) }}
                    {% if form.quantity.vars.help %}
                        <div class="form-text">{{ form.quantity.vars.help }}</div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        {{ form_widget(form.autoRenewal) }}
                        {{ form_label(form.autoRenewal) }}
                    </div>
                    {{ form_errors(form.autoRenewal) }}
                    {% if form.autoRenewal.vars.help %}
                        <div class="form-text ms-4">{{ form.autoRenewal.vars.help }}</div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Dates</h5>
            </div>
            <div class="card-body">
