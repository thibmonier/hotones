{% extends 'layouts/base.html.twig' %}

{% block title %}Abonnements SaaS{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            {% include 'components/page_header.html.twig' with {
                title: 'Abonnements SaaS',
                breadcrumb: [
                    {label: 'Gestion', path: null},
                    {label: 'Abonnements SaaS', path: 'saas_dashboard'},
                    {label: 'Liste', path: null}
                ],
                actions: [
                    {label: 'Dashboard', path: 'saas_dashboard', icon: 'bx-line-chart', class: 'btn-outline-primary', permission: 'ROLE_ADMIN'},
                    {label: 'Nouvel abonnement', path: 'subscription_new', icon: 'bx-plus', class: 'btn-primary', permission: 'ROLE_ADMIN'}
                ]
            } %}
        </div>
    </div>

    <!-- Filtres -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    {% set activeFiltersCount = 0 %}
                    {% set activeFiltersCount = activeFiltersCount
                        + (filters.search ? 1 : 0)
                        + (filters.status ? 1 : 0)
                        + (filters.billing_period ? 1 : 0)
                        + (filters.category ? 1 : 0)
                        + (filters.vendor ? 1 : 0)
                        + (filters.provider ? 1 : 0)
                        + (sort != 'nextRenewalDate' ? 1 : 0)
                        + (dir != 'ASC' ? 1 : 0)
                    %}
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="mb-0">Filtres
                            {% if activeFiltersCount > 0 %}
                                <span class="badge bg-info ms-2">{{ activeFiltersCount }}</span>
                            {% endif %}
                        </h5>
                        <div class="btn-group">
                            <a href="{{ path('subscription_index', { reset: 1 }) }}" class="btn btn-sm btn-outline-secondary">Effacer</a>
                            <button type="button" class="btn btn-sm btn-outline-dark" data-bs-toggle="collapse" data-bs-target="#filters-subscriptions" aria-expanded="true" aria-controls="filters-subscriptions" id="filters-toggle-subscriptions">
                                <i class="bx bx-chevron-up"></i>
                            </button>
                        </div>
                    </div>
                    <div id="filters-subscriptions" class="collapse show">
                        <form method="get" class="row g-2 align-items-end">
                            <div class="col-12 mb-2">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bx bx-search"></i></span>
                                    <input type="text" class="form-control" name="search" value="{{ filters.search }}" placeholder="Rechercher un abonnement (nom, description, fournisseur, canal)...">
                                    {% if filters.search %}
                                        <a href="{{ path('subscription_index', filters|merge({search: null})) }}" class="btn btn-outline-secondary" title="Effacer la recherche">
                                            <i class="bx bx-x"></i>
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Statut</label>
                                <select class="form-select" name="status">
                                    <option value="">Tous</option>
                                    <option value="active" {% if filters.status == 'active' %}selected{% endif %}>Actif</option>
                                    <option value="cancelled" {% if filters.status == 'cancelled' %}selected{% endif %}>Annulé</option>
                                    <option value="suspended" {% if filters.status == 'suspended' %}selected{% endif %}>Suspendu</option>
                                    <option value="expired" {% if filters.status == 'expired' %}selected{% endif %}>Expiré</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Facturation</label>
                                <select class="form-select" name="billing_period">
                                    <option value="">Tous</option>
                                    <option value="monthly" {% if filters.billing_period == 'monthly' %}selected{% endif %}>Mensuel</option>
                                    <option value="yearly" {% if filters.billing_period == 'yearly' %}selected{% endif %}>Annuel</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Catégorie</label>
                                <input type="text" class="form-select" name="category" value="{{ filters.category }}" placeholder="Streaming, Productivité...">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Fournisseur</label>
                                <input type="text" class="form-control" name="vendor" value="{{ filters.vendor }}" placeholder="Disney, Netflix...">
                            </div>
                            <div class="col-12 mt-2 d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Filtrer</button>
                                <a href="{{ path('subscription_index', { reset: 1 }) }}" class="btn btn-outline-secondary">Réinitialiser</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>
                                        <a href="{{ path('subscription_index', filters|merge({ sort: 'name', dir: sort == 'name' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Abonnement
                                            {% if sort == 'name' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>
                                        <a href="{{ path('subscription_index', filters|merge({ sort: 'vendor', dir: sort == 'vendor' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Fournisseur
                                            {% if sort == 'vendor' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>
                                        <a href="{{ path('subscription_index', filters|merge({ sort: 'status', dir: sort == 'status' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Statut
                                            {% if sort == 'status' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>Facturation</th>
                                    <th>
                                        <a href="{{ path('subscription_index', filters|merge({ sort: 'price', dir: sort == 'price' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Prix
                                            {% if sort == 'price' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>Quantité</th>
                                    <th>Coût mensuel</th>
                                    <th>
                                        <a href="{{ path('subscription_index', filters|merge({ sort: 'nextRenewalDate', dir: sort == 'nextRenewalDate' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Prochain renouvellement
                                            {% if sort == 'nextRenewalDate' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for subscription in subscriptions %}
                                    <tr>
                                        <td>
                                            <h6 class="mb-0">
                                                <a href="{{ path('subscription_show', {id: subscription.id}) }}">
                                                    {{ subscription.displayName }}
                                                </a>
                                            </h6>
                                            {% if subscription.service.category %}
                                                <small class="text-muted"><i class="bx bx-category"></i> {{ subscription.service.category }}</small>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if subscription.service.provider %}
                                                <strong>{{ subscription.service.provider.name }}</strong>
                                            {% else %}
                                                <small class="text-muted">Direct</small>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% set statusClass = {
                                                'active': 'success',
                                                'cancelled': 'danger',
                                                'suspended': 'warning',
                                                'expired': 'secondary'
                                            } %}
                                            <span class="badge bg-{{ statusClass[subscription.status] ?? 'secondary' }}">
                                                {{ subscription.status == 'active' ? 'Actif' :
                                                   (subscription.status == 'cancelled' ? 'Annulé' :
                                                   (subscription.status == 'suspended' ? 'Suspendu' : 'Expiré')) }}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-{{ subscription.billingPeriod == 'monthly' ? 'info' : 'primary' }}">
                                                {{ subscription.billingPeriod == 'monthly' ? 'Mensuel' : 'Annuel' }}
                                            </span>
                                        </td>
                                        <td>{{ subscription.price|number_format(2, ',', ' ') }}€</td>
                                        <td>{{ subscription.quantity }}</td>
                                        <td>{{ subscription.monthlyCost|number_format(2, ',', ' ') }}€</td>
                                        <td>{{ subscription.nextRenewalDate ? subscription.nextRenewalDate|date('d/m/Y') : '-' }}</td>
                                        <td class="text-end">
                                            <div class="btn-group">
                                                <a href="{{ path('subscription_show', {id: subscription.id}) }}" class="btn btn-sm btn-outline-primary" title="Voir">
                                                    <i class="bx bx-show"></i>
                                                </a>
                                                <a href="{{ path('subscription_edit', {id: subscription.id}) }}" class="btn btn-sm btn-outline-secondary" title="Modifier">
                                                    <i class="bx bx-edit"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="9" class="text-center text-muted py-4">
                                            <p>Aucun abonnement trouvé</p>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {# Pagination #}
                    {% if subscriptions.pageCount > 1 %}
                        <div class="mt-3">
                            {{ knp_pagination_render(subscriptions) }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
