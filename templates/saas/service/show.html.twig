{% extends 'layouts/base.html.twig' %}

{% block title %}{{ service.name }} - Service SaaS{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            {% include 'components/page_header.html.twig' with {
                title: service.name,
                breadcrumb: [
                    {label: 'Gestion', path: null},
                    {label: 'Abonnements SaaS', path: 'saas_dashboard'},
                    {label: 'Services', path: 'saas_service_index'},
                    {label: service.name, path: null}
                ],
                actions: [
                    {label: 'Modifier', path: 'saas_service_edit', params: {id: service.id}, icon: 'bx-edit', class: 'btn-primary', permission: 'ROLE_ADMIN'}
                ]
            } %}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Informations générales</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tbody>
                            <tr>
                                <th class="text-muted" style="width: 200px;">Nom</th>
                                <td><strong>{{ service.name }}</strong></td>
                            </tr>
                            {% if service.description %}
                            <tr>
                                <th class="text-muted">Description</th>
                                <td>{{ service.description|nl2br }}</td>
                            </tr>
                            {% endif %}
                            <tr>
                                <th class="text-muted">Fournisseur</th>
                                <td>
                                    {% if service.provider %}
                                        {{ service.provider.name }}
                                    {% else %}
                                        <span class="text-muted">Souscription directe</span>
                                    {% endif %}
                                </td>
                            </tr>
                            {% if service.category %}
                            <tr>
                                <th class="text-muted">Catégorie</th>
                                <td><span class="badge bg-secondary">{{ service.category }}</span></td>
                            </tr>
                            {% endif %}
                            {% if service.serviceUrl %}
                            <tr>
                                <th class="text-muted">URL du service</th>
                                <td><a href="{{ service.serviceUrl }}" target="_blank" rel="noopener">{{ service.serviceUrl }} <i class="bx bx-link-external"></i></a></td>
                            </tr>
                            {% endif %}
                            <tr>
                                <th class="text-muted">Statut</th>
                                <td>
                                    {% if service.active %}
                                        <span class="badge bg-success">Actif</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Inactif</span>
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Prix de référence</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tbody>
                            <tr>
                                <th class="text-muted" style="width: 200px;">Prix mensuel</th>
                                <td>
                                    {% if service.defaultMonthlyPrice %}
                                        <strong>{{ service.defaultMonthlyPrice|number_format(2, ',', ' ') }} {{ service.currency }}</strong> / mois
                                    {% else %}
                                        <span class="text-muted">Non défini</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th class="text-muted">Prix annuel</th>
                                <td>
                                    {% if service.defaultYearlyPrice %}
                                        <strong>{{ service.defaultYearlyPrice|number_format(2, ',', ' ') }} {{ service.currency }}</strong> / an
                                    {% else %}
                                        <span class="text-muted">Non défini</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th class="text-muted">Devise</th>
                                <td>{{ service.currency }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            {% if service.subscriptions|length > 0 %}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        Abonnements actifs
                        <span class="badge bg-info ms-2">{{ service.subscriptions|length }}</span>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Nom</th>
                                    <th>Statut</th>
                                    <th>Prix</th>
                                    <th>Prochain renouvellement</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for subscription in service.subscriptions %}
                                    <tr>
                                        <td>{{ subscription.displayName }}</td>
                                        <td>
                                            {% set statusClass = {
                                                'active': 'success',
                                                'cancelled': 'danger',
                                                'suspended': 'warning',
                                                'expired': 'secondary'
                                            } %}
                                            <span class="badge bg-{{ statusClass[subscription.status] ?? 'secondary' }}">
                                                {{ subscription.status == 'active' ? 'Actif' :
                                                   (subscription.status == 'cancelled' ? 'Annulé' :
                                                   (subscription.status == 'suspended' ? 'Suspendu' : 'Expiré')) }}
                                            </span>
                                        </td>
                                        <td>{{ subscription.price|number_format(2, ',', ' ') }}€</td>
                                        <td>{{ subscription.nextRenewalDate|date('d/m/Y') }}</td>
                                        <td class="text-end">
                                            <a href="{{ path('saas_subscription_show', {id: subscription.id}) }}" class="btn btn-sm btn-outline-primary">
                                                <i class="bx bx-show"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            {% endif %}

            {% if service.notes %}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Notes</h5>
                </div>
                <div class="card-body">
                    {{ service.notes|nl2br }}
                </div>
            </div>
            {% endif %}
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('saas_subscription_new') }}" class="btn btn-success w-100">
                            <i class="bx bx-plus"></i> Créer un abonnement
                        </a>

                        <hr>

                        <a href="{{ path('saas_service_edit', {id: service.id}) }}" class="btn btn-primary w-100">
                            <i class="bx bx-edit"></i> Modifier
                        </a>

                        {% if service.subscriptions|length == 0 %}
                        <form method="post" action="{{ path('saas_service_delete', {id: service.id}) }}" onsubmit="return confirm('Confirmer la suppression définitive de ce service ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="bx bx-trash"></i> Supprimer
                            </button>
                        </form>
                        {% else %}
                        <button type="button" class="btn btn-outline-danger w-100" disabled title="Impossible de supprimer : des abonnements existent">
                            <i class="bx bx-trash"></i> Supprimer
                        </button>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Statistiques</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm table-borderless mb-0">
                        <tbody>
                            <tr>
                                <th class="text-muted">Abonnements actifs</th>
                                <td class="text-end">
                                    <span class="badge bg-info">{{ service.subscriptions|length }}</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Métadonnées</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm table-borderless mb-0">
                        <tbody>
                            <tr>
                                <th class="text-muted">Créé le</th>
                                <td class="text-end">{{ service.createdAt|date('d/m/Y H:i') }}</td>
                            </tr>
                            {% if service.updatedAt %}
                            <tr>
                                <th class="text-muted">Modifié le</th>
                                <td class="text-end">{{ service.updatedAt|date('d/m/Y H:i') }}</td>
                            </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
