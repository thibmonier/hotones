{% extends 'layouts/base.html.twig' %}

{% block title %}Notes de Frais - Comptabilité{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Notes de Frais</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="{{ path('home') }}">Dashboard</a></li>
                        <li class="breadcrumb-item active">Comptabilité</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                     <div class="row mb-2">
                        <div class="col-sm-4">
                            {# TODO: Add filters #}
                        </div>
                        <div class="col-sm-8">
                            <div class="text-sm-end">
                                <a href="{{ path('expense_report_new') }}" class="btn btn-primary"><i class="mdi mdi-plus me-1"></i> Nouvelle note de frais</a>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-middle table-nowrap table-check">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Collaborateur</th>
                                    <th>Catégorie</th>
                                    <th>Description</th>
                                    <th class="text-end">Montant TTC</th>
                                    <th>Projet/Devis</th>
                                    <th class="text-center">Statut</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for expense in expenses %}
                                    <tr>
                                        <td>{{ expense.expenseDate|date('d/m/Y') }}</td>
                                        <td><a href="{{ path('contributor_show', {id: expense.contributor.id}) }}">{{ expense.contributor.fullName }}</a></td>
                                        <td><i class="{{ expense.categoryIcon }} me-1"></i> {{ expense.categoryLabel }}</td>
                                        <td>{{ expense.description|u.truncate(50) }}</td>
                                        <td class="text-end">{{ expense.amountTTC }} €</td>
                                         <td>
                                            {% if expense.project %}
                                                <a href="{{ path('project_show', {id: expense.project.id}) }}">{{ expense.project.name }}</a>
                                            {% elseif expense.order %}
                                                <a href="{{ path('order_show', {id: expense.order.id}) }}">{{ expense.order.reference }}</a>
                                            {% else %}—{% endif %}
                                        </td>
                                        <td class="text-center"><span class="badge rounded-pill {{ expense.statusBadgeClass }}">{{ expense.statusLabel }}</span></td>
                                        <td class="text-center">
                                             <a href="{{ path('expense_report_show', {id: expense.id}) }}" class="btn btn-sm btn-outline-primary" title="Voir"><i class="mdi mdi-eye"></i></a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="8" class="text-center">Aucune note de frais trouvée.</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
