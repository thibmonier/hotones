{% extends 'layouts/base.html.twig' %}

{% block title %}Mes notes de frais{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Mes notes de frais</h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="{{ path('home') }}">Dashboard</a></li>
                        <li class="breadcrumb-item active">Mes notes de frais</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            {# TODO: Add filters #}
                        </div>
                        <div class="col-sm-8">
                            <div class="text-sm-end">
                                <a href="{{ path('expense_report_new') }}" class="btn btn-primary"><i class="mdi mdi-plus me-1"></i> Nouvelle note de frais</a>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table align-middle table-nowrap table-check">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Catégorie</th>
                                    <th>Description</th>
                                    <th class="text-end">Montant TTC</th>
                                    <th class="text-center">Statut</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for expense in expenses %}
                                    <tr>
                                        <td>{{ expense.expenseDate|date('d/m/Y') }}</td>
                                        <td>
                                            <i class="{{ expense.categoryIcon }} me-1"></i> {{ expense.categoryLabel }}
                                        </td>
                                        <td>{{ expense.description|u.truncate(50) }}</td>
                                        <td class="text-end">{{ expense.amountTTC }} €</td>
                                        <td class="text-center">
                                            <span class="badge rounded-pill {{ expense.statusBadgeClass }}">{{ expense.statusLabel }}</span>
                                        </td>
                                        <td class="text-center">
                                            <a href="{{ path('expense_report_show', {id: expense.id}) }}" class="btn btn-sm btn-outline-primary" title="Voir"><i class="mdi mdi-eye"></i></a>
                                            {% if expense.isEditable %}
                                                <a href="{{ path('expense_report_edit', {id: expense.id}) }}" class="btn btn-sm btn-outline-secondary" title="Modifier"><i class="mdi mdi-pencil"></i></a>
                                            {% endif %}
                                            {% if expense.canBeSubmitted %}
                                                <form method="post" action="{{ path('expense_report_submit', {id: expense.id}) }}" class="d-inline-block">
                                                    <button class="btn btn-sm btn-success" title="Soumettre pour validation"><i class="mdi mdi-send"></i></button>
                                                </form>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center">Vous n'avez aucune note de frais pour le moment.</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
