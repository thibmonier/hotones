{# Post card component - reusable across blog pages #}
<div class="blog-post-card" data-aos="fade-up">
    <a href="{{ path('blog_show', {slug: post.slug}) }}" class="post-card-link">
        {% if post.featuredImage %}
            <div class="post-card-image" style="background-image: url('{{ post.featuredImage|imagine_filter('blog_thumbnail') }}');"></div>
        {% else %}
            <div class="post-card-image post-card-image-placeholder"></div>
        {% endif %}

        <div class="post-card-content">
            {% if post.category %}
                <span class="post-category-badge" style="--badge-color: {{ post.category.color ?? '#6366f1' }}">
                    {{ post.category.name }}
                </span>
            {% endif %}

            <h3 class="post-card-title">{{ post.title }}</h3>

            <p class="post-card-excerpt">{{ post.excerpt }}</p>

            <div class="post-card-meta">
                <span class="post-meta-item">
                    <i class='bx bx-user'></i> {{ post.author.fullName }}
                </span>
                <span class="post-meta-item">
                    <i class='bx bx-calendar'></i> {{ post.publishedAt|date('d/m/Y') }}
                </span>
                <span class="post-meta-item">
                    <i class='bx bx-time'></i> {{ post.readingTime }} min
                </span>
            </div>
        </div>
    </a>
</div>

<style>
.blog-post-card {
    background: var(--dark-card);
    border: 1px solid var(--dark-border);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    height: 100%;
}

.blog-post-card:hover {
    transform: translateY(-4px);
    border-color: var(--primary-color);
    box-shadow: 0 8px 24px rgba(99, 102, 241, 0.15);
}

.post-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
}

.post-card-image {
    width: 100%;
    height: 220px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}

.post-card-image-placeholder {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    position: relative;
}

.post-card-image-placeholder::before {
    content: '\ea66';  /* boxicons bx-image */
    font-family: 'boxicons';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 3rem;
    color: rgba(255, 255, 255, 0.3);
}

.post-card-content {
    padding: 1.5rem;
}

.post-category-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    background: var(--badge-color);
    color: white;
    margin-bottom: 0.75rem;
}

.post-card-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.post-card-excerpt {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.post-card-meta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    font-size: 0.8rem;
    color: var(--text-secondary);
}

.post-meta-item {
    display: flex;
    align-items: center;
    gap: 0.25rem;
}

.post-meta-item i {
    font-size: 1rem;
}
</style>
