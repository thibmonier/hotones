{% extends 'layouts/base.html.twig' %}

{% block title %}Enquêtes NPS{% endblock %}

{% block content %}
    {{ component('breadcrumb', { title: 'Enquêtes NPS', pagetitle: 'Satisfaction Client' }) }}

    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Enquêtes de Satisfaction Client (NPS)</h4>
                <div class="page-title-right">
                    <a href="{{ path('nps_new') }}" class="btn btn-primary">
                        <i class="bx bx-plus me-1"></i> Nouvelle enquête
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques globales -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-grow-1">
                            <p class="text-muted fw-medium">Total enquêtes</p>
                            <h4 class="mb-0">{{ total_surveys }}</h4>
                        </div>
                        <div class="flex-shrink-0 align-self-center">
                            <div class="mini-stat-icon avatar-sm rounded-circle bg-primary">
                                <span class="avatar-title">
                                    <i class="bx bx-envelope font-size-24"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-grow-1">
                            <p class="text-muted fw-medium">Réponses</p>
                            <h4 class="mb-0">{{ completed_count }}</h4>
                        </div>
                        <div class="flex-shrink-0 align-self-center">
                            <div class="mini-stat-icon avatar-sm rounded-circle bg-success">
                                <span class="avatar-title">
                                    <i class="bx bx-check-circle font-size-24"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-grow-1">
                            <p class="text-muted fw-medium">Taux de réponse</p>
                            <h4 class="mb-0">{{ response_rate }}%</h4>
                        </div>
                        <div class="flex-shrink-0 align-self-center">
                            <div class="mini-stat-icon avatar-sm rounded-circle bg-info">
                                <span class="avatar-title">
                                    <i class="bx bx-stats font-size-24"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-grow-1">
                            <p class="text-muted fw-medium">Score NPS</p>
                            <h4 class="mb-0">
                                {% if nps_score is not null %}
                                    <span class="{% if nps_score >= 50 %}text-success{% elseif nps_score >= 0 %}text-warning{% else %}text-danger{% endif %}">
                                        {{ nps_score }}
                                    </span>
                                {% else %}
                                    <span class="text-muted">N/A</span>
                                {% endif %}
                            </h4>
                        </div>
                        <div class="flex-shrink-0 align-self-center">
                            <div class="mini-stat-icon avatar-sm rounded-circle
                                {% if nps_score is not null and nps_score >= 50 %}bg-success
                                {% elseif nps_score is not null and nps_score >= 0 %}bg-warning
                                {% else %}bg-danger{% endif %}">
                                <span class="avatar-title">
                                    <i class="bx bx-trophy font-size-24"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Graphique de distribution NPS -->
    {% if nps_score is not null %}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Distribution des scores NPS</h5>
                </div>
                <div class="card-body">
                    <div style="max-height: 450px; position: relative;">
                        <canvas id="npsDistributionChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Filtres et liste des enquêtes -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="mb-3">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">Statut</label>
                                <select name="status" class="form-select">
                                    <option value="all" {% if status == 'all' %}selected{% endif %}>Tous</option>
                                    <option value="pending" {% if status == 'pending' %}selected{% endif %}>En attente</option>
                                    <option value="completed" {% if status == 'completed' %}selected{% endif %}>Complétées</option>
                                    <option value="expired" {% if status == 'expired' %}selected{% endif %}>Expirées</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">&nbsp;</label>
                                <div>
                                    <button type="submit" class="btn btn-primary">Filtrer</button>
                                    <a href="{{ path('nps_index') }}" class="btn btn-secondary">Réinitialiser</a>
                                    <a href="{{ path('nps_export_csv', {status: status}) }}" class="btn btn-outline-success">
                                        <i class="bx bx-download"></i> Export CSV
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Projet</th>
                                    <th>Destinataire</th>
                                    <th>Envoyé le</th>
                                    <th>Statut</th>
                                    <th>Score</th>
                                    <th>Expire le</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for survey in surveys %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('project_show', {id: survey.project.id}) }}">
                                                {{ survey.project.name }}
                                            </a>
                                        </td>
                                        <td>
                                            {% if survey.recipientName %}
                                                <strong>{{ survey.recipientName }}</strong><br>
                                            {% endif %}
                                            <small class="text-muted">{{ survey.recipientEmail }}</small>
                                        </td>
                                        <td>{{ survey.sentAt|date('d/m/Y H:i') }}</td>
                                        <td>
                                            {% if survey.status == 'completed' %}
                                                <span class="badge bg-success">Complétée</span>
                                            {% elseif survey.status == 'expired' %}
                                                <span class="badge bg-danger">Expirée</span>
                                            {% else %}
                                                <span class="badge bg-warning">En attente</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if survey.score is not null %}
                                                <span class="badge {% if survey.category == 'promoter' %}bg-success{% elseif survey.category == 'passive' %}bg-warning{% else %}bg-danger{% endif %}">
                                                    {{ survey.score }}/10
                                                </span>
                                                <br>
                                                <small class="text-muted">{{ survey.categoryLabel }}</small>
                                            {% else %}
                                                <span class="text-muted">—</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ survey.expiresAt|date('d/m/Y') }}</td>
                                        <td class="text-end">
                                            <a href="{{ path('nps_show', {id: survey.id}) }}" class="btn btn-sm btn-outline-info" title="Voir">
                                                <i class="bx bx-show"></i>
                                            </a>
                                            {% if survey.status == 'pending' %}
                                                <form method="post" action="{{ path('nps_resend', {id: survey.id}) }}" style="display:inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('nps_resend' ~ survey.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-outline-primary" title="Renvoyer">
                                                        <i class="bx bx-envelope"></i>
                                                    </button>
                                                </form>
                                            {% endif %}
                                            <form method="post" action="{{ path('nps_delete', {id: survey.id}) }}" style="display:inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette enquête ?')">
                                                <input type="hidden" name="_token" value="{{ csrf_token('nps_delete' ~ survey.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                                    <i class="bx bx-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7" class="text-center text-muted">Aucune enquête trouvée</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"
        integrity="sha384-e6nUZLBkQ86NJ6TVVKAeSaK8jWa3NhkYWZFomE39AvDbQWeie9PlQqM3pmYW5d1g"
        crossorigin="anonymous"></script>
    {% if nps_score is not null %}
    <script>
        // Graphique de distribution NPS
        const ctx = document.getElementById('npsDistributionChart');
        if (ctx) {
            // Utiliser les données calculées par le contrôleur (toutes les enquêtes complétées)
            const detractors = {{ detractors_count }};
            const passives = {{ passives_count }};
            const promoters = {{ promoters_count }};

            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Détracteurs (0-6)', 'Passifs (7-8)', 'Promoteurs (9-10)'],
                    datasets: [{
                        data: [detractors, passives, promoters],
                        backgroundColor: [
                            'rgba(220, 53, 69, 0.8)',
                            'rgba(255, 193, 7, 0.8)',
                            'rgba(40, 167, 69, 0.8)'
                        ],
                        borderColor: [
                            'rgba(220, 53, 69, 1)',
                            'rgba(255, 193, 7, 1)',
                            'rgba(40, 167, 69, 1)'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                        },
                        title: {
                            display: false
                        }
                    }
                }
            });
        }
    </script>
    {% endif %}
{% endblock %}
