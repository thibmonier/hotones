{% extends 'layouts/base.html.twig' %}

{% block title %}Gestion des compétences{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Gestion des compétences</h4>
                <div class="page-title-right">
                    <a href="{{ path('skill_new') }}" class="btn btn-primary btn-sm">
                        <i class="bx bx-plus me-1"></i>Nouvelle compétence
                    </a>
                </div>
            </div>
        </div>
    </div>

    {# Filters #}
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="d-flex gap-2 align-items-center">
                        <input type="text" name="search" class="form-control form-control-sm" placeholder="Rechercher..." value="{{ filters.search }}" />
                        <select name="category" class="form-select form-select-sm">
                            <option value="">Toutes les catégories</option>
                            <option value="technique" {% if filters.category == 'technique' %}selected{% endif %}>Technique</option>
                            <option value="soft_skill" {% if filters.category == 'soft_skill' %}selected{% endif %}>Soft Skill</option>
                            <option value="methodologie" {% if filters.category == 'methodologie' %}selected{% endif %}>Méthodologie</option>
                            <option value="langue" {% if filters.category == 'langue' %}selected{% endif %}>Langue</option>
                        </select>
                        <div class="form-check form-check-inline">
                            <input type="checkbox" name="show_inactive" value="1" class="form-check-input" id="showInactive" {% if filters.show_inactive %}checked{% endif %} />
                            <label class="form-check-label" for="showInactive">Afficher inactives</label>
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary">Filtrer</button>
                        <a href="{{ path('skill_index') }}" class="btn btn-sm btn-light">Réinitialiser</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {# Statistics #}
    <div class="row mb-3">
        {% for category, count in countByCategory %}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted">{{ category|capitalize }}</span>
                            <h4 class="mb-0 mt-1">{{ count }}</h4>
                        </div>
                        <div class="flex-shrink-0">
                            <span class="avatar-sm bg-soft-primary rounded">
                                <i class="bx bx-badge-check text-primary font-size-24"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    {# Skills List #}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Compétence</th>
                                    <th>Catégorie</th>
                                    <th>Description</th>
                                    <th class="text-center">Contributeurs</th>
                                    <th class="text-center">Statut</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for skill in skills %}
                                <tr {% if not skill.active %}class="table-secondary"{% endif %}>
                                    <td>
                                        <a href="{{ path('skill_show', {id: skill.id}) }}" class="text-body fw-bold">
                                            {{ skill.name }}
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">{{ skill.categoryLabel }}</span>
                                    </td>
                                    <td>
                                        {% set desc = skill.description|default('Aucune description') %}
                                        {{ desc|length > 60 ? desc|slice(0, 60) ~ '...' : desc }}
                                    </td>
                                    <td class="text-center">
                                        {% set skillWithCount = skillsWithCount|filter(s => s.skill.id == skill.id)|first %}
                                        {% if skillWithCount %}
                                            <span class="badge bg-primary">{{ skillWithCount.contributorCount }}</span>
                                        {% else %}
                                            <span class="badge bg-secondary">0</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        {% if skill.active %}
                                            <span class="badge bg-success">Active</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Inactive</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('skill_show', {id: skill.id}) }}" class="btn btn-outline-info" title="Voir">
                                                <i class="bx bx-show"></i>
                                            </a>
                                            <a href="{{ path('skill_edit', {id: skill.id}) }}" class="btn btn-outline-primary" title="Modifier">
                                                <i class="bx bx-edit"></i>
                                            </a>
                                            <form method="post" action="{{ path('skill_toggle', {id: skill.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ skill.id) }}" />
                                                <button type="submit" class="btn btn-outline-warning" title="{{ skill.active ? 'Désactiver' : 'Activer' }}">
                                                    <i class="bx {{ skill.active ? 'bx-hide' : 'bx-show' }}"></i>
                                                </button>
                                            </form>
                                            <form method="post" action="{{ path('skill_delete', {id: skill.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette compétence ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ skill.id) }}" />
                                                <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                    <i class="bx bx-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        <i class="bx bx-info-circle me-2"></i>Aucune compétence trouvée
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
