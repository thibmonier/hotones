{% extends 'layouts/base.html.twig' %}

{% block title %}Nouvelle compétence{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            {% include 'components/page_header.html.twig' with {
                title: 'Nouvelle compétence',
                breadcrumb: [
                    {label: 'Configuration', path: null},
                    {label: 'Compétences', path: 'skill_index'},
                    {label: 'Nouvelle', path: null}
                ],
                actions: [
                    {label: 'Retour à la liste', path: 'skill_index', icon: 'bx-arrow-back', class: 'btn-outline-secondary'}
                ]
            } %}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bx bx-star me-2"></i>
                        Informations de la compétence
                    </h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.category) }}
                        {{ form_widget(form.category) }}
                        {{ form_errors(form.category) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="mb-3 form-check">
                        {{ form_widget(form.active) }}
                        {{ form_label(form.active) }}
                        {{ form_errors(form.active) }}
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a href="{{ path('skill_index') }}" class="btn btn-outline-secondary">
                            <i class="bx bx-x me-1"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bx bx-save me-1"></i> Créer
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bx bx-info-circle me-2"></i>
                        Information
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        Les compétences permettent de suivre les expertises de vos contributeurs et d'identifier les écarts de compétences.
                    </p>
                    <hr>
                    <h6>Catégories :</h6>
                    <ul class="text-muted small">
                        <li><strong>Technique</strong> : Langages, frameworks, outils</li>
                        <li><strong>Soft Skill</strong> : Communication, leadership, etc.</li>
                        <li><strong>Méthodologie</strong> : Agile, Scrum, etc.</li>
                        <li><strong>Langue</strong> : Anglais, Français, etc.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
