{% extends 'layouts/base.html.twig' %}

{% block title %}Badge: {{ badge.name }}{% endblock %}

{% block content %}
    {{ component('breadcrumb', { title: 'Badges', pagetitle: badge.name }) }}

    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="bx {{ badge.icon }} display-1 text-primary"></i>
                    </div>
                    <h2 class="mb-3">{{ badge.name }}</h2>
                    <p class="text-muted mb-4">{{ badge.description }}</p>

                    <div class="row g-3 mb-4">
                        <div class="col-md-3">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <p class="text-muted mb-1">Catégorie</p>
                                    <h5 class="mb-0">{{ badge.category }}</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <p class="text-muted mb-1">XP Récompense</p>
                                    <h5 class="mb-0">{{ badge.xpReward }}</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <p class="text-muted mb-1">Statut</p>
                                    <h5 class="mb-0">
                                        {% if badge.active %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Inactif</span>
                                        {% endif %}
                                    </h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <p class="text-muted mb-1">Débloqué</p>
                                    <h5 class="mb-0">{{ badge.achievements|length }} fois</h5>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% if badge.criteria %}
                        <div class="card bg-light border-0 mb-4">
                            <div class="card-body text-start">
                                <h6 class="mb-3">Critères de déblocage</h6>
                                <pre class="mb-0"><code>{{ badge.criteria|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
                            </div>
                        </div>
                    {% endif %}

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('badge_index') }}" class="btn btn-secondary">
                            <i class="bx bx-arrow-back"></i> Retour
                        </a>
                        <a href="{{ path('badge_edit', {id: badge.id}) }}" class="btn btn-primary">
                            <i class="bx bx-edit"></i> Modifier
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
