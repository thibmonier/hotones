{% extends 'layouts/base.html.twig' %}

{% block title %}Projets à Risque{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Projets à Risque</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('project_index') }}">Projets</a></li>
                        <li class="breadcrumb-item active">Projets à Risque</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    {# Stats cards #}
    <div class="row mb-3">
        <div class="col-xl-3 col-md-6">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-grow-1">
                            <p class="text-muted fw-medium">Projets Sains</p>
                            <h4 class="mb-0">{{ counts.healthy }}</h4>
                        </div>
                        <div class="avatar-sm rounded-circle bg-success align-self-center mini-stat-icon">
                            <span class="avatar-title rounded-circle bg-success">
                                <i class="bx bx-check-circle font-size-24"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-grow-1">
                            <p class="text-muted fw-medium">Projets en Alerte</p>
                            <h4 class="mb-0">{{ counts.warning }}</h4>
                        </div>
                        <div class="avatar-sm rounded-circle bg-warning align-self-center mini-stat-icon">
                            <span class="avatar-title rounded-circle bg-warning">
                                <i class="bx bx-error-circle font-size-24"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-grow-1">
                            <p class="text-muted fw-medium">Projets Critiques</p>
                            <h4 class="mb-0">{{ counts.critical }}</h4>
                        </div>
                        <div class="avatar-sm rounded-circle bg-danger align-self-center mini-stat-icon">
                            <span class="avatar-title rounded-circle bg-danger">
                                <i class="bx bx-x-circle font-size-24"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <form method="post" action="{{ path('projects_refresh_health') }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('refresh_health') }}">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bx bx-refresh"></i> Actualiser l'analyse
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {# At-risk projects list #}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">
                        Projets nécessitant une attention
                        <span class="badge bg-danger ms-2">{{ at_risk_projects|length }}</span>
                    </h4>

                    {% if at_risk_projects is empty %}
                        <div class="alert alert-success" role="alert">
                            <i class="bx bx-check-circle me-2"></i>
                            Aucun projet à risque détecté ! Tous les projets sont en bonne santé.
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-centered table-hover table-nowrap mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Projet</th>
                                        <th>Score de Santé</th>
                                        <th>Niveau</th>
                                        <th>Budget</th>
                                        <th>Planning</th>
                                        <th>Vélocité</th>
                                        <th>Qualité</th>
                                        <th>Dernière Analyse</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for healthScore in at_risk_projects %}
                                    {% set project = healthScore.project %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('project_show', {id: project.id}) }}">
                                                <strong>{{ project.name }}</strong>
                                            </a>
                                            {% if project.client %}
                                                <br><small class="text-muted">{{ project.client.name }}</small>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="progress" style="height: 25px;">
                                                <div class="progress-bar {% if healthScore.score < 50 %}bg-danger{% elseif healthScore.score < 80 %}bg-warning{% else %}bg-success{% endif %}"
                                                     role="progressbar"
                                                     style="width: {{ healthScore.score }}%;"
                                                     aria-valuenow="{{ healthScore.score }}"
                                                     aria-valuemin="0"
                                                     aria-valuemax="100">
                                                    <strong>{{ healthScore.score }}/100</strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-{{ healthScore.badgeColor }} font-size-12">
                                                <i class="bx {{ healthScore.icon }}"></i>
                                                {{ healthScore.healthLevel|upper }}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge {% if healthScore.budgetScore < 50 %}bg-danger{% elseif healthScore.budgetScore < 70 %}bg-warning{% else %}bg-success{% endif %}">
                                                {{ healthScore.budgetScore }}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge {% if healthScore.timelineScore < 50 %}bg-danger{% elseif healthScore.timelineScore < 70 %}bg-warning{% else %}bg-success{% endif %}">
                                                {{ healthScore.timelineScore }}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge {% if healthScore.velocityScore < 50 %}bg-danger{% elseif healthScore.velocityScore < 70 %}bg-warning{% else %}bg-success{% endif %}">
                                                {{ healthScore.velocityScore }}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge {% if healthScore.qualityScore < 50 %}bg-danger{% elseif healthScore.qualityScore < 70 %}bg-warning{% else %}bg-success{% endif %}">
                                                {{ healthScore.qualityScore }}
                                            </span>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                {{ healthScore.calculatedAt|date('d/m/Y H:i') }}
                                            </small>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-outline-primary"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#recommendations-{{ healthScore.id }}">
                                                <i class="bx bx-list-ul"></i> Recommandations
                                            </button>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{# Recommendations modals #}
{% for healthScore in at_risk_projects %}
<div class="modal fade" id="recommendations-{{ healthScore.id }}" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bx bx-list-check me-2"></i>
                    Recommandations - {{ healthScore.project.name }}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-4">
                    <h6>Scores Détaillés</h6>
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <div class="d-flex justify-content-between">
                                <span>Budget:</span>
                                <strong class="{% if healthScore.budgetScore < 50 %}text-danger{% elseif healthScore.budgetScore < 70 %}text-warning{% else %}text-success{% endif %}">
                                    {{ healthScore.budgetScore }}/100
                                </strong>
                            </div>
                        </div>
                        <div class="col-md-6 mb-2">
                            <div class="d-flex justify-content-between">
                                <span>Planning:</span>
                                <strong class="{% if healthScore.timelineScore < 50 %}text-danger{% elseif healthScore.timelineScore < 70 %}text-warning{% else %}text-success{% endif %}">
                                    {{ healthScore.timelineScore }}/100
                                </strong>
                            </div>
                        </div>
                        <div class="col-md-6 mb-2">
                            <div class="d-flex justify-content-between">
                                <span>Vélocité:</span>
                                <strong class="{% if healthScore.velocityScore < 50 %}text-danger{% elseif healthScore.velocityScore < 70 %}text-warning{% else %}text-success{% endif %}">
                                    {{ healthScore.velocityScore }}/100
                                </strong>
                            </div>
                        </div>
                        <div class="col-md-6 mb-2">
                            <div class="d-flex justify-content-between">
                                <span>Qualité:</span>
                                <strong class="{% if healthScore.qualityScore < 50 %}text-danger{% elseif healthScore.qualityScore < 70 %}text-warning{% else %}text-success{% endif %}">
                                    {{ healthScore.qualityScore }}/100
                                </strong>
                            </div>
                        </div>
                    </div>
                </div>

                {% if healthScore.recommendations is not empty %}
                <div>
                    <h6>Actions Recommandées</h6>
                    <ul class="list-unstyled">
                        {% for recommendation in healthScore.recommendations %}
                        <li class="mb-2">
                            <i class="bx bx-right-arrow-alt text-primary me-2"></i>
                            {{ recommendation }}
                        </li>
                        {% endfor %}
                    </ul>
                </div>
                {% else %}
                <div class="alert alert-info" role="alert">
                    <i class="bx bx-info-circle me-2"></i>
                    Aucune recommandation spécifique disponible.
                </div>
                {% endif %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                <a href="{{ path('project_show', {id: healthScore.project.id}) }}" class="btn btn-primary">
                    Voir le projet
                </a>
            </div>
        </div>
    </div>
</div>
{% endfor %}

{% endblock %}
