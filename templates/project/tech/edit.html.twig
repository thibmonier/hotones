{% extends 'layouts/base.html.twig' %}

{% block title %}Éditer version — {{ pt.technology.name }}{% endblock %}

{% block content %}
<div class="row">
  <div class="col-12">
    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
      <h4 class="mb-sm-0 font-size-18">Éditer — {{ pt.technology.name }}</h4>
      <div class="page-title-right">
        <a href="{{ path('project_tech_index', {id: pt.project.id}) }}" class="btn btn-secondary"><i class="bx bx-arrow-back me-1"></i> Retour</a>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-body">
        {{ form_start(form) }}
          <div class="mb-3">{{ form_label(form.version) }}{{ form_widget(form.version) }}{{ form_errors(form.version) }}</div>
          <div class="mb-3">{{ form_label(form.notes) }}{{ form_widget(form.notes) }}{{ form_errors(form.notes) }}</div>
          <button class="btn btn-primary" type="submit"><i class="bx bx-save me-1"></i> Enregistrer</button>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}
