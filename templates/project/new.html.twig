{% extends 'layouts/base.html.twig' %}

{% block title %}Nouveau projet{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css">
{% endblock %}

{% block content %}
    {% include 'components/page_header.html.twig' with {
        title: 'Nouveau projet',
        breadcrumb: [
            {label: 'Projets', path: 'project_index'}
        ]
    } %}

    {{ form_start(form) }}

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bx bx-info-circle me-2"></i>
                        Informations générales
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.name) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.client) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.description) }}
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.startDate) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.endDate) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.projectType) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.status) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.isInternal) }}
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bx bx-shopping-bag me-2"></i>
                        Achats et fournitures
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        {{ form_row(form.purchasesAmount) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.purchasesDescription) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bx bx-group me-2"></i>
                        Équipe projet
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        {{ form_row(form.keyAccountManager) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.projectManager) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.projectDirector) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.salesPerson) }}
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bx bx-category me-2"></i>
                        Catégorie de service
                    </h5>
                </div>
                <div class="card-body">
                    {{ form_row(form.serviceCategory) }}
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bx bx-code-alt me-2"></i>
                        Technologies
                    </h5>
                </div>
                <div class="card-body">
                    {{ form_row(form.technologies) }}
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    {% include 'components/form_buttons.html.twig' with {
                        cancel_route: 'project_index',
                        submit_label: 'Créer',
                        layout: 'vertical'
                    } %}
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Choices.js for technologies
            const technologiesSelect = document.querySelector('.select2-multiple');
            if (technologiesSelect) {
                new Choices(technologiesSelect, {
                    removeItemButton: true,
                    placeholder: true,
                    placeholderValue: technologiesSelect.getAttribute('data-placeholder') || 'Sélectionner des technologies',
                    searchPlaceholderValue: 'Rechercher...',
                    noResultsText: 'Aucune technologie trouvée',
                    noChoicesText: 'Aucune technologie disponible',
                    itemSelectText: 'Cliquer pour sélectionner',
                });
            }
        });
    </script>
{% endblock %}
