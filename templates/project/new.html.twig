{% extends 'layouts/base.html.twig' %}

{% block title %}Nouveau projet{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/libs/select2/css/select2.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/libs/select2/css/select2-bootstrap-5-theme.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block content %}
    {{ component('breadcrumb', { title: 'Nouveau projet', pagetitle: 'Projets' }) }}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Nouveau projet</h4>
                <div class="page-title-right">
                    <a href="{{ path('project_index') }}" class="btn btn-secondary">
                        <i class="bx bx-arrow-back me-1"></i> Retour
                    </a>
                </div>
            </div>
        </div>
    </div>

    {{ form_start(form) }}

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Informations générales</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.name) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.client) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.description) }}
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.startDate) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.endDate) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.projectType) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.status) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.isInternal) }}
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Achats et fournitures</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        {{ form_row(form.purchasesAmount) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.purchasesDescription) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Équipe projet</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        {{ form_row(form.keyAccountManager) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.projectManager) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.projectDirector) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.salesPerson) }}
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Catégorie de service</h4>
                </div>
                <div class="card-body">
                    {{ form_row(form.serviceCategory) }}
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Technologies</h4>
                </div>
                <div class="card-body">
                    {{ form_row(form.technologies) }}
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bx bx-save me-1"></i> Créer le projet
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/libs/select2/js/select2.min.js') }}"></script>
    <script src="{{ asset('assets/libs/select2/js/i18n/fr.js') }}"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Select2 for technologies
            $('.select2-multiple').select2({
                theme: 'bootstrap-5',
                width: '100%',
                placeholder: function() {
                    return $(this).data('placeholder');
                },
                allowClear: false,
                language: 'fr'
            });
        });
    </script>
{% endblock %}
