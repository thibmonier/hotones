{% extends 'layouts/layouts-vertical.html.twig' %}

{% block title %}Projets{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Projets</h4>
                <div class="page-title-right">
                    {% if is_granted('ROLE_CHEF_PROJET') %}
                        <a href="{{ path('project_new') }}" class="btn btn-primary">
                            <i class="bx bx-plus me-1"></i> Nouveau projet
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Nom</th>
                                    <th>Client</th>
                                    <th>Type</th>
                                    <th>Catégorie</th>
                                    <th>Technologies</th>
                                    <th>Statut</th>
                                    <th>CA Total</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for project in projects %}
                                <tr>
                                    <td>
                                        <h5 class="font-size-14 mb-1">
                                            <a href="{{ path('project_show', {'id': project.id}) }}" class="text-dark">{{ project.name }}</a>
                                        </h5>
                                        {% if project.description %}
                                            <p class="text-muted mb-0">{{ project.description|slice(0, 50) }}{% if project.description|length > 50 %}...{% endif %}</p>
                                        {% endif %}
                                    </td>
                                    <td>{{ project.client ?? '-' }}</td>
                                    <td>
                                        <span class="badge bg-{% if project.isInternal %}info{% else %}primary{% endif %}">
                                            {{ project.isInternal ? 'Interne' : 'Client' }}
                                        </span>
                                    </td>
                                    <td>
                                        {% if project.serviceCategory %}
                                            <span class="badge bg-secondary">{{ project.serviceCategory.name }}</span>
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% for tech in project.technologies %}
                                            <span class="badge bg-light text-dark me-1">{{ tech.name }}</span>
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <span class="badge bg-{% if project.status == 'active' %}success{% elseif project.status == 'completed' %}primary{% else %}warning{% endif %}">
                                            {{ project.status|title }}
                                        </span>
                                    </td>
                                    <td>{{ project.totalSoldAmount|number_format(2, ',', ' ') }}€</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('project_details', {'id': project.id}) }}" class="btn btn-primary btn-sm" title="Vue détaillée">
                                                <i class="bx bx-bar-chart-alt-2"></i>
                                            </a>
                                            <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-outline-secondary btn-sm">
                                                <i class="bx bx-show"></i>
                                            </a>
                                            {% if is_granted('ROLE_CHEF_PROJET') %}
                                                <a href="{{ path('project_edit', {'id': project.id}) }}" class="btn btn-outline-primary btn-sm">
                                                    <i class="bx bx-edit"></i>
                                                </a>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="8" class="text-center text-muted">
                                        <div class="py-4">
                                            <i class="bx bx-folder-open font-size-24 mb-2"></i>
                                            <p>Aucun projet trouvé</p>
                                            {% if is_granted('ROLE_CHEF_PROJET') %}
                                                <a href="{{ path('project_new') }}" class="btn btn-primary">Créer le premier projet</a>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
