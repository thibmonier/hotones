{% extends 'layouts/base.html.twig' %}

{% block title %}Projets{% endblock %}

{% block content %}
    {% include 'components/page_header.html.twig' with {
        title: 'Projets',
        breadcrumb: [
            {label: 'Projets & Temps', path: null},
            {label: 'Projets', path: null}
        ],
        actions: is_granted('ROLE_CHEF_PROJET') ? [{
            label: 'Nouveau projet',
            path: 'project_new',
            icon: 'bx-plus',
            class: 'btn-primary'
        }] : []
    } %}

    <!-- Filtres période -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    {% set activeFiltersCount = 0 %}
                    {% set activeFiltersCount = activeFiltersCount
                        + (filters.project_type ? 1 : 0)
                        + (filters.status ? 1 : 0)
                        + (filters.technology ? 1 : 0)
                        + (filters.search ? 1 : 0)
                        + (filters.start_date|date('Y-m-d') != (filters.year ~ '-01-01') ? 1 : 0)
                        + (filters.end_date|date('Y-m-d') != (filters.year ~ '-12-31') ? 1 : 0)
                        + (sort != 'name' ? 1 : 0)
                        + (dir != 'ASC' ? 1 : 0)
                        + (pagination.per_page != 10 ? 1 : 0)
                    %}
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="mb-0">Filtres
                            {% if activeFiltersCount > 0 %}
                                <span class="badge bg-info ms-2">{{ activeFiltersCount }}</span>
                            {% endif %}
                        </h5>
                        <div class="btn-group">
                            <a href="{{ path('project_export_csv', filters_query|merge({ sort: sort, dir: dir })) }}" class="btn btn-sm btn-outline-primary">Exporter CSV</a>
                            <a href="{{ path('project_index', { reset: 1 }) }}" class="btn btn-sm btn-outline-secondary">Effacer</a>
                            <button type="button" class="btn btn-sm btn-outline-dark" data-bs-toggle="collapse" data-bs-target="#filters-projects" aria-expanded="true" aria-controls="filters-projects" id="filters-toggle-projects">
                                <i class="bx bx-chevron-up"></i>
                            </button>
                        </div>
                    </div>
                    <div id="filters-projects" class="collapse show">
                        {% set chips = [] %}
                    {% if filters.project_type %}
                        {% set chips = chips|merge(['Type: ' ~ filters.project_type|title]) %}
                    {% endif %}
                    {% if filters.status %}
                        {% set chips = chips|merge(['Statut: ' ~ filters.status|title]) %}
                    {% endif %}
                    {% if filters.technology %}
                        {% set techObj = (filter_options.technologies|filter(t => t.id == filters.technology)|first) %}
                        {% set chips = chips|merge(['Technologie: ' ~ (techObj ? techObj.name : filters.technology)]) %}
                    {% endif %}
                    {% set defaultStart = (filters.year ~ '-01-01') %}
                    {% set defaultEnd = (filters.year ~ '-12-31') %}
                    {% if filters.start_date|date('Y-m-d') != defaultStart or filters.end_date|date('Y-m-d') != defaultEnd %}
                        {% set chips = chips|merge(['Période: ' ~ filters.start_date|date('d/m/Y') ~ ' → ' ~ filters.end_date|date('d/m/Y')]) %}
                    {% endif %}
                    {% if sort != 'name' or dir != 'ASC' %}
                        {% set chips = chips|merge(['Tri: ' ~ sort ~ ' ' ~ dir]) %}
                    {% endif %}
                    {% if pagination.per_page != 10 %}
                        {% set chips = chips|merge(['Par page: ' ~ pagination.per_page]) %}
                    {% endif %}
                    {% if filters.search %}
                        {% set chips = chips|merge(['Recherche: ' ~ filters.search]) %}
                    {% endif %}
                    {% if chips|length > 0 %}
                        <div class="mb-2 small text-muted">
                            {% for c in chips %}
                                <span class="badge bg-light text-dark me-1">{{ c }}</span>
                            {% endfor %}
                        </div>
                        <script>
                          (function(){
                            try { window.__ACTIVE_FILTERS = {{ chips|json_encode|raw }}; window.dispatchEvent(new Event('active-filters-changed')); } catch(e) {}
                          })();
                        </script>
                    {% else %}
                        <script>try { window.__ACTIVE_FILTERS = []; window.dispatchEvent(new Event('active-filters-changed')); } catch(e) {}</script>
                        {% endif %}
                        <form method="get" class="row g-2 align-items-end">
                        <div class="col-12 mb-2">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bx bx-search"></i></span>
                                <input type="text" class="form-control" name="search" value="{{ filters.search }}" placeholder="Rechercher un projet, client ou description...">
                                {% if filters.search %}
                                    <a href="{{ path('project_index', filters_query|merge({search: null})) }}" class="btn btn-outline-secondary" title="Effacer la recherche">
                                        <i class="bx bx-x"></i>
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Année</label>
                            <select name="year" class="form-select">
                                {% for y in range(2020, date().format('Y') + 1) %}
                                    <option value="{{ y }}" {{ filters.year == y ? 'selected' : '' }}>{{ y }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Du</label>
                            <input type="date" class="form-control" name="start_date" value="{{ filters.start_date|date('Y-m-d') }}">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Au</label>
                            <input type="date" class="form-control" name="end_date" value="{{ filters.end_date|date('Y-m-d') }}">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Type</label>
                            <select name="project_type" class="form-select">
                                <option value="">Tous</option>
                                {% for type in filter_options.project_types %}
                                    <option value="{{ type }}" {{ filters.project_type == type ? 'selected' : '' }}>{{ type|title }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Statut</label>
                            <select name="status" class="form-select">
                                <option value="">Tous</option>
                                {% for s in filter_options.statuses %}
                                    <option value="{{ s }}" {{ filters.status == s ? 'selected' : '' }}>{{ s|title }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Technologie</label>
                            <select name="technology" class="form-select">
                                <option value="">Toutes</option>
                                {% for t in filter_options.technologies %}
                                    <option value="{{ t.id }}" {{ filters.technology == t.id ? 'selected' : '' }}>{{ t.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-12 mt-2 d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Filtrer</button>
                            <a href="{{ path('project_index', { reset: 1 }) }}" class="btn btn-outline-secondary">Réinitialiser</a>
                        </div>
                        </form>
                    </div>
                    <script>
                        (function(){
                          var key='filters:projects:collapsed';
                          var el=document.getElementById('filters-projects');
                          var btn=document.getElementById('filters-toggle-projects');
                          if(!el||!btn) return;
                          try {
                            var hasActive={{ (chips|length > 0) ? 'true' : 'false' }};
                            var isSmall=window.matchMedia('(max-width: 767.98px)').matches;
                            var collapsed = localStorage.getItem(key) === '1' || (isSmall && !hasActive);
                            if (collapsed) { el.classList.remove('show'); btn.setAttribute('aria-expanded','false'); }
                            var updateIcon=function(){ var i=btn.querySelector('i'); if(!i) return; if (el.classList.contains('show')) { i.className='bx bx-chevron-up'; localStorage.setItem(key,'0'); btn.setAttribute('aria-expanded','true'); } else { i.className='bx bx-chevron-down'; localStorage.setItem(key,'1'); btn.setAttribute('aria-expanded','false'); } };
                            el.addEventListener('shown.bs.collapse', updateIcon);
                            el.addEventListener('hidden.bs.collapse', updateIcon);
                            updateIcon();
                          } catch(e) {}
                        })();
                    </script>
                </div>
                {% set hasFilters = (filters.project_type) or (filters.status) or (filters.technology) or (filters.start_date|date('Y-m-d') != (filters.year ~ '-01-01')) or (filters.end_date|date('Y-m-d') != (filters.year ~ '-12-31')) or (sort != 'name') or (dir != 'ASC') or (pagination.per_page != 10) %}
                {% if hasFilters %}
                    <div class="small text-muted mt-2">
                        Filtres actifs · <a href="{{ path('project_index', { reset: 1 }) }}">Effacer</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    {% if projects_with_metrics|length > 0 %}
        <!-- KPIs période (réel sur la période filtrée) -->
        <div class="row mb-4">
            <div class="col-md-2">
                <div class="card border-0 bg-light">
                    <div class="card-body text-center">
                        <h4 class="text-success mb-1">{{ period_kpis.revenue|number_format(0, ',', ' ') }}€</h4>
                        <p class="text-muted mb-0">CA période</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card border-0 bg-light">
                    <div class="card-body text-center">
                        <h4 class="mb-1">{{ period_kpis.gross_margin_eur|number_format(0, ',', ' ') }}€</h4>
                        <p class="text-muted mb-0">Marge brute ({{ period_kpis.gross_margin_pct }}%)</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card border-0 bg-light">
                    <div class="card-body text-center">
                        <h4 class="mb-1">{{ period_kpis.real_daily_rate|number_format(0, ',', ' ') }}€</h4>
                        <p class="text-muted mb-0">TJR réel</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card border-0 bg-light">
                    <div class="card-body text-center">
                        <h4 class="text-warning mb-1">{{ period_kpis.human_cost|number_format(0, ',', ' ') }}€</h4>
                        <p class="text-muted mb-0">Coût homme</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card border-0 bg-light">
                    <div class="card-body text-center">
                        <h4 class="mb-1">{{ period_kpis.net_margin_eur|number_format(0, ',', ' ') }}€</h4>
                        <p class="text-muted mb-0">Marge nette ({{ period_kpis.net_margin_pct }}%)</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card border-0 bg-light">
                    <div class="card-body text-center">
                        <h4 class="text-info mb-1">{{ period_kpis.purchases|number_format(0, ',', ' ') }}€</h4>
                        <p class="text-muted mb-0">Achats</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Résumé global (prévisionnel signé) -->
    {% endif %}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-end align-items-center mb-2">
                        <form method="get" action="{{ path('project_index') }}" class="d-flex align-items-center">
                            <input type="hidden" name="year" value="{{ filters.year }}">
                            <input type="hidden" name="start_date" value="{{ filters.start_date|date('Y-m-d') }}">
                            <input type="hidden" name="end_date" value="{{ filters.end_date|date('Y-m-d') }}">
                            <input type="hidden" name="project_type" value="{{ filters.project_type }}">
                            <input type="hidden" name="status" value="{{ filters.status }}">
                            <input type="hidden" name="technology" value="{{ filters.technology }}">
                            <label class="form-label mb-0 me-2">Par page</label>
                            <select name="per_page" class="form-select form-select-sm me-2" onchange="this.form.submit()">
                                {% for n in [10,20,50,100] %}
                                    <option value="{{ n }}" {{ pagination.per_page == n ? 'selected' : '' }}>{{ n }}</option>
                                {% endfor %}
                            </select>
                            <noscript><button type="submit" class="btn btn-sm btn-outline-secondary">Appliquer</button></noscript>
                        </form>
                    </div>
                    <!-- Barre d'actions en masse -->
                    <div id="bulk-actions-bar" class="alert alert-info d-none mb-3" role="alert">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong id="selected-count">0</strong> projet(s) sélectionné(s)
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-danger" id="bulk-delete-btn">
                                    <i class="bx bx-trash me-1"></i>Supprimer
                                </button>
                                <button type="button" class="btn btn-sm btn-warning" id="bulk-archive-btn">
                                    <i class="bx bx-archive me-1"></i>Archiver
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap mb-0" id="projects-table">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 40px;">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="select-all">
                                        </div>
                                    </th>
                                    <th>
                                        <a href="{{ path('project_index', filters_query|merge({ sort: 'name', dir: sort == 'name' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Nom
                                            {% if sort == 'name' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>
                                        <a href="{{ path('project_index', filters_query|merge({ sort: 'client', dir: sort == 'client' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Client
                                            {% if sort == 'client' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>
                                        <a href="{{ path('project_index', filters_query|merge({ sort: 'type', dir: sort == 'type' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Type
                                            {% if sort == 'type' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>Catégorie</th>
                                    <th>Technologies</th>
                                    <th>
                                        <a href="{{ path('project_index', filters_query|merge({ sort: 'status', dir: sort == 'status' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Statut
                                            {% if sort == 'status' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th class="text-end">CA Signé</th>
                                    <th class="text-end">Marge Brute</th>
                                    <th class="text-end">Achats</th>
                                    <th class="text-center">Devis</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in projects_with_metrics %}
                                {% set project = item.project %}
                                {% set metrics = item.metrics %}
                                <tr data-project-id="{{ project.id }}">
                                    <td>
                                        <div class="form-check">
                                            <input class="form-check-input project-checkbox" type="checkbox" value="{{ project.id }}">
                                        </div>
                                    </td>
                                    <td>
                                        <h5 class="font-size-14 mb-1">
                                            <a href="{{ path('project_show', {'id': project.id}) }}" class="text-dark">{{ project.name }}</a>
                                        </h5>
                                        {% if project.description %}
                                            <small class="text-muted">{{ project.description|length > 50 ? project.description|slice(0, 50) ~ '...' : project.description }}</small>
                                        {% endif %}
                                    </td>
                                    <td>{{ project.client ? project.client.name : '-' }}</td>
                                    <td>
                                        {% set typeLabel = project.projectType == 'regie' ? 'Régie' : 'Forfait' %}
                                        {% set typeClass = project.projectType == 'regie' ? 'warning' : 'primary' %}
                                        <div class="d-flex align-items-center gap-1">
                                            <span class="badge bg-{{ typeClass }}">{{ typeLabel }}</span>
{#                                            <span class="badge bg-{% if project.isInternal %}info{% else %}secondary{% endif %}">{{ project.isInternal ? 'Interne' : 'Client' }}</span>#}
                                        </div>
                                    </td>
                                    <td>
                                        {% if project.serviceCategory %}
                                            <span class="badge bg-secondary">{{ project.serviceCategory.name }}</span>
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if project.technologies|length > 0 %}
                                            {% for tech in project.technologies|slice(0, 2) %}
                                                <span class="badge me-1" style="{% if tech.color %}background-color: {{ tech.color }}; color: #fff;{% else %}background-color: #f8f9fa; color: #212529;{% endif %}">
                                                    {{ tech.name }}
                                                </span>
                                            {% endfor %}
                                            {% if project.technologies|length > 2 %}
                                                <small class="text-muted">+{{ project.technologies|length - 2 }}</small>
                                            {% endif %}
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-{% if project.status == 'active' %}success{% elseif project.status == 'completed' %}primary{% else %}warning{% endif %}">
                                            {{ project.status|title }}
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        {% if metrics.total_revenue > 0 %}
                                            <strong class="text-success">{{ metrics.total_revenue|number_format(0, ',', ' ') }}€</strong>
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        {% if metrics.total_margin > 0 %}
                                            <div class="d-flex flex-column align-items-end">
                                                <strong class="text-{% if metrics.margin_rate >= 20 %}success{% elseif metrics.margin_rate >= 10 %}warning{% else %}danger{% endif %}">
                                                    {{ metrics.total_margin|number_format(0, ',', ' ') }}€
                                                </strong>
                                                <small class="text-muted">{{ metrics.margin_rate|number_format(1, ',', ' ') }}%</small>
                                            </div>
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        {% if metrics.total_purchases > 0 %}
                                            <strong class="text-warning">{{ metrics.total_purchases|number_format(0, ',', ' ') }}€</strong>
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        {% if metrics.orders_count > 0 %}
                                            <div class="d-flex flex-column align-items-center">
                                                <span class="badge bg-light text-dark">{{ metrics.orders_count }}</span>
                                                {% if metrics.signed_orders_count > 0 %}
                                                    <small class="text-success">{{ metrics.signed_orders_count }} signé{{ metrics.signed_orders_count > 1 ? 's' : '' }}</small>
                                                {% endif %}
                                            </div>
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('project_details', {'id': project.id}) }}" class="btn btn-primary btn-sm" title="Vue détaillée">
                                                <i class="bx bx-bar-chart-alt-2"></i>
                                            </a>
                                            <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-outline-secondary btn-sm">
                                                <i class="bx bx-show"></i>
                                            </a>
                                            {% if is_granted('ROLE_CHEF_PROJET') %}
                                                <a href="{{ path('project_edit', {'id': project.id}) }}" class="btn btn-outline-primary btn-sm">
                                                    <i class="bx bx-edit"></i>
                                                </a>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="12" class="text-center text-muted">
                                        <div class="py-4">
                                            <i class="bx bx-folder-open font-size-24 mb-2"></i>
                                            <p>Aucun projet trouvé</p>
                                            {% if is_granted('ROLE_CHEF_PROJET') %}
                                                <a href="{{ path('project_new') }}" class="btn btn-primary">Créer le premier projet</a>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    {% if pagination.total_pages > 1 %}
        {% include 'components/pagination.html.twig' with {
            currentPage: pagination.current_page,
            totalPages: pagination.total_pages,
            itemsPerPage: pagination.per_page,
            totalItems: pagination.total
        } %}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const selectAllCheckbox = document.getElementById('select-all');
        const projectCheckboxes = document.querySelectorAll('.project-checkbox');
        const bulkActionsBar = document.getElementById('bulk-actions-bar');
        const selectedCountEl = document.getElementById('selected-count');
        const bulkDeleteBtn = document.getElementById('bulk-delete-btn');
        const bulkArchiveBtn = document.getElementById('bulk-archive-btn');

        // Fonction pour mettre à jour l'affichage de la barre d'actions
        function updateBulkActionsBar() {
            const selectedIds = getSelectedIds();
            const count = selectedIds.length;

            if (count > 0) {
                bulkActionsBar.classList.remove('d-none');
                selectedCountEl.textContent = count;
            } else {
                bulkActionsBar.classList.add('d-none');
            }

            // Mettre à jour l'état de la checkbox "Tout sélectionner"
            const allChecked = projectCheckboxes.length > 0 && selectedIds.length === projectCheckboxes.length;
            const someChecked = selectedIds.length > 0 && selectedIds.length < projectCheckboxes.length;
            selectAllCheckbox.checked = allChecked;
            selectAllCheckbox.indeterminate = someChecked;
        }

        // Fonction pour récupérer les IDs sélectionnés
        function getSelectedIds() {
            return Array.from(projectCheckboxes)
                .filter(cb => cb.checked)
                .map(cb => cb.value);
        }

        // Gestionnaire "Tout sélectionner"
        if (selectAllCheckbox) {
            selectAllCheckbox.addEventListener('change', function() {
                projectCheckboxes.forEach(cb => {
                    cb.checked = this.checked;
                });
                updateBulkActionsBar();
            });
        }

        // Gestionnaire checkboxes individuelles
        projectCheckboxes.forEach(cb => {
            cb.addEventListener('change', updateBulkActionsBar);
        });

        // Gestionnaire suppression en masse
        if (bulkDeleteBtn) {
            bulkDeleteBtn.addEventListener('click', function() {
                const selectedIds = getSelectedIds();
                if (selectedIds.length === 0) return;

                if (!confirm(`Êtes-vous sûr de vouloir supprimer ${selectedIds.length} projet(s) ?`)) {
                    return;
                }

                // Envoyer la requête de suppression
                fetch('{{ path('project_bulk_delete') }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({
                        ids: selectedIds,
                        _token: '{{ csrf_token('bulk_delete') }}'
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Recharger la page
                        window.location.reload();
                    } else {
                        alert('Erreur : ' + (data.message || 'Une erreur est survenue'));
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    alert('Une erreur est survenue lors de la suppression');
                });
            });
        }

        // Gestionnaire archivage en masse
        if (bulkArchiveBtn) {
            bulkArchiveBtn.addEventListener('click', function() {
                const selectedIds = getSelectedIds();
                if (selectedIds.length === 0) return;

                if (!confirm(`Êtes-vous sûr de vouloir archiver ${selectedIds.length} projet(s) ?`)) {
                    return;
                }

                // Envoyer la requête d'archivage
                fetch('{{ path('project_bulk_archive') }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({
                        ids: selectedIds,
                        _token: '{{ csrf_token('bulk_archive') }}'
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Recharger la page
                        window.location.reload();
                    } else {
                        alert('Erreur : ' + (data.message || 'Une erreur est survenue'));
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    alert('Une erreur est survenue lors de l\'archivage');
                });
            });
        }
    });
    </script>
{% endblock %}
