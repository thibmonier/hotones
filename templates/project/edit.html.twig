{% extends 'layouts/base.html.twig' %}

{% block title %}Modifier {{ project.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css">
{% endblock %}

{% block content %}
    {{ component('breadcrumb', { title: 'Modifier le projet', pagetitle: 'Projets' }) }}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Modifier le projet</h4>
                <div class="page-title-right">
                    <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-secondary me-2">
                        <i class="bx bx-arrow-back me-1"></i> Retour
                    </a>
                    <a href="{{ path('project_index') }}" class="btn btn-outline-secondary">
                        <i class="bx bx-list-ul me-1"></i> Liste
                    </a>
                </div>
            </div>
        </div>
    </div>

    {{ form_start(form) }}

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Informations générales</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.name) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.client) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.description) }}
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.startDate) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.endDate) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.status) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_row(form.projectType) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.isInternal) }}
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Achats et fournitures</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        {{ form_row(form.purchasesAmount) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.purchasesDescription) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Équipe projet</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        {{ form_row(form.keyAccountManager) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.projectManager) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.projectDirector) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.salesPerson) }}
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Catégorie de service</h4>
                </div>
                <div class="card-body">
                    {{ form_row(form.serviceCategory) }}
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Technologies</h4>
                </div>
                <div class="card-body">
                    {{ form_row(form.technologies) }}
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bx bx-save me-1"></i> Enregistrer les modifications
                    </button>
                </div>
            </div>

            {% if is_granted('ROLE_MANAGER') %}
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title mb-0">Zone dangereuse</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted">Supprimer ce projet de manière permanente.</p>
                    <form method="post" action="{{ path('project_delete', {'id': project.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
                        <button type="submit" class="btn btn-danger btn-sm w-100" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce projet ?')">
                            <i class="bx bx-trash me-1"></i> Supprimer le projet
                        </button>
                    </form>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Choices.js for technologies
            const technologiesSelect = document.querySelector('.select2-multiple');
            if (technologiesSelect) {
                new Choices(technologiesSelect, {
                    removeItemButton: true,
                    placeholder: true,
                    placeholderValue: technologiesSelect.getAttribute('data-placeholder') || 'Sélectionner des technologies',
                    searchPlaceholderValue: 'Rechercher...',
                    noResultsText: 'Aucune technologie trouvée',
                    noChoicesText: 'Aucune technologie disponible',
                    itemSelectText: 'Cliquer pour sélectionner',
                });
            }
        });
    </script>
{% endblock %}
