{% extends 'layouts/base.html.twig' %}

{% block title %}{{ project.name }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">{{ project.name }}</h4>
                <div class="page-title-right">
                    <a href="{{ path('project_index') }}" class="btn btn-secondary me-2">
                        <i class="bx bx-arrow-back me-1"></i> Retour
                    </a>
                    {% if is_granted('ROLE_CHEF_PROJET') %}
                        <a href="{{ path('project_edit', {'id': project.id}) }}" class="btn btn-primary">
                            <i class="bx bx-edit me-1"></i> Modifier
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Indicateurs KPI rapides -->
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card card-h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted mb-3 lh-1 d-block text-truncate">CA signé</span>
                            <h4 class="mb-3">
                                <span class="counter-value text-success">{{ project.totalSoldAmount|number_format(0, ',', ' ') }}€</span>
                            </h4>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <div class="avatar-sm bg-soft-success rounded">
                                <span class="avatar-title bg-soft-success text-success font-size-24">
                                    <i class="bx bx-euro"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted mb-3 lh-1 d-block text-truncate">Heures vendues</span>
                            <h4 class="mb-3">
                                <span class="counter-value text-info">{{ project.totalTasksSoldHours|number_format(0, ',', ' ') }}h</span>
                            </h4>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <div class="avatar-sm bg-soft-info rounded">
                                <span class="avatar-title bg-soft-info text-info font-size-24">
                                    <i class="bx bx-time"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted mb-3 lh-1 d-block text-truncate">Temps passé</span>
                            <h4 class="mb-3">
                                <span class="counter-value text-warning">{{ project.totalTasksSpentHours|number_format(0, ',', ' ') }}h</span>
                            </h4>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <div class="avatar-sm bg-soft-warning rounded">
                                <span class="avatar-title bg-soft-warning text-warning font-size-24">
                                    <i class="bx bx-trending-up"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted mb-3 lh-1 d-block text-truncate">Avancement</span>
                            <h4 class="mb-3">
                                <span class="counter-value text-primary">{{ project.globalProgress|number_format(0) }}%</span>
                            </h4>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <div class="avatar-sm bg-soft-primary rounded">
                                <span class="avatar-title bg-soft-primary text-primary font-size-24">
                                    <i class="bx bx-line-chart"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Onglets principaux -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-tabs-custom" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#tab-overview" role="tab">
                                <i class="bx bx-info-circle me-1"></i>
                                Aperçu
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#tab-orders" role="tab">
                                <i class="bx bx-receipt me-1"></i>
                                Devis <span class="badge bg-primary ms-1">{{ project.orders|length }}</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#tab-tasks" role="tab">
                                <i class="bx bx-task me-1"></i>
                                Tâches <span class="badge bg-primary ms-1">{{ project.tasks|length }}</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#tab-planning" role="tab">
                                <i class="bx bx-calendar me-1"></i>
                                Planning
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#tab-time" role="tab">
                                <i class="bx bx-time-five me-1"></i>
                                Temps
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#tab-profitability" role="tab">
                                <i class="bx bx-trending-up me-1"></i>
                                Rentabilité
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content p-3">
                        <!-- Onglet Aperçu -->
                        <div class="tab-pane active" id="tab-overview" role="tabpanel">
                            {% include 'project/tabs/_overview.html.twig' %}
                        </div>

                        <!-- Onglet Devis -->
                        <div class="tab-pane" id="tab-orders" role="tabpanel">
                            {% include 'project/tabs/_orders.html.twig' %}
                        </div>

                        <!-- Onglet Tâches -->
                        <div class="tab-pane" id="tab-tasks" role="tabpanel">
                            {% include 'project/tabs/_tasks.html.twig' %}
                        </div>

                        <!-- Onglet Planning -->
                        <div class="tab-pane" id="tab-planning" role="tabpanel">
                            {% include 'project/tabs/_planning.html.twig' %}
                        </div>

                        <!-- Onglet Temps -->
                        <div class="tab-pane" id="tab-time" role="tabpanel">
                            {% include 'project/tabs/_time.html.twig' %}
                        </div>

                        <!-- Onglet Rentabilité -->
                        <div class="tab-pane" id="tab-profitability" role="tabpanel">
                            {% include 'project/tabs/_profitability.html.twig' %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Sauvegarder l'onglet actif dans l'URL
        document.querySelectorAll('a[data-bs-toggle="tab"]').forEach(tab => {
            tab.addEventListener('shown.bs.tab', function (e) {
                const tabId = e.target.getAttribute('href');
                history.replaceState(null, null, tabId);
            });
        });

        // Restaurer l'onglet depuis l'URL au chargement
        document.addEventListener('DOMContentLoaded', function() {
            const hash = window.location.hash;
            if (hash) {
                const tab = document.querySelector(`a[href="${hash}"]`);
                if (tab) {
                    new bootstrap.Tab(tab).show();
                }
            }
        });
    </script>
{% endblock %}
