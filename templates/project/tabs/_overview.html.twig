<div class="row">
    <div class="col-lg-8">
        <h6 class="mb-3">Informations générales</h6>
        <table class="table table-nowrap mb-4">
            <tbody>
                <tr>
                    <th style="width: 35%;">Client</th>
                    <td>{{ project.client ? project.client.name : 'Non défini' }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>
                        <span class="badge bg-{% if project.isInternal %}info{% else %}primary{% endif %}">
                            {{ project.isInternal ? 'Interne' : 'Client' }}
                        </span>
                        <span class="badge bg-secondary ms-1">{{ project.projectType|capitalize }}</span>
                    </td>
                </tr>
                <tr>
                    <th>Catégorie</th>
                    <td>
                        {% if project.serviceCategory %}
                            {{ project.serviceCategory.name }}
                        {% else %}
                            <span class="text-muted">Non définie</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Technologies</th>
                    <td>
                        {% for tech in project.technologies %}
                            <span class="badge bg-light text-dark me-1">{{ tech.name }}</span>
                        {% else %}
                            <span class="text-muted">Aucune</span>
                        {% endfor %}
                    </td>
                </tr>
                {% if project.startDate or project.endDate %}
                <tr>
                    <th>Période</th>
                    <td>
                        {% if project.startDate %}{{ project.startDate|date('d/m/Y') }}{% endif %}
                        {% if project.endDate %} → {{ project.endDate|date('d/m/Y') }}{% endif %}
                    </td>
                </tr>
                {% endif %}
            </tbody>
        </table>

        {% if project.description %}
        <h6 class="mb-2">Description</h6>
        <p class="text-muted">{{ project.description|nl2br }}</p>
        {% endif %}
    </div>

    <div class="col-lg-4">
        <h6 class="mb-3">Équipe projet</h6>
        <div class="list-group list-group-flush">
            {% if project.salesPerson %}
            <div class="list-group-item px-0">
                <small class="text-muted">Commercial</small><br>
                <strong>{{ project.salesPerson.firstName }} {{ project.salesPerson.lastName }}</strong>
            </div>
            {% endif %}
            {% if project.keyAccountManager %}
            <div class="list-group-item px-0">
                <small class="text-muted">Key Account Manager</small><br>
                <strong>{{ project.keyAccountManager.firstName }} {{ project.keyAccountManager.lastName }}</strong>
            </div>
            {% endif %}
            {% if project.projectManager %}
            <div class="list-group-item px-0">
                <small class="text-muted">Chef de projet</small><br>
                <strong>{{ project.projectManager.firstName }} {{ project.projectManager.lastName }}</strong>
            </div>
            {% endif %}
            {% if project.projectDirector %}
            <div class="list-group-item px-0">
                <small class="text-muted">Directeur de projet</small><br>
                <strong>{{ project.projectDirector.firstName }} {{ project.projectDirector.lastName }}</strong>
            </div>
            {% endif %}
        </div>
    </div>
</div>
