{% extends 'layouts/base.html.twig' %}

{% block title %}Prédictions & Alertes{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Prédictions & Alertes</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="{{ path('home') }}">Tableau de bord</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('analytics_dashboard') }}">Analytics</a></li>
                        <li class="breadcrumb-item active">Prédictions</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    {# Alert Summary Cards #}
    <div class="row">
        <div class="col-md-3 col-sm-6">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-grow-1">
                            <p class="text-muted fw-medium">Total Alertes (7j)</p>
                            <h4 class="mb-0">{{ alert_stats.total }}</h4>
                        </div>
                        <div class="flex-shrink-0 align-self-center">
                            <div class="mini-stat-icon avatar-sm rounded-circle bg-primary">
                                <span class="avatar-title">
                                    <i class="bx bx-bell font-size-24"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-grow-1">
                            <p class="text-muted fw-medium">Budget dépassé</p>
                            <h4 class="mb-0">{{ alert_stats.budget }}</h4>
                        </div>
                        <div class="flex-shrink-0 align-self-center">
                            <div class="mini-stat-icon avatar-sm rounded-circle bg-warning">
                                <span class="avatar-title">
                                    <i class="bx bx-error font-size-24"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-grow-1">
                            <p class="text-muted fw-medium">Marge faible</p>
                            <h4 class="mb-0">{{ alert_stats.margin }}</h4>
                        </div>
                        <div class="flex-shrink-0 align-self-center">
                            <div class="mini-stat-icon avatar-sm rounded-circle bg-danger">
                                <span class="avatar-title">
                                    <i class="bx bx-trending-down font-size-24"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-grow-1">
                            <p class="text-muted fw-medium">Paiements proches</p>
                            <h4 class="mb-0">{{ alert_stats.payment }}</h4>
                        </div>
                        <div class="flex-shrink-0 align-self-center">
                            <div class="mini-stat-icon avatar-sm rounded-circle bg-info">
                                <span class="avatar-title">
                                    <i class="bx bx-calendar font-size-24"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Profitability Predictions Table #}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">
                        <i class="bx bx-line-chart me-2"></i>Prédictions de Rentabilité
                    </h4>

                    {% if profitability_predictions|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Projet</th>
                                        <th>Client</th>
                                        <th class="text-center">Avancement</th>
                                        <th class="text-end">Marge actuelle</th>
                                        <th class="text-end">Marge prédite</th>
                                        <th class="text-center">Dérive</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in profitability_predictions %}
                                        {% set project = item.project %}
                                        {% set prediction = item.prediction %}
                                        {% set predictedMargin = prediction.predictedMargin.projected %}
                                        {% set currentMargin = prediction.currentMargin %}

                                        <tr>
                                            <td>
                                                <a href="{{ path('project_show', {id: project.id}) }}" class="text-dark fw-medium">
                                                    {{ project.name }}
                                                </a>
                                            </td>
                                            <td>{{ project.client.name }}</td>
                                            <td class="text-center">
                                                <div class="progress" style="height: 6px;">
                                                    <div class="progress-bar bg-info" role="progressbar"
                                                         style="width: {{ prediction.currentProgress }}%">
                                                    </div>
                                                </div>
                                                <small class="text-muted">{{ prediction.currentProgress }}%</small>
                                            </td>
                                            <td class="text-end">
                                                <span class="badge badge-soft-{{ currentMargin >= 20 ? 'success' : (currentMargin >= 10 ? 'warning' : 'danger') }}">
                                                    {{ currentMargin|number_format(1) }}%
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <span class="badge badge-soft-{{ predictedMargin >= 20 ? 'success' : (predictedMargin >= 10 ? 'warning' : 'danger') }}">
                                                    {{ predictedMargin|number_format(1) }}%
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                {% if prediction.budgetDrift.deviation > 10 %}
                                                    <span class="badge bg-danger">
                                                        <i class="bx bx-trending-down"></i> {{ prediction.budgetDrift.deviation|number_format(0) }}%
                                                    </span>
                                                {% elseif prediction.budgetDrift.deviation > 5 %}
                                                    <span class="badge bg-warning">
                                                        <i class="bx bx-trending-down"></i> {{ prediction.budgetDrift.deviation|number_format(0) }}%
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-success">
                                                        <i class="bx bx-check"></i> OK
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                <button type="button" class="btn btn-sm btn-outline-primary"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#predictionModal{{ project.id }}">
                                                    <i class="bx bx-show-alt"></i> Détails
                                                </button>
                                            </td>
                                        </tr>

                                        {# Include modal for this project #}
                                        {% include 'analytics/_prediction_modal.html.twig' with {
                                            'project': project,
                                            'prediction': prediction
                                        } %}
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-info mb-0">
                            <i class="bx bx-info-circle me-2"></i>
                            Aucune prédiction disponible. Les projets doivent atteindre au moins 30% d'avancement.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Workload Chart #}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">
                        <i class="bx bx-bar-chart me-2"></i>Charge de Travail Prévue (6 mois)
                    </h4>
                    <canvas id="workloadChart" height="80"></canvas>
                </div>
            </div>
        </div>
    </div>

    {# Recent Alerts Table #}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">
                        <i class="bx bx-history me-2"></i>Alertes Récentes (7 derniers jours)
                    </h4>

                    {% if recent_alerts|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-sm table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 50px;"></th>
                                        <th>Type</th>
                                        <th>Message</th>
                                        <th style="width: 150px;">Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for alert in recent_alerts %}
                                        <tr>
                                            <td>
                                                <div class="avatar-xs">
                                                    <span class="avatar-title rounded-circle bg-{{ alert.type.color }}-subtle text-{{ alert.type.color }}">
                                                        <i class="fa {{ alert.type.icon }}"></i>
                                                    </span>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge badge-soft-{{ alert.type.color }}">
                                                    {{ alert.type.label }}
                                                </span>
                                            </td>
                                            <td>{{ alert.message }}</td>
                                            <td>
                                                <small class="text-muted">
                                                    {{ alert.createdAt|date('d/m/Y H:i') }}
                                                </small>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-success mb-0">
                            <i class="bx bx-check-circle me-2"></i>
                            Aucune alerte enregistrée ces 7 derniers jours.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Workload Chart
            const workloadCtx = document.getElementById('workloadChart');
            if (workloadCtx) {
                new Chart(workloadCtx, {
                    type: 'bar',
                    data: {
                        labels: {{ workload_data.labels|json_encode|raw }},
                        datasets: {{ workload_data.datasets|json_encode|raw }}
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                position: 'top',
                            },
                            title: {
                                display: false
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return context.dataset.label + ': ' + context.parsed.y.toFixed(1) + ' jours';
                                    }
                                }
                            }
                        },
                        scales: {
                            x: {
                                stacked: true,
                            },
                            y: {
                                stacked: true,
                                ticks: {
                                    callback: function(value) {
                                        return value + ' j';
                                    }
                                }
                            }
                        }
                    }
                });
            }
        });
    </script>
{% endblock %}
