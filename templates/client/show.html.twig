{% extends 'layouts/base.html.twig' %}

{% block title %}{{ client.name }}{% endblock %}

{% block content %}
<div class="row">
  <div class="col-12">
    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
      <h4 class="mb-sm-0 font-size-18">{{ client.name }}</h4>
      <div class="page-title-right">
        <a href="{{ path('client_index') }}" class="btn btn-secondary me-2"><i class="bx bx-arrow-back me-1"></i> Retour</a>
        {% if is_granted('ROLE_CHEF_PROJET') %}
          <a href="{{ path('client_edit', {id: client.id}) }}" class="btn btn-primary"><i class="bx bx-edit me-1"></i> Modifier</a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header"><h4 class="card-title">Informations</h4></div>
      <div class="card-body">
        <div class="row align-items-center">
          <div class="col-auto">
            {% if client.logoPath %}
              <img src="{{ client.logoPath }}" class="rounded" style="width:64px;height:64px;object-fit:cover;" alt="logo">
            {% else %}
              <div class="avatar-xs"><span class="avatar-title rounded font-size-24">{{ client.name|first|upper }}</span></div>
            {% endif %}
          </div>
          <div class="col">
            <div class="mb-1"><strong>{{ client.name }}</strong></div>
            {% if client.website %}<div><a href="{{ client.website }}" target="_blank" rel="noopener">{{ client.website }}</a></div>{% endif %}
            {% if client.description %}<div class="text-muted mt-2">{{ client.description|nl2br }}</div>{% endif %}
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="card-title mb-0">Contacts</h4>
        {% if is_granted('ROLE_CHEF_PROJET') %}
          <a href="{{ path('client_contact_new', {id: client.id}) }}" class="btn btn-sm btn-primary"><i class="bx bx-plus"></i> Ajouter</a>
        {% endif %}
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-nowrap mb-0">
            <thead class="table-light">
              <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Mobile</th>
                <th>Poste</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {% for contact in client.contacts %}
              <tr>
                <td>{{ contact.firstName }} {{ contact.lastName|upper }}</td>
                <td>{% if contact.email %}<a href="mailto:{{ contact.email }}">{{ contact.email }}</a>{% else %}<small class="text-muted">-</small>{% endif %}</td>
                <td>{{ contact.phone ?? '-' }}</td>
                <td>{{ contact.mobilePhone ?? '-' }}</td>
                <td>{{ contact.positionTitle ?? '-' }}</td>
                <td>
                  <div class="btn-group">
                    <a href="{{ path('client_contact_edit', {id: contact.id}) }}" class="btn btn-outline-primary btn-sm"><i class="bx bx-edit"></i></a>
                    <form method="post" action="{{ path('client_contact_delete', {id: contact.id}) }}" onsubmit="return confirm('Supprimer ce contact ?')" class="d-inline">
                      <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
                      <button type="submit" class="btn btn-outline-danger btn-sm"><i class="bx bx-trash"></i></button>
                    </form>
                  </div>
                </td>
              </tr>
              {% else %}
              <tr>
                <td colspan="6" class="text-center text-muted py-3">Aucun contact</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="card">
      <div class="card-body">
        <h5 class="font-size-14">Résumé</h5>
        <ul class="list-unstyled mb-0">
          <li class="d-flex justify-content-between"><span>Contacts</span><span class="badge bg-light text-dark">{{ client.contacts|length }}</span></li>
        </ul>
      </div>
    </div>
  </div>
</div>
{% endblock %}