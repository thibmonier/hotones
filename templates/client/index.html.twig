{% extends 'layouts/base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            {% include 'components/page_header.html.twig' with {
                title: 'Clients',
                breadcrumb: [
                    {label: 'Clients', path: null}
                ],
                actions: [
                    {label: 'Exporter CSV', path: 'client_export_csv', params: filters, icon: 'bx-download', class: 'btn-outline-secondary', permission: 'ROLE_INTERVENANT'},
                    {label: 'Nouveau client', path: 'client_new', icon: 'bx-plus', class: 'btn-primary', permission: 'ROLE_CHEF_PROJET'}
                ]
            } %}
        </div>
    </div>

    {# Filtres #}
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" action="{{ path('client_index') }}" class="row g-2 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label">Recherche</label>
                            <input type="text" class="form-control form-control-sm" name="search" value="{{ filters.search }}" placeholder="Nom, site web ou description...">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Niveau de service</label>
                            <select class="form-select form-select-sm" name="service_level">
                                <option value="">Tous</option>
                                <option value="bronze" {% if filters.service_level == 'bronze' %}selected{% endif %}>Bronze</option>
                                <option value="silver" {% if filters.service_level == 'silver' %}selected{% endif %}>Silver</option>
                                <option value="gold" {% if filters.service_level == 'gold' %}selected{% endif %}>Gold</option>
                                <option value="platinum" {% if filters.service_level == 'platinum' %}selected{% endif %}>Platinum</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Par page</label>
                            <select class="form-select form-select-sm" name="per_page">
                                <option value="10" {% if app.request.query.get('per_page') == '10' %}selected{% endif %}>10</option>
                                <option value="25" {% if app.request.query.get('per_page', '25') == '25' %}selected{% endif %}>25</option>
                                <option value="50" {% if app.request.query.get('per_page') == '50' %}selected{% endif %}>50</option>
                                <option value="100" {% if app.request.query.get('per_page') == '100' %}selected{% endif %}>100</option>
                            </select>
                        </div>
                        <div class="col-12 mt-2">
                            <button type="submit" class="btn btn-primary btn-sm">Filtrer</button>
                            <a href="{{ path('client_index') }}" class="btn btn-outline-secondary btn-sm">Réinitialiser</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Client</th>
                                    <th>Site web</th>
                                    <th>Niveau de service</th>
                                    <th>Contacts</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for client in clients %}
                                <tr>
                                    <td>
                                        {% include 'client/_name_column.html.twig' with {item: client} %}
                                    </td>
                                    <td>
                                        {% include 'client/_website_column.html.twig' with {item: client} %}
                                    </td>
                                    <td>
                                        {% include 'client/_service_level_column.html.twig' with {item: client} %}
                                    </td>
                                    <td>
                                        {% include 'client/_contacts_column.html.twig' with {item: client} %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('client_show', {'id': client.id}) }}" class="btn btn-outline-secondary btn-sm" title="Voir">
                                                <i class="bx bx-show"></i>
                                            </a>
                                            {% if is_granted('ROLE_CHEF_PROJET') %}
                                            <a href="{{ path('client_edit', {'id': client.id}) }}" class="btn btn-outline-primary btn-sm" title="Modifier">
                                                <i class="bx bx-edit"></i>
                                            </a>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="5" class="text-center text-muted">
                                        <div class="py-4">
                                            <i class="bx bx-briefcase font-size-24 mb-2"></i>
                                            <p>Aucun client trouvé</p>
                                            {% if is_granted('ROLE_CHEF_PROJET') %}
                                            <a href="{{ path('client_new') }}" class="btn btn-primary">Créer le premier client</a>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {# Pagination #}
                    {% if clients.pageCount > 1 %}
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div class="text-muted">
                            Affichage de {{ clients.currentPageOffsetStart }} à {{ clients.currentPageOffsetEnd }} sur {{ clients.totalItemCount }} clients
                        </div>
                        <div>
                            {{ knp_pagination_render(clients) }}
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
