{% extends 'layouts/base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            {% include 'components/page_header.html.twig' with {
                title: 'Clients',
                breadcrumb: [
                    {label: 'Commercial', path: null},
                    {label: 'Clients', path: null}
                ],
                actions: [
                    {label: 'Exporter CSV', path: 'client_export_csv', params: filters, icon: 'bx-download', class: 'btn-outline-secondary', permission: 'ROLE_INTERVENANT'},
                    {label: 'Nouveau client', path: 'client_new', icon: 'bx-plus', class: 'btn-primary', permission: 'ROLE_CHEF_PROJET'}
                ]
            } %}
        </div>
    </div>

    <!-- Filtres -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    {% set activeFiltersCount = 0 %}
                    {% set activeFiltersCount = activeFiltersCount
                        + (filters.search ? 1 : 0)
                        + (filters.service_level ? 1 : 0)
                        + (sort != 'name' ? 1 : 0)
                        + (dir != 'ASC' ? 1 : 0)
                    %}
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5 class="mb-0">Filtres
                            {% if activeFiltersCount > 0 %}
                                <span class="badge bg-info ms-2">{{ activeFiltersCount }}</span>
                            {% endif %}
                        </h5>
                        <div class="btn-group">
                            <a href="{{ path('client_export_csv', filters) }}" class="btn btn-sm btn-outline-primary">Exporter CSV</a>
                            <a href="{{ path('client_index', { reset: 1 }) }}" class="btn btn-sm btn-outline-secondary">Effacer</a>
                            <button type="button" class="btn btn-sm btn-outline-dark" data-bs-toggle="collapse" data-bs-target="#filters-clients" aria-expanded="true" aria-controls="filters-clients" id="filters-toggle-clients">
                                <i class="bx bx-chevron-up"></i>
                            </button>
                        </div>
                    </div>
                    <div id="filters-clients" class="collapse show">
                        {% set chips = [] %}
                        {% if filters.search %}
                            {% set chips = chips|merge(['Recherche: ' ~ filters.search]) %}
                        {% endif %}
                        {% if filters.service_level %}
                            {% set levelLabels = {'vip': 'VIP', 'priority': 'Prioritaire', 'standard': 'Standard', 'low': 'Basse priorité'} %}
                            {% set chips = chips|merge(['Niveau: ' ~ (levelLabels[filters.service_level] ?? filters.service_level)]) %}
                        {% endif %}
                        {% if sort != 'name' or dir != 'ASC' %}
                            {% set sortLabels = {'name': 'Nom', 'serviceLevel': 'Niveau de service'} %}
                            {% set chips = chips|merge(['Tri: ' ~ (sortLabels[sort] ?? sort) ~ ' ' ~ dir]) %}
                        {% endif %}
                        {% if chips|length > 0 %}
                            <div class="mb-2 small text-muted">
                                {% for c in chips %}
                                    <span class="badge bg-light text-dark me-1">{{ c }}</span>
                                {% endfor %}
                            </div>
                            <script>
                              (function(){
                                try { window.__ACTIVE_FILTERS = {{ chips|json_encode|raw }}; window.dispatchEvent(new Event('active-filters-changed')); } catch(e) {}
                              })();
                            </script>
                        {% else %}
                            <script>try { window.__ACTIVE_FILTERS = []; window.dispatchEvent(new Event('active-filters-changed')); } catch(e) {}</script>
                        {% endif %}
                        <form method="get" class="row g-2 align-items-end">
                            <div class="col-12 mb-2">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bx bx-search"></i></span>
                                    <input type="text" class="form-control" name="search" value="{{ filters.search }}" placeholder="Rechercher un client (nom, site web, description)...">
                                    {% if filters.search %}
                                        <a href="{{ path('client_index', filters|merge({search: null})) }}" class="btn btn-outline-secondary" title="Effacer la recherche">
                                            <i class="bx bx-x"></i>
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Niveau de service</label>
                                <select class="form-select" name="service_level">
                                    <option value="">Tous</option>
                                    <option value="vip" {% if filters.service_level == 'vip' %}selected{% endif %}>VIP</option>
                                    <option value="priority" {% if filters.service_level == 'priority' %}selected{% endif %}>Prioritaire</option>
                                    <option value="standard" {% if filters.service_level == 'standard' %}selected{% endif %}>Standard</option>
                                    <option value="low" {% if filters.service_level == 'low' %}selected{% endif %}>Basse priorité</option>
                                </select>
                            </div>
                            <div class="col-12 mt-2 d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Filtrer</button>
                                <a href="{{ path('client_index', { reset: 1 }) }}" class="btn btn-outline-secondary">Réinitialiser</a>
                            </div>
                        </form>
                    </div>
                    <script>
                        (function(){
                          var key='filters:clients:collapsed';
                          var el=document.getElementById('filters-clients');
                          var btn=document.getElementById('filters-toggle-clients');
                          if(!el||!btn) return;
                          try {
                            var hasActive={{ (chips|length > 0) ? 'true' : 'false' }};
                            var isSmall=window.matchMedia('(max-width: 767.98px)').matches;
                            var collapsed = localStorage.getItem(key) === '1' || (isSmall && !hasActive);
                            if (collapsed) { el.classList.remove('show'); btn.setAttribute('aria-expanded','false'); }
                            var updateIcon=function(){ var i=btn.querySelector('i'); if(!i) return; if (el.classList.contains('show')) { i.className='bx bx-chevron-up'; localStorage.setItem(key,'0'); btn.setAttribute('aria-expanded','true'); } else { i.className='bx bx-chevron-down'; localStorage.setItem(key,'1'); btn.setAttribute('aria-expanded','false'); } };
                            el.addEventListener('shown.bs.collapse', updateIcon);
                            el.addEventListener('hidden.bs.collapse', updateIcon);
                            updateIcon();
                          } catch(e) {}
                        })();
                    </script>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>
                                        <a href="{{ path('client_index', filters|merge({ sort: 'name', dir: sort == 'name' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Client
                                            {% if sort == 'name' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>Site web</th>
                                    <th>
                                        <a href="{{ path('client_index', filters|merge({ sort: 'serviceLevel', dir: sort == 'serviceLevel' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Niveau de service
                                            {% if sort == 'serviceLevel' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>Contacts</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for client in clients %}
                                <tr>
                                    <td>
                                        {% include 'client/_name_column.html.twig' with {item: client} %}
                                    </td>
                                    <td>
                                        {% include 'client/_website_column.html.twig' with {item: client} %}
                                    </td>
                                    <td>
                                        {% include 'client/_service_level_column.html.twig' with {item: client} %}
                                    </td>
                                    <td>
                                        {% include 'client/_contacts_column.html.twig' with {item: client} %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('client_show', {'id': client.id}) }}" class="btn btn-outline-secondary btn-sm" title="Voir">
                                                <i class="bx bx-show"></i>
                                            </a>
                                            {% if is_granted('ROLE_CHEF_PROJET') %}
                                            <a href="{{ path('client_edit', {'id': client.id}) }}" class="btn btn-outline-primary btn-sm" title="Modifier">
                                                <i class="bx bx-edit"></i>
                                            </a>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="5" class="text-center text-muted">
                                        <div class="py-4">
                                            <i class="bx bx-briefcase font-size-24 mb-2"></i>
                                            <p>Aucun client trouvé</p>
                                            {% if is_granted('ROLE_CHEF_PROJET') %}
                                            <a href="{{ path('client_new') }}" class="btn btn-primary">Créer le premier client</a>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {# Pagination #}
                    {% if clients.pageCount > 1 %}
                        {% include 'components/pagination.html.twig' with {
                            currentPage: clients.currentPageNumber,
                            totalPages: clients.pageCount,
                            itemsPerPage: clients.itemNumberPerPage,
                            totalItems: clients.totalItemCount,
                            queryParams: filters|default({})
                        } %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
