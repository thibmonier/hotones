{% extends 'layouts/base.html.twig' %}

{% block title %}Modifier {{ client.name }}{% endblock %}

{% block content %}
<div class="row">
  <div class="col-12">
    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
      <h4 class="mb-sm-0 font-size-18">Modifier le client</h4>
      <div class="page-title-right">
        <a href="{{ path('client_show', {id: client.id}) }}" class="btn btn-secondary me-2"><i class="bx bx-arrow-back me-1"></i> Retour</a>
        <a href="{{ path('client_index') }}" class="btn btn-outline-secondary"><i class="bx bx-list-ul me-1"></i> Liste</a>
      </div>
    </div>
  </div>
</div>

<form method="post" enctype="multipart/form-data">
  <div class="row">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header"><h4 class="card-title">Informations</h4></div>
        <div class="card-body">
          <div class="mb-3">
            <label class="form-label" for="name">Nom *</label>
            <input type="text" class="form-control" id="name" name="name" value="{{ client.name }}" required>
          </div>
          <div class="mb-3">
            <label class="form-label" for="website">Site web</label>
            <input type="url" class="form-control" id="website" name="website" value="{{ client.website }}">
          </div>
          <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3">{{ client.description }}</textarea>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h4 class="card-title">Niveau de service</h4>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <label class="form-label">Mode de définition</label>
            <select class="form-select" id="service_level_mode" name="service_level_mode">
              <option value="auto" {{ client.serviceLevelMode == 'auto' ? 'selected' : '' }}>Automatique (basé sur le CA)</option>
              <option value="manual" {{ client.serviceLevelMode == 'manual' ? 'selected' : '' }}>Manuel</option>
            </select>
            <div class="form-text">
              En mode auto, le niveau est calculé selon le CA annuel
            </div>
          </div>

          <div class="mb-3" id="manual_level_container" style="display: {{ client.serviceLevelMode == 'manual' ? 'block' : 'none' }};">
            <label class="form-label">Niveau de service</label>
            <select class="form-select" name="service_level">
              <option value="">-- Sélectionner --</option>
              <option value="vip" {{ client.serviceLevel == 'vip' ? 'selected' : '' }}>VIP</option>
              <option value="priority" {{ client.serviceLevel == 'priority' ? 'selected' : '' }}>Prioritaire</option>
              <option value="standard" {{ client.serviceLevel == 'standard' ? 'selected' : '' }}>Standard</option>
              <option value="low" {{ client.serviceLevel == 'low' ? 'selected' : '' }}>Basse priorité</option>
            </select>
          </div>

          {% if client.serviceLevelMode == 'auto' and client.serviceLevel %}
            <div class="alert alert-info">
              <strong>Niveau actuel (calculé) :</strong>
              <span class="badge {{ client.serviceLevelBadgeClass }} ms-2">{{ client.serviceLevelLabel }}</span>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="card">
        <div class="card-header"><h4 class="card-title">Logo</h4></div>
        <div class="card-body">
          {% if client.logoPath %}
            <img src="{{ client.logoPath }}" class="img-fluid rounded mb-2" alt="logo {{ client.name }}">
          {% endif %}
          <input type="file" class="form-control" name="logo" accept="image/*">
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <button type="submit" class="btn btn-primary w-100"><i class="bx bx-save me-1"></i> Enregistrer</button>
        </div>
      </div>
      {% if is_granted('ROLE_MANAGER') %}
      <div class="card">
        <div class="card-header bg-danger text-white"><h4 class="card-title mb-0">Zone dangereuse</h4></div>
        <div class="card-body">
          <form method="post" action="{{ path('client_delete', {id: client.id}) }}" onsubmit="return confirm('Supprimer ce client ?')">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
            <button type="submit" class="btn btn-danger w-100"><i class="bx bx-trash me-1"></i> Supprimer</button>
          </form>
        </div>
      </div>
      {% endif %}
    </div>
  </div>
</form>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const modeSelect = document.getElementById('service_level_mode');
    const manualContainer = document.getElementById('manual_level_container');

    if (modeSelect && manualContainer) {
        modeSelect.addEventListener('change', function() {
            manualContainer.style.display = this.value === 'manual' ? 'block' : 'none';
        });
    }
});
</script>
{% endblock %}