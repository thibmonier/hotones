{% extends 'layouts/base.html.twig' %}

{% block title %}Profils métier{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            {% include 'components/page_header.html.twig' with {
                title: 'Profils métier',
                breadcrumb: [
                    {label: 'Configuration', path: null},
                    {label: 'Profils métier', path: null}
                ],
                actions: [
                    {label: 'Exporter CSV', path: 'job_profile_export_csv', params: filters, icon: 'bx-download', class: 'btn-outline-secondary', permission: 'ROLE_ADMIN'},
                    {label: 'Nouveau profil', path: 'job_profile_new', icon: 'bx-plus', class: 'btn-primary', permission: 'ROLE_ADMIN'}
                ]
            } %}
        </div>
    </div>

    {# Filtres #}
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" action="{{ path('job_profile_index') }}" class="row g-2 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label">Recherche</label>
                            <input type="text" class="form-control form-control-sm" name="search" value="{{ filters.search }}" placeholder="Nom ou description...">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Statut</label>
                            <select class="form-select form-select-sm" name="active">
                                <option value="">Tous</option>
                                <option value="1" {% if filters.active == '1' %}selected{% endif %}>Actif</option>
                                <option value="0" {% if filters.active == '0' %}selected{% endif %}>Inactif</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Par page</label>
                            <select class="form-select form-select-sm" name="per_page">
                                <option value="10" {% if app.request.query.get('per_page') == '10' %}selected{% endif %}>10</option>
                                <option value="25" {% if app.request.query.get('per_page', '25') == '25' %}selected{% endif %}>25</option>
                                <option value="50" {% if app.request.query.get('per_page') == '50' %}selected{% endif %}>50</option>
                                <option value="100" {% if app.request.query.get('per_page') == '100' %}selected{% endif %}>100</option>
                            </select>
                        </div>
                        <div class="col-12 mt-2">
                            <button type="submit" class="btn btn-primary btn-sm">Filtrer</button>
                            <a href="{{ path('job_profile_index') }}" class="btn btn-outline-secondary btn-sm">Réinitialiser</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Nom</th>
                                    <th>Description</th>
                                    <th>TJM par défaut</th>
                                    <th>Couleur</th>
                                    <th>Contributeurs</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for profile in profiles %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            {% if profile.color %}
                                                <div class="me-2" style="width: 16px; height: 16px; background-color: {{ profile.color }}; border-radius: 3px;"></div>
                                            {% endif %}
                                            <strong>{{ profile.name }}</strong>
                                        </div>
                                    </td>
                                    <td>{{ profile.description ? profile.description|slice(0, 50) ~ (profile.description|length > 50 ? '...' : '') : '-' }}</td>
                                    <td>{{ profile.defaultDailyRate ? profile.defaultDailyRate|number_format(0, ',', ' ') ~ '€' : '-' }}</td>
                                    <td>
                                        {% if profile.color %}
                                            <span class="badge" style="background-color: {{ profile.color }}; color: white;">{{ profile.color }}</span>
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>{{ profile.contributors|length }}</td>
                                    <td>
                                        {% if profile.active %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Inactif</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('job_profile_show', {'id': profile.id}) }}" class="btn btn-outline-secondary btn-sm" title="Voir">
                                                <i class="bx bx-show"></i>
                                            </a>
                                            <a href="{{ path('job_profile_edit', {'id': profile.id}) }}" class="btn btn-outline-primary btn-sm" title="Modifier">
                                                <i class="bx bx-edit"></i>
                                            </a>
                                            <form method="post" action="{{ path('job_profile_delete', {'id': profile.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ profile.id) }}">
                                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Supprimer" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce profil ?')">
                                                    <i class="bx bx-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="7" class="text-center text-muted">
                                        <div class="py-4">
                                            <i class="bx bx-user-circle font-size-24 mb-2"></i>
                                            <p>Aucun profil trouvé</p>
                                            <a href="{{ path('job_profile_new') }}" class="btn btn-primary">Créer le premier profil</a>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {# Pagination #}
                    {% if profiles.pageCount > 1 %}
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div class="text-muted">
                            Page {{ profiles.currentPageNumber }} sur {{ profiles.pageCount }} ({{ profiles.totalItemCount }} profils au total)
                        </div>
                        <div>
                            {{ knp_pagination_render(profiles) }}
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}