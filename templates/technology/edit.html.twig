{% extends 'layouts/base.html.twig' %}

{% block title %}Modifier {{ technology.name }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            {% include 'components/page_header.html.twig' with {
                title: 'Modifier ' ~ technology.name,
                breadcrumb: [
                    {label: 'Configuration', path: null},
                    {label: 'Technologies', path: 'technology_index'},
                    {label: technology.name, path: null}
                ],
                actions: [
                    {label: 'Retour à la liste', path: 'technology_index', icon: 'bx-arrow-back', class: 'btn-outline-secondary'}
                ]
            } %}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Informations de la technologie</h4>
                </div>
                <div class="card-body">
                    <form method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nom <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="name" name="name" value="{{ technology.name }}" required>
                        </div>

                        <div class="mb-3">
                            <label for="category" class="form-label">Catégorie</label>
                            <select class="form-select" id="category" name="category">
                                {% for key, label in categories %}
                                    <option value="{{ key }}" {% if technology.category == key %}selected{% endif %}>{{ label }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="color" class="form-label">Couleur</label>
                            <input type="color" class="form-control form-control-color" id="color" name="color" value="{{ technology.color ?? '#6f42c1' }}">
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="active" name="active" value="1" {% if technology.active %}checked{% endif %}>
                            <label class="form-check-label" for="active">
                                Actif
                            </label>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a href="{{ path('technology_index') }}" class="btn btn-outline-secondary me-2">Annuler</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bx bx-save me-1"></i> Enregistrer les modifications
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}