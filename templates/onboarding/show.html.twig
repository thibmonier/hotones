{% extends 'layouts/base.html.twig' %}

{% block title %}Onboarding - {{ contributor.fullName }}{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">
                    Onboarding - {{ contributor.fullName }}
                </h4>

                <div class="page-title-right">
                    {% if is_granted('ROLE_MANAGER') %}
                        <a href="{{ path('onboarding_team') }}" class="btn btn-secondary">
                            <i class="bx bx-group me-1"></i> Vue équipe
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Progress summary #}
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="mb-3">Progression globale</h5>
                            <div class="progress" style="height: 30px;">
                                <div class="progress-bar {% if summary.progress == 100 %}bg-success{% endif %}"
                                     role="progressbar"
                                     style="width: {{ summary.progress }}%"
                                     aria-valuenow="{{ summary.progress }}"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                    {{ summary.progress }}%
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <div class="row">
                                    <div class="col-4">
                                        <h4 class="mb-0">{{ summary.completed }}</h4>
                                        <p class="text-muted mb-0 small">Terminées</p>
                                    </div>
                                    <div class="col-4">
                                        <h4 class="mb-0">{{ summary.pending }}</h4>
                                        <p class="text-muted mb-0 small">Restantes</p>
                                    </div>
                                    <div class="col-4">
                                        <h4 class="mb-0 text-danger">{{ summary.overdue }}</h4>
                                        <p class="text-muted mb-0 small">En retard</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% if summary.is_complete %}
                        <div class="alert alert-success mt-3 mb-0">
                            <i class="bx bx-check-circle me-2"></i>
                            <strong>Félicitations !</strong> Toutes les tâches d'onboarding ont été complétées.
                        </div>
                    {% elseif summary.overdue > 0 %}
                        <div class="alert alert-warning mt-3 mb-0">
                            <i class="bx bx-error me-2"></i>
                            <strong>Attention :</strong> {{ summary.overdue }} tâche(s) en retard.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Tasks by week #}
    {% for week_num, week_data in tasks_by_week %}
        <div class="row mb-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bx bx-calendar me-2"></i> {{ week_data.week_label }}
                        </h5>

                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th style="width: 40px;"></th>
                                        <th>Tâche</th>
                                        <th style="width: 120px;">Type</th>
                                        <th style="width: 150px;">Assigné à</th>
                                        <th style="width: 120px;">Échéance</th>
                                        <th style="width: 150px;">Statut</th>
                                        <th style="width: 100px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for task in week_data.tasks %}
                                        <tr class="{% if task.isCompleted %}table-success{% elseif task.isOverdue %}table-danger{% endif %}">
                                            <td class="text-center">
                                                <i class="bx {{ task.typeIcon }} font-size-18"></i>
                                            </td>
                                            <td>
                                                <strong>{{ task.title }}</strong>
                                                {% if task.description %}
                                                    <br>
                                                    <small class="text-muted">{{ task.description }}</small>
                                                {% endif %}
                                                {% if task.comments %}
                                                    <br>
                                                    <small class="text-success">
                                                        <i class="bx bx-message-square-detail"></i> {{ task.comments }}
                                                    </small>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="badge badge-soft-info">{{ task.typeLabel }}</span>
                                            </td>
                                            <td>
                                                {% if task.assignedTo == 'manager' %}
                                                    <span class="badge badge-soft-primary">Manager</span>
                                                {% else %}
                                                    <span class="badge badge-soft-secondary">Collaborateur</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {{ task.dueDate|date('d/m/Y') }}
                                                {% if task.isOverdue and not task.isComplete %}
                                                    <br><small class="text-danger">En retard</small>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="badge badge-soft-{{ task.status == 'termine' ? 'success' : (task.status == 'en_cours' ? 'info' : 'warning') }}">
                                                    {{ task.statusLabel }}
                                                </span>
                                            </td>
                                            <td>
                                                {% if not task.isCompleted %}
                                                    <div class="btn-group">
                                                        <button type="button" class="btn btn-sm btn-outline-info dropdown-toggle"
                                                                data-bs-toggle="dropdown" aria-expanded="false">
                                                            Changer
                                                        </button>
                                                        <ul class="dropdown-menu">
                                                            {% if task.status != 'en_cours' %}
                                                                <li>
                                                                    <a class="dropdown-item" href="#"
                                                                       data-token="{{ csrf_token('update-task-' ~ task.id) }}"
                                                                       onclick="updateTaskStatus({{ task.id }}, 'en_cours', this.dataset.token); return false;">
                                                                        <i class="bx bx-play me-1"></i> En cours
                                                                    </a>
                                                                </li>
                                                            {% endif %}
                                                            <li>
                                                                <a class="dropdown-item" href="#"
                                                                   data-token="{{ csrf_token('complete-task-' ~ task.id) }}"
                                                                   onclick="completeTask({{ task.id }}, this.dataset.token); return false;">
                                                                    <i class="bx bx-check me-1"></i> Marquer terminé
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                {% else %}
                                                    <span class="text-muted small">
                                                        <i class="bx bx-check-circle"></i>
                                                        {{ task.completedAt|date('d/m/Y') }}
                                                    </span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="bx bx-info-circle me-2"></i>
                    Aucune tâche d'onboarding n'a été configurée pour ce collaborateur.
                </div>
            </div>
        </div>
    {% endfor %}
</div>

{# Complete task form (hidden) #}
<form id="complete-task-form" method="post" style="display: none;">
    <input type="hidden" name="_token" id="complete-csrf-token">
    <input type="hidden" name="comments" id="complete-comments">
</form>

{# Update status form (hidden) #}
<form id="update-status-form" method="post" style="display: none;">
    <input type="hidden" name="_token" id="update-csrf-token">
    <input type="hidden" name="status" id="update-status">
</form>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function completeTask(taskId, token) {
            const comments = prompt('Commentaires (optionnel):');
            if (comments === null) return; // User cancelled

            const form = document.getElementById('complete-task-form');
            form.action = '{{ path('onboarding_task_complete', {id: '__TASK_ID__'}) }}'.replace('__TASK_ID__', taskId);
            document.getElementById('complete-csrf-token').value = token;
            document.getElementById('complete-comments').value = comments;
            form.submit();
        }

        function updateTaskStatus(taskId, status, token) {
            const form = document.getElementById('update-status-form');
            form.action = '{{ path('onboarding_task_update_status', {id: '__TASK_ID__'}) }}'.replace('__TASK_ID__', taskId);
            document.getElementById('update-csrf-token').value = token;
            document.getElementById('update-status').value = status;

            // Use fetch API for AJAX call
            fetch(form.action, {
                method: 'POST',
                body: new FormData(form)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Erreur: ' + (data.error || 'Une erreur est survenue'));
                }
            })
            .catch(error => {
                alert('Erreur réseau');
            });
        }
    </script>
{% endblock %}
