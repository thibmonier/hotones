{% extends 'layouts/base.html.twig' %}

{% block title %}Tableau de trésorerie{% endblock %}

{% block content %}
    {{ component('breadcrumb', { title: 'Trésorerie', pagetitle: 'Tableau de bord' }) }}

    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Tableau de trésorerie</h4>
                <div class="page-title-right">
                    <form method="GET" class="d-inline-block">
                        <select name="period" class="form-select form-select-sm" onchange="this.form.submit()">
                            <option value="month" {% if period == 'month' %}selected{% endif %}>Ce mois</option>
                            <option value="quarter" {% if period == 'quarter' %}selected{% endif %}>Ce trimestre</option>
                            <option value="year" {% if period == 'year' %}selected{% endif %}>Cette année</option>
                            <option value="all" {% if period == 'all' %}selected{% endif %}>Tout</option>
                        </select>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {# KPIs principaux #}
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-grow-1">
                            <p class="text-muted fw-medium">CA Facturé</p>
                            <h4 class="mb-0">{{ kpis.total_billed|number_format(0, ',', ' ') }} €</h4>
                        </div>
                        <div class="avatar-sm rounded-circle bg-primary align-self-center mini-stat-icon">
                            <span class="avatar-title rounded-circle bg-primary">
                                <i class="bx bx-receipt font-size-24"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-grow-1">
                            <p class="text-muted fw-medium">CA Encaissé</p>
                            <h4 class="mb-0 text-success">{{ kpis.total_paid|number_format(0, ',', ' ') }} €</h4>
                            <p class="text-muted mb-0 small">
                                <span class="badge badge-soft-success font-size-12">
                                    {{ kpis.collection_rate|number_format(1) }}%
                                </span>
                                taux de recouvrement
                            </p>
                        </div>
                        <div class="avatar-sm rounded-circle bg-success align-self-center mini-stat-icon">
                            <span class="avatar-title rounded-circle bg-success">
                                <i class="bx bx-check-double font-size-24"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-grow-1">
                            <p class="text-muted fw-medium">En attente</p>
                            <h4 class="mb-0 text-warning">{{ kpis.pending_payment|number_format(0, ',', ' ') }} €</h4>
                            <p class="text-muted mb-0 small">
                                DSO: {{ kpis.average_payment_delay|number_format(1) }} jours
                            </p>
                        </div>
                        <div class="avatar-sm rounded-circle bg-warning align-self-center mini-stat-icon">
                            <span class="avatar-title rounded-circle bg-warning">
                                <i class="bx bx-time font-size-24"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card mini-stats-wid">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-grow-1">
                            <p class="text-muted fw-medium">En retard</p>
                            <h4 class="mb-0 text-danger">{{ kpis.overdue_amount|number_format(0, ',', ' ') }} €</h4>
                            <p class="text-muted mb-0 small">
                                {{ kpis.overdue_count }} facture{{ kpis.overdue_count > 1 ? 's' : '' }}
                            </p>
                        </div>
                        <div class="avatar-sm rounded-circle bg-danger align-self-center mini-stat-icon">
                            <span class="avatar-title rounded-circle bg-danger">
                                <i class="bx bx-error font-size-24"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        {# Évolution mensuelle #}
        <div class="col-xl-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">Évolution mensuelle (12 derniers mois)</h4>
                    <canvas id="monthly-trend-chart" height="100"></canvas>
                </div>
            </div>
        </div>

        {# Prévisionnel #}
        <div class="col-xl-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">Prévisionnel 90 jours</h4>
                    {% set total_forecast = 0 %}
                    {% for week in forecast %}
                        {% set total_forecast = total_forecast + week.expected_amount %}
                    {% endfor %}
                    <div class="text-center mb-4">
                        <h2 class="text-primary">{{ total_forecast|number_format(0, ',', ' ') }} €</h2>
                        <p class="text-muted">Encaissements attendus</p>
                    </div>
                    <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                        <table class="table table-sm mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Semaine</th>
                                    <th class="text-end">Montant</th>
                                    <th class="text-center">Factures</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for week in forecast %}
                                <tr>
                                    <td class="small">{{ week.week_start }}</td>
                                    <td class="text-end small">{{ week.expected_amount|number_format(0, ',', ' ') }} €</td>
                                    <td class="text-center small">{{ week.invoice_count }}</td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="3" class="text-center text-muted small">Aucun encaissement prévu</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        {# Factures en retard #}
        <div class="col-xl-7">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="card-title mb-0">Factures en retard</h4>
                        {% if overdueInvoices|length > 0 %}
                            <span class="badge bg-danger">{{ overdueInvoices|length }}</span>
                        {% endif %}
                    </div>
                    {% if overdueInvoices|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover table-sm mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Facture</th>
                                        <th>Client</th>
                                        <th>Échéance</th>
                                        <th class="text-end">Montant</th>
                                        <th>Retard</th>
                                        <th>Priorité</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in overdueInvoices|slice(0, 10) %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('invoice_show', {id: item.invoice.id}) }}">
                                                {{ item.invoice.invoiceNumber }}
                                            </a>
                                        </td>
                                        <td>{{ item.invoice.client.name }}</td>
                                        <td class="small">{{ item.invoice.dueDate|date('d/m/Y') }}</td>
                                        <td class="text-end">{{ item.invoice.amountTtc|number_format(0, ',', ' ') }} €</td>
                                        <td class="small">{{ item.days_late }} jour{{ item.days_late > 1 ? 's' : '' }}</td>
                                        <td>
                                            {% set priorityBadge = {
                                                'critical': 'danger',
                                                'high': 'warning',
                                                'medium': 'info',
                                                'low': 'secondary'
                                            } %}
                                            {% set priorityLabel = {
                                                'critical': 'Critique',
                                                'high': 'Haute',
                                                'medium': 'Moyenne',
                                                'low': 'Basse'
                                            } %}
                                            <span class="badge bg-{{ priorityBadge[item.priority] ?? 'secondary' }}">
                                                {{ priorityLabel[item.priority] ?? item.priority }}
                                            </span>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% if overdueInvoices|length > 10 %}
                            <div class="text-center mt-3">
                                <a href="{{ path('invoice_index', {status: 'en_retard'}) }}" class="btn btn-sm btn-outline-primary">
                                    Voir toutes les {{ overdueInvoices|length }} factures en retard
                                </a>
                            </div>
                        {% endif %}
                    {% else %}
                        <div class="text-center text-muted py-4">
                            <i class="bx bx-check-circle font-size-48 text-success mb-3"></i>
                            <p>Aucune facture en retard</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Top clients #}
        <div class="col-xl-5">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">Top 10 clients</h4>
                    <div class="table-responsive">
                        <table class="table table-sm mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Client</th>
                                    <th class="text-end">CA HT</th>
                                    <th class="text-end">En attente</th>
                                    <th class="text-center">DSO</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for client in topClients %}
                                <tr>
                                    <td class="small">{{ client.client_name }}</td>
                                    <td class="text-end small">{{ client.total_billed|number_format(0, ',', ' ') }} €</td>
                                    <td class="text-end small {% if client.pending_amount > 0 %}text-warning{% endif %}">
                                        {{ client.pending_amount|number_format(0, ',', ' ') }} €
                                    </td>
                                    <td class="text-center small">
                                        {{ client.average_payment_delay|number_format(0) }}j
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted small">Aucun client</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Graphique d'évolution mensuelle
        const monthlyTrendData = {{ monthlyTrend|json_encode|raw }};
        const labels = Object.values(monthlyTrendData).map(item => item.month);
        const billedData = Object.values(monthlyTrendData).map(item => parseFloat(item.billed));
        const paidData = Object.values(monthlyTrendData).map(item => parseFloat(item.paid));

        const ctx = document.getElementById('monthly-trend-chart');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'CA Facturé',
                        data: billedData,
                        borderColor: 'rgb(54, 162, 235)',
                        backgroundColor: 'rgba(54, 162, 235, 0.1)',
                        tension: 0.4,
                        fill: true
                    },
                    {
                        label: 'CA Encaissé',
                        data: paidData,
                        borderColor: 'rgb(75, 192, 192)',
                        backgroundColor: 'rgba(75, 192, 192, 0.1)',
                        tension: 0.4,
                        fill: true
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                label += new Intl.NumberFormat('fr-FR', {
                                    style: 'currency',
                                    currency: 'EUR',
                                    minimumFractionDigits: 0
                                }).format(context.parsed.y);
                                return label;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return new Intl.NumberFormat('fr-FR', {
                                    style: 'currency',
                                    currency: 'EUR',
                                    minimumFractionDigits: 0
                                }).format(value);
                            }
                        }
                    }
                }
            }
        });
    </script>
{% endblock %}
