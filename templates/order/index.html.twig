{% extends 'layouts/base.html.twig' %}

{% block title %}Devis{% endblock %}

{% block content %}
    {% include 'components/page_header.html.twig' with {
        title: 'Devis',
        breadcrumb: [
            {label: 'Gestion', path: null},
            {label: 'Devis', path: null}
        ],
        actions: is_granted('ROLE_CHEF_PROJET') ? [{
            label: 'Nouveau devis',
            path: 'order_new',
            icon: 'bx-plus',
            class: 'btn-primary'
        }] : []
    } %}

    <div class="row mb-2">
        <div class="col-12">
            <div class="d-flex gap-3 align-items-center small text-muted">
                <span><span class="me-1 d-inline-block rounded-circle" style="width:10px;height:10px;background:var(--bs-primary);"></span> Prestations</span>
                <span><span class="me-1 d-inline-block rounded-circle" style="width:10px;height:10px;background:var(--bs-warning);"></span> Achats</span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    {% set activeFiltersCount = 0 %}
                    {% set activeFiltersCount = activeFiltersCount
                        + (selectedProject ? 1 : 0)
                        + (selectedStatus ? 1 : 0)
                        + (sort != 'createdAt' ? 1 : 0)
                        + (dir != 'DESC' ? 1 : 0)
                        + (pagination.per_page != 20 ? 1 : 0)
                    %}
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="card-title mb-0">Filtres
                            {% if activeFiltersCount > 0 %}
                                <span class="badge bg-info ms-2">{{ activeFiltersCount }}</span>
                            {% endif %}
                        </h4>
                        <div class="btn-group">
                            <a href="{{ path('order_export_csv', filters_query) }}" class="btn btn-sm btn-outline-primary">Exporter CSV</a>
                            <a href="{{ path('order_index', { reset: 1 }) }}" class="btn btn-sm btn-outline-secondary">Effacer</a>
                            <button type="button" class="btn btn-sm btn-outline-dark" data-bs-toggle="collapse" data-bs-target="#filters-orders" aria-expanded="true" aria-controls="filters-orders" id="filters-toggle-orders">
                                <i class="bx bx-chevron-up"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div id="filters-orders" class="collapse show">
                    {# Rappel des critères actifs #}
                    {% set chips = [] %}
                    {% if selectedProject %}
                        {% set proj = (projects|filter(p => p.id == selectedProject)|first) %}
                        {% set chips = chips|merge(['Projet: ' ~ (proj ? proj.name : selectedProject)]) %}
                    {% endif %}
                    {% if selectedStatus %}
                        {% set chips = chips|merge(['Statut: ' ~ (statusOptions[selectedStatus] ?? selectedStatus)]) %}
                    {% endif %}
                    {% if sort != 'createdAt' or dir != 'DESC' %}
                        {% set chips = chips|merge(['Tri: ' ~ sort ~ ' ' ~ dir]) %}
                    {% endif %}
                    {% if pagination.per_page != 20 %}
                        {% set chips = chips|merge(['Par page: ' ~ pagination.per_page]) %}
                    {% endif %}
                    {% if chips|length > 0 %}
                        <div class="mb-3 small text-muted">
                            {% for c in chips %}
                                <span class="badge bg-light text-dark me-1">{{ c }}</span>
                            {% endfor %}
                        </div>
                        <script>
                          (function(){ try { window.__ACTIVE_FILTERS = {{ chips|json_encode|raw }}; window.dispatchEvent(new Event('active-filters-changed')); } catch(e) {} })();
                        </script>
                    {% else %}
                        <script>try { window.__ACTIVE_FILTERS = []; window.dispatchEvent(new Event('active-filters-changed')); } catch(e) {}</script>
                    {% endif %}
                    <form method="GET" class="row g-3">
                        <div class="col-md-4">
                            <label for="project" class="form-label">Projet</label>
                            <select name="project" id="project" class="form-select">
                                <option value="">Tous les projets</option>
                                {% for project in projects %}
                                    <option value="{{ project.id }}" {% if selectedProject == project.id %}selected{% endif %}>
                                        {{ project.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="status" class="form-label">Statut</label>
                            <select name="status" id="status" class="form-select">
                                <option value="">Tous les statuts</option>
                                {% for key, label in statusOptions %}
                                    <option value="{{ key }}" {% if selectedStatus == key %}selected{% endif %}>
                                        {{ label }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bx bx-search"></i> Filtrer
                            </button>
                            <a href="{{ path('order_index', { reset: 1 }) }}" class="btn btn-outline-secondary" title="Réinitialiser">
                                <i class="bx bx-reset"></i>
                            </a>
                        </div>
                    </form>
                    </div>
                    <script>
                        (function(){
                          var key='filters:orders:collapsed';
                          var el=document.getElementById('filters-orders');
                          var btn=document.getElementById('filters-toggle-orders');
                          if(!el||!btn) return;
                          try {
                            var hasActive={{ (chips|length > 0) ? 'true' : 'false' }};
                            var isSmall=window.matchMedia('(max-width: 767.98px)').matches;
                            var collapsed = localStorage.getItem(key) === '1' || (isSmall && !hasActive);
                            if (collapsed) { el.classList.remove('show'); btn.setAttribute('aria-expanded','false'); }
                            var updateIcon=function(){ var i=btn.querySelector('i'); if(!i) return; if (el.classList.contains('show')) { i.className='bx bx-chevron-up'; localStorage.setItem(key,'0'); btn.setAttribute('aria-expanded','true'); } else { i.className='bx bx-chevron-down'; localStorage.setItem(key,'1'); btn.setAttribute('aria-expanded','false'); } };
                            el.addEventListener('shown.bs.collapse', updateIcon);
                            el.addEventListener('hidden.bs.collapse', updateIcon);
                            updateIcon();
                          } catch(e) {}
                        })();
                    </script>
                </div>
                {% set hasFilters = selectedProject or selectedStatus or (sort != 'createdAt') or (dir != 'DESC') or (pagination.per_page != 20) %}
                {% if hasFilters %}
                    <div class="small text-muted mt-2">
                        Filtres actifs · <a href="{{ path('order_index', { reset: 1 }) }}">Effacer</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="card-title mb-0">Liste des devis</h4>
                        </div>
                        <div class="col-auto">
                            <span class="badge bg-primary">{{ pagination.total }} devis</span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-end align-items-center mb-2">
                        <form method="get" action="{{ path('order_index') }}" class="d-flex align-items-center">
                            <input type="hidden" name="project" value="{{ selectedProject }}">
                            <input type="hidden" name="status" value="{{ selectedStatus }}">
                            <input type="hidden" name="sort" value="{{ sort }}">
                            <input type="hidden" name="dir" value="{{ dir }}">
                            <label class="form-label mb-0 me-2">Par page</label>
                            <select name="per_page" class="form-select form-select-sm me-2" onchange="this.form.submit()">
                                {% for n in [10,20,50,100] %}
                                    <option value="{{ n }}" {{ pagination.per_page == n ? 'selected' : '' }}>{{ n }}</option>
                                {% endfor %}
                            </select>
                            <noscript><button type="submit" class="btn btn-sm btn-outline-secondary">Appliquer</button></noscript>
                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>
                                        <a href="{{ path('order_index', filters_query|merge({ sort: 'number', dir: sort == 'number' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Numéro
                                            {% if sort == 'number' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>
                                        <a href="{{ path('order_index', filters_query|merge({ sort: 'name', dir: sort == 'name' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Nom
                                            {% if sort == 'name' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>
                                        <a href="{{ path('order_index', filters_query|merge({ sort: 'project', dir: sort == 'project' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Projet
                                            {% if sort == 'project' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>
                                        <a href="{{ path('order_index', filters_query|merge({ sort: 'status', dir: sort == 'status' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Statut
                                            {% if sort == 'status' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>
                                        <a href="{{ path('order_index', filters_query|merge({ sort: 'createdAt', dir: sort == 'createdAt' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Date création
                                            {% if sort == 'createdAt' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>Répartition</th>
                                    <th>
                                        <a href="{{ path('order_index', filters_query|merge({ sort: 'total', dir: sort == 'total' and dir == 'ASC' ? 'DESC' : 'ASC' })) }}" class="text-decoration-none text-reset">
                                            Montant total
                                            {% if sort == 'total' %}
                                                <i class="bx bx-sort-{{ dir == 'ASC' ? 'up' : 'down' }}-alt"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for order in orders %}
                                <tr>
                                    <td>
                                        <strong>{{ order.orderNumber }}</strong>
                                    </td>
                                    <td>
                                        <h5 class="font-size-14 mb-1">
                                            <a href="{{ path('order_show', {'id': order.id}) }}" class="text-dark">{{ order.name ?? 'Devis sans nom' }}</a>
                                        </h5>
                                        {% if order.notes %}
                                            <p class="text-muted mb-0">{{ order.notes|slice(0, 50) }}{% if order.notes|length > 50 %}...{% endif %}</p>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if order.project %}
                                            <a href="{{ path('project_show', {'id': order.project.id}) }}" class="text-primary">
                                                {{ order.project.name }}
                                            </a>
                                        {% else %}
                                            <span class="text-muted"><em>Aucun projet</em></span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <form method="post" action="{{ path('order_update_status', {'id': order.id}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('status' ~ order.id) }}">
                                            <select name="status" class="form-select form-select-sm" onchange="this.form.submit()">
                                                {% for key, label in statusOptions %}
                                                    <option value="{{ key }}" {% if order.status == key %}selected{% endif %}>{{ label }}</option>
                                                {% endfor %}
                                            </select>
                                        </form>
                                    </td>
                                    <td>{{ order.createdAt|date('d/m/Y') }}</td>
                                    <td style="min-width:180px">
                                        {# Calculs inline: prestations vs achats #}
                                        {% set services = 0 %}
                                        {% set purchases = 0 %}
                                        {% for section in order.sections %}
                                            {% for line in section.lines %}
                                                {% set services = services + (line.serviceAmount ?? 0) %}
                                                {% if line.purchaseAmount %}
                                                    {% set purchases = purchases + line.purchaseAmount %}
                                                {% endif %}
                                                {% if line.type in ['purchase','fixed_amount'] and line.directAmount %}
                                                    {% set purchases = purchases + line.directAmount %}
                                                {% endif %}
                                            {% endfor %}
                                        {% endfor %}
                                        {% set total = services + purchases %}
                                        {% set sp = total > 0 ? (services / total * 100) : 0 %}
                                        {% set pp = total > 0 ? (100 - sp) : 0 %}
                                        <div class="progress" style="height:12px;">
                                            <div class="progress-bar bg-primary" role="progressbar" style="width: {{ sp }}%" aria-valuenow="{{ sp|number_format(0,'.','') }}" aria-valuemin="0" aria-valuemax="100"></div>
                                            <div class="progress-bar bg-warning" role="progressbar" style="width: {{ pp }}%" aria-valuenow="{{ pp|number_format(0,'.','') }}" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <div class="d-flex justify-content-between small text-muted mt-1">
                                            <span><span class="me-1 d-inline-block rounded-circle" style="width:8px;height:8px;background:var(--bs-primary);"></span>{{ sp|number_format(0, ',', ' ') }}%</span>
                                            <span><span class="me-1 d-inline-block rounded-circle" style="width:8px;height:8px;background:var(--bs-warning);"></span>{{ pp|number_format(0, ',', ' ') }}%</span>
                                        </div>
                                    </td>
                                    <td>{{ order.totalAmount|number_format(2, ',', ' ') }}€</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('order_show', {'id': order.id}) }}" class="btn btn-outline-secondary btn-sm" title="Voir">
                                                <i class="bx bx-show"></i>
                                            </a>
                                            {% if is_granted('ROLE_CHEF_PROJET') %}
                                                <a href="{{ path('order_edit', {'id': order.id}) }}" class="btn btn-outline-primary btn-sm" title="Modifier">
                                                    <i class="bx bx-edit"></i>
                                                </a>
                                                <form method="post" action="{{ path('order_duplicate', {'id': order.id}) }}" class="d-inline">
                                                    <button type="submit" class="btn btn-outline-info btn-sm" title="Dupliquer" onclick="return confirm('Dupliquer ce devis ?')">
                                                        <i class="bx bx-copy"></i>
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="7" class="text-center text-muted">
                                        <div class="py-4">
                                            <i class="bx bx-receipt font-size-24 mb-2"></i>
                                            <p>Aucun devis trouvé</p>
                                            {% if is_granted('ROLE_CHEF_PROJET') %}
                                                <a href="{{ path('order_new') }}" class="btn btn-primary">Créer le premier devis</a>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if pagination.total_pages > 1 %}
        {% include 'components/pagination.html.twig' with {
            currentPage: pagination.current_page,
            totalPages: pagination.total_pages,
            itemsPerPage: pagination.per_page,
            totalItems: pagination.total
        } %}
    {% endif %}
{% endblock %}
