<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Devis {{ order.reference }}</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: Arial, sans-serif;
            font-size: 11pt;
            line-height: 1.4;
            color: #333;
            padding: 20px;
        }
        .header {
            margin-bottom: 30px;
            border-bottom: 3px solid #2c3e50;
            padding-bottom: 20px;
        }
        .company-info {
            float: left;
            width: 50%;
        }
        .company-info h1 {
            color: #2c3e50;
            font-size: 24pt;
            margin-bottom: 10px;
        }
        .document-info {
            float: right;
            width: 45%;
            text-align: right;
        }
        .document-info h2 {
            color: #e74c3c;
            font-size: 20pt;
            margin-bottom: 10px;
        }
        .clearfix::after {
            content: "";
            display: table;
            clear: both;
        }
        .client-info {
            margin-top: 40px;
            margin-bottom: 30px;
        }
        .client-info h3 {
            color: #2c3e50;
            margin-bottom: 10px;
            font-size: 14pt;
        }
        .project-info {
            background: #ecf0f1;
            padding: 15px;
            margin-bottom: 30px;
            border-radius: 5px;
        }
        .project-info h3 {
            color: #2c3e50;
            margin-bottom: 10px;
        }
        .section {
            margin-bottom: 30px;
        }
        .section-title {
            background: #34495e;
            color: white;
            padding: 10px;
            font-size: 13pt;
            font-weight: bold;
            margin-bottom: 10px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table thead th {
            background: #ecf0f1;
            padding: 10px;
            text-align: left;
            font-weight: bold;
            border-bottom: 2px solid #bdc3c7;
        }
        table tbody td {
            padding: 8px 10px;
            border-bottom: 1px solid #ecf0f1;
        }
        table tbody tr:hover {
            background: #f8f9fa;
        }
        .text-right {
            text-align: right;
        }
        .text-center {
            text-align: center;
        }
        .totals {
            margin-top: 30px;
            float: right;
            width: 40%;
        }
        .totals table {
            width: 100%;
        }
        .totals table td {
            padding: 8px;
            border: none;
        }
        .totals table tr.total-ht {
            font-weight: bold;
            border-top: 2px solid #bdc3c7;
        }
        .totals table tr.total-ttc {
            font-weight: bold;
            font-size: 14pt;
            background: #2c3e50;
            color: white;
        }
        .footer {
            position: fixed;
            bottom: 20px;
            left: 20px;
            right: 20px;
            text-align: center;
            font-size: 9pt;
            color: #7f8c8d;
            border-top: 1px solid #bdc3c7;
            padding-top: 10px;
        }
        .page-break {
            page-break-after: always;
        }
    </style>
</head>
<body>
    <!-- En-tête -->
    <div class="header clearfix">
        <div class="company-info">
            <h1>{{ company_name|default('Votre Entreprise') }}</h1>
            <p>
                {{ company_address|default('Adresse de l\'entreprise') }}<br>
                {{ company_postal|default('Code postal') }} {{ company_city|default('Ville') }}<br>
                Tél: {{ company_phone|default('01 23 45 67 89') }}<br>
                Email: {{ company_email|default('contact@entreprise.fr') }}
            </p>
        </div>
        <div class="document-info">
            <h2>DEVIS</h2>
            <p>
                <strong>N° {{ order.reference }}</strong><br>
                Date: {{ order.createdAt|date('d/m/Y') }}<br>
                {% if order.validUntil %}Valable jusqu'au: {{ order.validUntil|date('d/m/Y') }}{% endif %}
            </p>
        </div>
    </div>

    <!-- Informations client -->
    <div class="client-info clearfix">
        <h3>Client:</h3>
        {% if order.project.client %}
            <p>
                <strong>{{ order.project.client.name }}</strong><br>
                {% if order.project.client.address %}{{ order.project.client.address }}<br>{% endif %}
                {% if order.project.client.postalCode %}{{ order.project.client.postalCode }}{% endif %}
                {% if order.project.client.city %}{{ order.project.client.city }}<br>{% endif %}
                {% if order.project.client.email %}Email: {{ order.project.client.email }}<br>{% endif %}
                {% if order.project.client.phone %}Tél: {{ order.project.client.phone }}{% endif %}
            </p>
        {% endif %}
    </div>

    <!-- Informations projet -->
    {% if order.project %}
    <div class="project-info">
        <h3>Projet: {{ order.project.name }}</h3>
        {% if order.project.description %}
            <p>{{ order.project.description }}</p>
        {% endif %}
    </div>
    {% endif %}

    <!-- Sections du devis -->
    {% for section in order.sections %}
    <div class="section">
        <div class="section-title">{{ section.name }}</div>

        {% if section.description %}
        <p style="margin: 10px 0;">{{ section.description }}</p>
        {% endif %}

        <table>
            <thead>
                <tr>
                    <th style="width: 40%;">Désignation</th>
                    <th style="width: 15%;" class="text-center">Quantité</th>
                    <th style="width: 15%;" class="text-right">Prix unitaire</th>
                    <th style="width: 15%;" class="text-right">Achats</th>
                    <th style="width: 15%;" class="text-right">Total HT</th>
                </tr>
            </thead>
            <tbody>
                {% for line in section.lines %}
                <tr>
                    <td>
                        <strong>{{ line.label }}</strong>
                        {% if line.description %}<br><small>{{ line.description }}</small>{% endif %}
                        {% if line.profile %}<br><small>Profil: {{ line.profile.name }}</small>{% endif %}
                    </td>
                    <td class="text-center">
                        {% if line.type == 'service' %}
                            {{ line.days|number_format(2, ',', ' ') }} j
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td class="text-right">
                        {% if line.type == 'service' and line.dailyRate %}
                            {{ line.dailyRate|number_format(2, ',', ' ') }} €
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td class="text-right">
                        {% if line.attachedPurchaseAmount > 0 %}
                            {{ line.attachedPurchaseAmount|number_format(2, ',', ' ') }} €
                        {% elseif line.type in ['purchase', 'fixed_amount'] and line.directAmount %}
                            {{ line.directAmount|number_format(2, ',', ' ') }} €
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td class="text-right">
                        <strong>{{ line.totalHT|number_format(2, ',', ' ') }} €</strong>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% endfor %}

    <!-- Totaux -->
    <div class="clearfix">
        <div class="totals">
            <table>
                <tr>
                    <td>Total HT:</td>
                    <td class="text-right">{{ order.totalHT|number_format(2, ',', ' ') }} €</td>
                </tr>
                <tr>
                    <td>TVA ({{ order.vatRate }}%):</td>
                    <td class="text-right">{{ order.vatAmount|number_format(2, ',', ' ') }} €</td>
                </tr>
                <tr class="total-ttc">
                    <td><strong>Total TTC:</strong></td>
                    <td class="text-right"><strong>{{ order.totalTTC|number_format(2, ',', ' ') }} €</strong></td>
                </tr>
            </table>
        </div>
    </div>

    <div class="clearfix" style="margin-top: 100px;"></div>

    <!-- Conditions et mentions légales -->
    <div style="margin-top: 40px; font-size: 9pt; color: #7f8c8d;">
        <p><strong>Conditions de paiement:</strong> {{ payment_terms|default('30% à la commande, 70% à la livraison') }}</p>
        <p><strong>Délai de réalisation:</strong> {{ delivery_time|default('À définir selon planning') }}</p>
        {% if notes %}
        <p><strong>Notes:</strong> {{ notes }}</p>
        {% endif %}
    </div>

    <!-- Pied de page -->
    <div class="footer">
        <p>{{ company_legal|default('SIRET: XXX XXX XXX XXXXX - TVA: FR XX XXX XXX XXX') }}</p>
        <p>Document généré le {{ "now"|date('d/m/Y à H:i') }}</p>
    </div>
</body>
</html>
