{% extends 'layouts/base.html.twig' %}

{% block title %}Sections - {{ order.orderNumber }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Sections du devis {{ order.orderNumber }}</h4>
                <div class="page-title-right">
                    <a href="{{ path('order_show', {'id': order.id}) }}" class="btn btn-outline-secondary">
                        <i class="bx bx-arrow-back me-1"></i> Retour au devis
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            {% for section in order.sections %}
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">{{ section.name }}</h5>
                        <div class="btn-group btn-group-sm">
                            <button type="button" class="btn btn-outline-primary" data-bs-toggle="collapse" data-bs-target="#addLine{{ section.id }}">
                                <i class="bx bx-plus"></i> Ligne
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        {% if section.description %}
                            <p class="text-muted">{{ section.description }}</p>
                        {% endif %}

                        {% if section.lines|length > 0 %}
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Description</th>
                                            <th>Profil</th>
                                            <th>TJM</th>
                                            <th>Jours</th>
                                            <th>Achats</th>
                                            <th class="text-end">Total</th>
                                            <th class="text-end">Marge</th>
                                            <th width="80">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for line in section.lines %}
                                            <tr class="line-row" data-line-id="{{ line.id }}">
                                                <td>{{ line.description }}</td>
                                                <td>
                                                    {% if line.profile %}
                                                        <span class="badge bg-light text-dark">{{ line.profile.name }}</span>
                                                    {% else %}
                                                        -
                                                    {% endif %}
                                                </td>
                                                <td>{{ line.tjm ? (line.tjm|number_format(0, ',', ' ') ~ '€') : '-' }}</td>
                                                <td>{{ line.days ? line.days|number_format(1, ',', ' ') : '-' }}</td>
                                                <td>{{ line.purchaseAmount ? (line.purchaseAmount|number_format(2, ',', ' ') ~ '€') : '-' }}</td>
                                                <td class="text-end"><strong>{{ line.totalAmount|number_format(2, ',', ' ') }}€</strong></td>
                                                <td class="text-end">
                                                    {% if line.profile and line.days %}
                                                        {% set marginRate = line.marginRate %}
                                                        {% set marginAmount = line.grossMargin %}
                                                        <div class="d-flex flex-column align-items-end">
                                                            <small class="text-{% if marginRate >= '20' %}success{% elseif marginRate >= '10' %}warning{% else %}danger{% endif %}">
                                                                {{ marginAmount|number_format(0, ',', ' ') }}€
                                                            </small>
                                                            <small class="text-muted">{{ marginRate|number_format(1, ',', ' ') }}%</small>
                                                        </div>
                                                    {% else %}
                                                        <small class="text-muted">-</small>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <button class="btn btn-outline-primary btn-sm btn-edit-line"
                                                                data-line-id="{{ line.id }}"
                                                                data-section-id="{{ section.id }}"
                                                                title="Modifier">
                                                            <i class="bx bx-edit"></i>
                                                        </button>
                                                        <form method="POST"
                                                              action="{{ path('order_delete_line', {'orderId': order.id, 'sectionId': section.id, 'lineId': line.id}) }}"
                                                              style="display: inline;"
                                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette ligne ?');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete_line_' ~ line.id) }}">
                                                            <button type="submit" class="btn btn-outline-danger btn-sm" title="Supprimer">
                                                                <i class="bx bx-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr class="edit-form-row d-none" data-line-id="{{ line.id }}">
                                                <td colspan="8">
                                                    <form method="POST" action="{{ path('order_edit_line', {'orderId': order.id, 'sectionId': section.id, 'lineId': line.id}) }}" class="bg-light p-3 rounded">
                                                        <div class="row g-2">
                                                            <div class="col-12">
                                                                <label class="form-label small">Description</label>
                                                                <textarea class="form-control form-control-sm" name="line_description" rows="2" required>{{ line.description }}</textarea>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <label class="form-label small">Profil</label>
                                                                <select class="form-select form-select-sm" name="profile_id">
                                                                    <option value="">Aucun profil</option>
                                                                    {% for profile in profiles %}
                                                                        <option value="{{ profile.id }}"
                                                                                data-default-rate="{{ profile.defaultDailyRate }}"
                                                                                {% if line.profile and line.profile.id == profile.id %}selected{% endif %}>
                                                                            {{ profile.name }}
                                                                            {% if profile.defaultDailyRate %} - {{ profile.defaultDailyRate|number_format(0, ',', ' ') }}€/j{% endif %}
                                                                        </option>
                                                                    {% endfor %}
                                                                </select>
                                                            </div>
                                                            <div class="col-md-3">
                                                                <label class="form-label small">TJM (€)</label>
                                                                <input type="number" class="form-control form-control-sm" name="tjm" min="0" step="10" value="{{ line.tjm }}">
                                                            </div>
                                                            <div class="col-md-2">
                                                                <label class="form-label small">Jours</label>
                                                                <input type="number" class="form-control form-control-sm" name="days" min="0" step="0.5" value="{{ line.days }}">
                                                            </div>
                                                            <div class="col-md-3">
                                                                <label class="form-label small">Achats (€)</label>
                                                                <input type="number" class="form-control form-control-sm" name="purchase_amount" min="0" step="0.01" value="{{ line.purchaseAmount }}">
                                                            </div>
                                                            <div class="col-12">
                                                                <button type="submit" class="btn btn-success btn-sm me-2">
                                                                    <i class="bx bx-check"></i> Enregistrer
                                                                </button>
                                                                <button type="button" class="btn btn-secondary btn-sm btn-cancel-edit" data-line-id="{{ line.id }}">
                                                                    <i class="bx bx-x"></i> Annuler
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <div class="text-center text-muted py-4">
                                <i class="bx bx-list-ul font-size-24 mb-2"></i>
                                <p>Aucune ligne dans cette section</p>
                            </div>
                        {% endif %}

                        <!-- Formulaire d'ajout de ligne (collapsible) -->
                        <div class="collapse mt-3" id="addLine{{ section.id }}">
                            <div class="card card-body bg-light">
                                <h6>Ajouter une ligne</h6>
                                <form method="POST" action="{{ path('order_add_line', {'orderId': order.id, 'sectionId': section.id}) }}">
                                    <div class="row g-3">
                                        <div class="col-12">
                                            <label for="line_description_{{ section.id }}" class="form-label">Description <span class="text-danger">*</span></label>
                                            <textarea class="form-control" id="line_description_{{ section.id }}" name="line_description" rows="2" required></textarea>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="profile_id_{{ section.id }}" class="form-label">Profil</label>
                                            <select class="form-select profile-select" id="profile_id_{{ section.id }}" name="profile_id" data-section="{{ section.id }}">
                                                <option value="">Aucun profil</option>
                                                {% for profile in profiles %}
                                                    <option value="{{ profile.id }}" data-default-rate="{{ profile.defaultDailyRate }}">
                                                        {{ profile.name }}
                                                        {% if profile.defaultDailyRate %} - {{ profile.defaultDailyRate|number_format(0, ',', ' ') }}€/j{% endif %}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="tjm_{{ section.id }}" class="form-label">TJM (€)</label>
                                            <input type="number" class="form-control tjm-input" id="tjm_{{ section.id }}" name="tjm" min="0" step="10" data-section="{{ section.id }}">
                                        </div>
                                        <div class="col-md-2">
                                            <label for="days_{{ section.id }}" class="form-label">Jours</label>
                                            <input type="number" class="form-control days-input" id="days_{{ section.id }}" name="days" min="0" step="0.5" data-section="{{ section.id }}">
                                        </div>
                                        <div class="col-md-3">
                                            <label for="purchase_amount_{{ section.id }}" class="form-label">Achats (€)</label>
                                            <input type="number" class="form-control purchase-input" id="purchase_amount_{{ section.id }}" name="purchase_amount" min="0" step="0.01" data-section="{{ section.id }}">
                                        </div>
                                        <div class="col-12">
                                            <div class="alert alert-info py-2 d-none" id="total_preview_{{ section.id }}">
                                                <small><strong>Total prévisionnel :</strong> <span class="total-amount">0€</span></small>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <button type="submit" class="btn btn-primary btn-sm me-2">
                                                <i class="bx bx-plus"></i> Ajouter
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-toggle="collapse" data-bs-target="#addLine{{ section.id }}">
                                                Annuler
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bx bx-folder-open font-size-24 mb-2 text-muted"></i>
                        <p class="text-muted">Aucune section définie pour ce devis</p>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="col-lg-4">
            <!-- Formulaire d'ajout de section -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Ajouter une section</h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="{{ path('order_add_section', {'id': order.id}) }}">
                        <div class="mb-3">
                            <label for="section_name" class="form-label">Nom de la section <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="section_name" name="section_name" required>
                        </div>
                        <div class="mb-3">
                            <label for="section_description" class="form-label">Description</label>
                            <textarea class="form-control" id="section_description" name="section_description" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bx bx-plus me-1"></i> Ajouter la section
                        </button>
                    </form>
                </div>
            </div>

            <!-- Résumé financier -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Résumé</h5>
                </div>
                <div class="card-body">
                    {% set totalAmount = 0 %}
                    {% set totalMargin = 0 %}
                    {% set totalCost = 0 %}
                    {% set totalLines = 0 %}
                    {% for section in order.sections %}
                        {% for line in section.lines %}
                            {% set totalAmount = totalAmount + line.totalAmount %}
                            {% set totalMargin = totalMargin + line.grossMargin %}
                            {% set totalCost = totalCost + line.estimatedCost %}
                            {% set totalLines = totalLines + 1 %}
                        {% endfor %}
                    {% endfor %}
                    {% set globalMarginRate = totalAmount > 0 ? (totalMargin / totalAmount * 100) : 0 %}

                    <div class="d-flex justify-content-between mb-2">
                        <span>Sections :</span>
                        <strong>{{ order.sections|length }}</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Lignes :</span>
                        <strong>{{ totalLines }}</strong>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-2">
                        <span>CA prévisionnel :</span>
                        <strong>{{ totalAmount|number_format(2, ',', ' ') }}€</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Coût estimé :</span>
                        <strong class="text-warning">{{ totalCost|number_format(2, ',', ' ') }}€</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Marge brute :</span>
                        <strong class="text-{% if globalMarginRate >= 20 %}success{% elseif globalMarginRate >= 10 %}warning{% else %}danger{% endif %}">
                            {{ totalMargin|number_format(2, ',', ' ') }}€
                        </strong>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span class="h6">Taux de marge :</span>
                        <strong class="h6 text-{% if globalMarginRate >= 20 %}success{% elseif globalMarginRate >= 10 %}warning{% else %}danger{% endif %}">
                            {{ globalMarginRate|number_format(1, ',', ' ') }}%
                        </strong>
                    </div>
                </div>
            </div>

            <!-- Répartition CA par section -->
            {% if order.sections|length > 0 %}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Répartition du CA</h5>
                </div>
                <div class="card-body">
                    <canvas id="revenueBreakdownChart" height="300"></canvas>
                    <div class="mt-3" id="sectionLegend"></div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-remplissage du TJM lors de la sélection d'un profil
            document.querySelectorAll('.profile-select').forEach(function(profileSelect) {
                profileSelect.addEventListener('change', function() {
                    const sectionId = this.dataset.section;
                    const selectedOption = this.options[this.selectedIndex];
                    const defaultRate = selectedOption.dataset.defaultRate;
                    const tjmInput = document.getElementById('tjm_' + sectionId);
                    
                    if (defaultRate && defaultRate !== '') {
                        tjmInput.value = parseFloat(defaultRate);
                        // Déclencher l'event input pour recalculer le total
                        tjmInput.dispatchEvent(new Event('input'));
                    } else {
                        tjmInput.value = '';
                    }
                });
            });
            
            // Auto-calcul du total en temps réel
            document.querySelectorAll('form[action*="add-line"]').forEach(function(form) {
                const sectionId = form.querySelector('.profile-select').dataset.section;
                const tjmInput = form.querySelector('.tjm-input');
                const daysInput = form.querySelector('.days-input');
                const purchaseInput = form.querySelector('.purchase-input');
                const totalPreview = document.getElementById('total_preview_' + sectionId);
                const totalAmountSpan = totalPreview.querySelector('.total-amount');
                
                function updateTotal() {
                    const tjm = parseFloat(tjmInput.value) || 0;
                    const days = parseFloat(daysInput.value) || 0;
                    const purchase = parseFloat(purchaseInput.value) || 0;
                    const serviceAmount = tjm * days;
                    const total = serviceAmount + purchase;
                    
                    if (total > 0) {
                        totalAmountSpan.textContent = new Intl.NumberFormat('fr-FR', { 
                            style: 'currency', 
                            currency: 'EUR' 
                        }).format(total);
                        totalPreview.classList.remove('d-none');
                        
                        // Afficher le détail si nécessaire
                        if (serviceAmount > 0 && purchase > 0) {
                            totalAmountSpan.innerHTML = 
                                new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(serviceAmount) + 
                                ' (service) + ' + 
                                new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(purchase) + 
                                ' (achats) = <strong>' + 
                                new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(total) + 
                                '</strong>';
                        }
                    } else {
                        totalPreview.classList.add('d-none');
                    }
                }
                
                // Écouter les changements sur tous les champs
                tjmInput?.addEventListener('input', updateTotal);
                daysInput?.addEventListener('input', updateTotal);
                purchaseInput?.addEventListener('input', updateTotal);
            });

            // Gestion de l'édition en ligne
            document.querySelectorAll('.btn-edit-line').forEach(function(button) {
                button.addEventListener('click', function() {
                    const lineId = this.dataset.lineId;
                    const lineRow = document.querySelector('.line-row[data-line-id="' + lineId + '"]');
                    const editRow = document.querySelector('.edit-form-row[data-line-id="' + lineId + '"]');

                    // Masquer la ligne normale et afficher le formulaire d'édition
                    lineRow.classList.add('d-none');
                    editRow.classList.remove('d-none');
                });
            });

            document.querySelectorAll('.btn-cancel-edit').forEach(function(button) {
                button.addEventListener('click', function() {
                    const lineId = this.dataset.lineId;
                    const lineRow = document.querySelector('.line-row[data-line-id="' + lineId + '"]');
                    const editRow = document.querySelector('.edit-form-row[data-line-id="' + lineId + '"]');

                    // Afficher la ligne normale et masquer le formulaire d'édition
                    lineRow.classList.remove('d-none');
                    editRow.classList.add('d-none');
                });
            });
        });
    </script>

    <!-- Chart.js for revenue breakdown -->
    <script src="{{ asset('assets/libs/chart.js/chart.umd.js') }}"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Calculate revenue per section
            const sectionData = [
                {% for section in order.sections %}
                    {% set sectionTotal = 0 %}
                    {% for line in section.lines %}
                        {% set sectionTotal = sectionTotal + line.totalAmount %}
                    {% endfor %}
                    {% if sectionTotal > 0 %}
                    {
                        name: {{ section.name|json_encode|raw }},
                        total: {{ sectionTotal }},
                        color: null
                    },
                    {% endif %}
                {% endfor %}
            ];

            if (sectionData.length > 0) {
                // Generate colors
                const colors = [
                    '#556ee6', // Primary blue
                    '#34c38f', // Success green
                    '#f46a6a', // Danger red
                    '#50a5f1', // Info light blue
                    '#f1b44c', // Warning yellow
                    '#50a5f1', // Light blue
                    '#343a40', // Dark gray
                    '#74788d', // Medium gray
                ];

                sectionData.forEach((section, index) => {
                    section.color = colors[index % colors.length];
                });

                // Prepare chart data
                const ctx = document.getElementById('revenueBreakdownChart');
                if (ctx) {
                    new Chart(ctx, {
                        type: 'doughnut',
                        data: {
                            labels: sectionData.map(s => s.name),
                            datasets: [{
                                data: sectionData.map(s => s.total),
                                backgroundColor: sectionData.map(s => s.color),
                                borderWidth: 2,
                                borderColor: '#fff'
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    display: false // We'll create custom legend
                                },
                                tooltip: {
                                    callbacks: {
                                        label: function(context) {
                                            const label = context.label || '';
                                            const value = context.parsed || 0;
                                            const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                            const percentage = ((value / total) * 100).toFixed(1);
                                            return label + ': ' + new Intl.NumberFormat('fr-FR', {
                                                style: 'currency',
                                                currency: 'EUR'
                                            }).format(value) + ' (' + percentage + '%)';
                                        }
                                    }
                                }
                            }
                        }
                    });

                    // Create custom legend
                    const legendContainer = document.getElementById('sectionLegend');
                    if (legendContainer) {
                        let legendHTML = '<div class="small">';
                        const grandTotal = sectionData.reduce((sum, s) => sum + s.total, 0);
                        sectionData.forEach(section => {
                            const percentage = ((section.total / grandTotal) * 100).toFixed(1);
                            legendHTML += `
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div class="d-flex align-items-center">
                                        <span class="badge" style="background-color: ${section.color}; width: 12px; height: 12px; border-radius: 2px; margin-right: 8px;"></span>
                                        <span>${section.name}</span>
                                    </div>
                                    <div class="text-end">
                                        <div>${new Intl.NumberFormat('fr-FR', { style: 'currency', currency: 'EUR' }).format(section.total)}</div>
                                        <small class="text-muted">${percentage}%</small>
                                    </div>
                                </div>
                            `;
                        });
                        legendHTML += '</div>';
                        legendContainer.innerHTML = legendHTML;
                    }
                }
            }
        });
    </script>
{% endblock %}
