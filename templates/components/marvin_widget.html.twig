</style>

<script>
    (function() {
        const toggleBtn = document.getElementById('marvin-toggle-btn');
        const chatWindow = document.getElementById('marvin-chat-window');
        const closeBtn = document.getElementById('marvin-close-btn');
        const minimizeBtn = document.getElementById('marvin-minimize-btn');
        const chatBody = document.getElementById('marvin-chat-body');
        const form = document.getElementById('marvin-widget-form');
        const input = document.getElementById('marvin-widget-input');
        const sendBtn = document.getElementById('marvin-widget-send-btn');

        let isOpen = false;
        let conversationHistory = [];

        // CrÃ©er l'indicateur de frappe
        const typingIndicator = document.createElement('div');
        typingIndicator.className = 'marvin-message bot';
        typingIndicator.innerHTML = `
            <div class="marvin-message-avatar">
                <img src="{{ asset('images/marvin-happy.png') }}" alt="Marvin">
            </div>
            <div class="marvin-typing-indicator">
                <span></span>
                <span></span>
                <span></span>
            </div>
        `;

        // Toggle chat window
        toggleBtn.addEventListener('click', () => {
            isOpen = !isOpen;
            chatWindow.style.display = isOpen ? 'flex' : 'none';
            if (isOpen) {
                input.focus();
            }
        });

        // Close button
        closeBtn.addEventListener('click', () => {
            isOpen = false;
            chatWindow.style.display = 'none';
        });

        // Minimize button
        minimizeBtn.addEventListener('click', () => {
            isOpen = false;
            chatWindow.style.display = 'none';
        });

        // Ajouter un message
        function addMessage(content, isUser = false) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `marvin-message ${isUser ? 'user' : 'bot'}`;

            const avatarContent = isUser
                ? 'ðŸ‘¤'
                : '<img src="{{ asset('images/marvin-happy.png') }}" alt="Marvin">';

            messageDiv.innerHTML = `
                <div class="marvin-message-avatar">${avatarContent}</div>
                <div class="marvin-message-content">${escapeHtml(content)}</div>
            `;

            // Supprimer le message de bienvenue si prÃ©sent
            const welcomeMsg = chatBody.querySelector('.marvin-welcome-msg');
            if (welcomeMsg) {
                welcomeMsg.remove();
            }

            chatBody.appendChild(messageDiv);
            chatBody.scrollTop = chatBody.scrollHeight;

            // Stocker dans l'historique
            conversationHistory.push({ role: isUser ? 'user' : 'assistant', content });
        }

        function showTyping() {
            const welcomeMsg = chatBody.querySelector('.marvin-welcome-msg');
            if (welcomeMsg) {
                welcomeMsg.remove();
            }
            chatBody.appendChild(typingIndicator);
            typingIndicator.querySelector('.marvin-typing-indicator').classList.add('active');
            chatBody.scrollTop = chatBody.scrollHeight;
        }

        function hideTyping() {
            typingIndicator.querySelector('.marvin-typing-indicator').classList.remove('active');
            if (typingIndicator.parentNode) {
                typingIndicator.parentNode.removeChild(typingIndicator);
            }
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML.replace(/\n/g, '<br>');
        }

        // Soumettre le formulaire
        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const message = input.value.trim();
            if (!message) return;

            // DÃ©sactiver l'input
            input.disabled = true;
            sendBtn.disabled = true;

            // Ajouter le message de l'utilisateur
            addMessage(message, true);
            input.value = '';

            // Afficher l'indicateur de frappe
            showTyping();

            try {
                const response = await fetch('{{ path('chatbot_message') }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ message: message })
                });

                const data = await response.json();

                hideTyping();

                if (data.error) {
                    addMessage('*Soupir*... Une erreur est survenue. Ã‰videmment. (' + data.error + ')', false);
                } else {
                    addMessage(data.message, false);
                }
            } catch (error) {
                hideTyping();
                addMessage('*Soupir profond*... Je savais que Ã§a ne marcherait pas.', false);
                console.error('Erreur:', error);
            } finally {
                // RÃ©activer l'input
                input.disabled = false;
                sendBtn.disabled = false;
                input.focus();
            }
        });
    })();
</script>
