{% extends 'layouts/base.html.twig' %}

{% block title %}Analyse des écarts de compétences{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Analyse des écarts de compétences</h4>
                <div class="page-title-right">
                    <a href="{{ path('hr_dashboard') }}" class="btn btn-sm btn-outline-primary">
                        <i class="bx bx-arrow-back me-1"></i>Retour au dashboard RH
                    </a>
                </div>
            </div>
        </div>
    </div>

    {# Summary Cards #}
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card card-h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted mb-3 lh-1 d-block">Compétences en déficit</span>
                            <h4 class="mb-3">
                                <span class="counter-value text-danger">{{ skillGaps.gaps|length }}</span>
                            </h4>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <div class="avatar-sm bg-white rounded">
                                <span class="avatar-title bg-white text-dark font-size-24">
                                    <i class="bx bx-down-arrow-alt"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted mb-3 lh-1 d-block">Compétences équilibrées</span>
                            <h4 class="mb-3">
                                <span class="counter-value text-success">{{ skillGaps.balanced|length }}</span>
                            </h4>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <div class="avatar-sm bg-white rounded">
                                <span class="avatar-title bg-white text-dark font-size-24">
                                    <i class="bx bx-check"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted mb-3 lh-1 d-block">Besoins de formation</span>
                            <h4 class="mb-3">
                                <span class="counter-value text-warning">{{ trainingNeeds.totalNeeds }}</span>
                            </h4>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <div class="avatar-sm bg-white rounded">
                                <span class="avatar-title bg-white text-dark font-size-24">
                                    <i class="bx bx-book-reader"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted mb-3 lh-1 d-block">Postes à pourvoir</span>
                            <h4 class="mb-3">
                                <span class="counter-value text-info">{{ recruitmentNeeds.totalPositions }}</span>
                            </h4>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <div class="avatar-sm bg-white rounded">
                                <span class="avatar-title bg-white text-dark font-size-24">
                                    <i class="bx bx-user-plus"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Skill Gaps #}
    {% if skillGaps.gaps|length > 0 %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">
                        <i class="bx bx-error-circle text-danger me-2"></i>Compétences en déficit
                    </h4>
                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Compétence</th>
                                    <th>Catégorie</th>
                                    <th class="text-center">Disponible</th>
                                    <th class="text-center">Demande</th>
                                    <th class="text-center">Écart</th>
                                    <th class="text-center">Sévérité</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for gap in skillGaps.gaps %}
                                <tr>
                                    <td><strong>{{ gap.skill.name }}</strong></td>
                                    <td><span class="badge bg-secondary">{{ gap.skill.categoryLabel }}</span></td>
                                    <td class="text-center">{{ gap.available }}</td>
                                    <td class="text-center">{{ gap.demand }}</td>
                                    <td class="text-center"><span class="badge bg-danger">-{{ gap.gap }}</span></td>
                                    <td class="text-center">
                                        {% if gap.severity == 'critical' %}
                                            <span class="badge bg-danger">Critique</span>
                                        {% elseif gap.severity == 'high' %}
                                            <span class="badge bg-warning">Élevé</span>
                                        {% elseif gap.severity == 'medium' %}
                                            <span class="badge bg-info">Moyen</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Faible</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-outline-primary" title="Former">
                                                <i class="bx bx-book"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-success" title="Recruter">
                                                <i class="bx bx-user-plus"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    {# Training Needs #}
    {% if trainingNeeds.trainingNeeds|length > 0 %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">
                        <i class="bx bx-book-reader text-warning me-2"></i>Besoins de formation
                    </h4>
                    {% for need in trainingNeeds.trainingNeeds %}
                    <div class="border rounded p-3 mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h5 class="mb-1">{{ need.skill.name }}</h5>
                                <span class="badge bg-secondary">{{ need.skill.categoryLabel }}</span>
                                <span class="badge {% if need.severity == 'critical' %}bg-danger{% elseif need.severity == 'high' %}bg-warning{% else %}bg-info{% endif %} ms-2">
                                    Priorité {{ need.priority }}
                                </span>
                            </div>
                            <div class="text-end">
                                <div class="text-muted small">Écart</div>
                                <h4 class="mb-0 text-danger">{{ need.gap }}</h4>
                            </div>
                        </div>

                        {% if need.contributorsToTrain|length > 0 %}
                        <div>
                            <h6 class="text-muted mb-2">Contributeurs à former :</h6>
                            <div class="d-flex flex-wrap gap-2">
                                {% for training in need.contributorsToTrain %}
                                <div class="border rounded p-2 bg-light">
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <strong>{{ training.contributor.fullName }}</strong>
                                            <br>
                                            <small class="text-muted">
                                                Niveau actuel:
                                                <span class="badge bg-secondary">{{ training.currentLevel }}</span>
                                                → Cible:
                                                <span class="badge bg-success">{{ training.targetLevel }}</span>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                        {% else %}
                        <div class="alert alert-warning mb-0">
                            <i class="bx bx-info-circle me-2"></i>
                            Aucun contributeur identifié pour cette formation. Envisager un recrutement.
                        </div>
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    {# Recruitment Needs #}
    {% if recruitmentNeeds.recruitmentNeeds|length > 0 %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">
                        <i class="bx bx-user-plus text-info me-2"></i>Recommandations de recrutement
                    </h4>
                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Compétence</th>
                                    <th>Catégorie</th>
                                    <th class="text-center">Écart</th>
                                    <th class="text-center">Postes recommandés</th>
                                    <th class="text-center">Urgence</th>
                                    <th class="text-center">Sévérité</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for need in recruitmentNeeds.recruitmentNeeds %}
                                <tr>
                                    <td><strong>{{ need.skill.name }}</strong></td>
                                    <td><span class="badge bg-secondary">{{ need.skill.categoryLabel }}</span></td>
                                    <td class="text-center"><span class="badge bg-danger">-{{ need.gap }}</span></td>
                                    <td class="text-center"><span class="badge bg-primary font-size-14">{{ need.recommendedHires }}</span></td>
                                    <td class="text-center">
                                        <span class="badge {% if need.urgency == 'Immédiat' %}bg-danger{% else %}bg-warning{% endif %}">
                                            {{ need.urgency }}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        {% if need.severity == 'critical' %}
                                            <span class="badge bg-danger">Critique</span>
                                        {% elseif need.severity == 'high' %}
                                            <span class="badge bg-warning">Élevé</span>
                                        {% else %}
                                            <span class="badge bg-info">Moyen</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    {# Balanced Skills #}
    {% if skillGaps.balanced|length > 0 %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">
                        <i class="bx bx-check-circle text-success me-2"></i>Compétences équilibrées
                    </h4>
                    <div class="d-flex flex-wrap gap-2">
                        {% for balanced in skillGaps.balanced %}
                        <div class="border rounded p-2 bg-light">
                            <strong>{{ balanced.skill.name }}</strong>
                            <span class="badge bg-secondary ms-2">{{ balanced.skill.categoryLabel }}</span>
                            <span class="text-muted ms-2 small">({{ balanced.available }}/{{ balanced.demand }})</span>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    {# Surplus Skills #}
    {% if skillGaps.surplus|length > 0 %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">
                        <i class="bx bx-up-arrow-alt text-info me-2"></i>Compétences en surplus
                    </h4>
                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Compétence</th>
                                    <th>Catégorie</th>
                                    <th class="text-center">Disponible</th>
                                    <th class="text-center">Demande</th>
                                    <th class="text-center">Surplus</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for surplus in skillGaps.surplus %}
                                <tr>
                                    <td><strong>{{ surplus.skill.name }}</strong></td>
                                    <td><span class="badge bg-secondary">{{ surplus.skill.categoryLabel }}</span></td>
                                    <td class="text-center">{{ surplus.available }}</td>
                                    <td class="text-center">{{ surplus.demand }}</td>
                                    <td class="text-center"><span class="badge bg-info">+{{ surplus.surplus }}</span></td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
