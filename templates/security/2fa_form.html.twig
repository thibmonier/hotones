{% extends 'base.html.twig' %}

{% block title %}Vérification 2FA{% endblock %}

{% block body %}
  <h1>Vérification 2FA</h1>
  <form method="post" action="{{ path('2fa_login_check') }}">
    <label for="_auth_code">Code d'authentification</label>
    <input type="text" id="_auth_code" name="_auth_code" autocomplete="one-time-code" inputmode="numeric" required>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('two_factor') }}">
    <button type="submit">Vérifier</button>
  </form>
{% endblock %}
