{# Widget personnalisé pour les intervenants (ROLE_INTERVENANT) #}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">Mon tableau de bord</h4>
            <div class="page-title-right">
                <p class="text-muted mb-0">Bonjour {{ app.user.firstName }} {{ app.user.lastName }} !</p>
            </div>
        </div>
    </div>
</div>

{# KPIs - Mes temps cette semaine #}
<div class="row">
    <div class="col-xl-4 col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="d-flex">
                    <div class="flex-1 overflow-hidden">
                        <p class="text-truncate font-size-14 mb-2">Mes heures cette semaine</p>
                        <h4 class="mb-0">{{ weeklyHours|number_format(1, ',', ' ') }}h</h4>
                    </div>
                    <div class="text-primary">
                        <i class="bx bx-time-five font-size-24"></i>
                    </div>
                </div>
            </div>
            <div class="card-body border-top py-3">
                <div class="text-truncate">
                    <span class="text-muted">Du {{ 'monday this week'|date('d/m') }} au {{ 'sunday this week'|date('d/m') }}</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-4 col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="d-flex">
                    <div class="flex-1 overflow-hidden">
                        <p class="text-truncate font-size-14 mb-2">Mes projets actifs</p>
                        <h4 class="mb-0">{{ projectsWithTasks|length }}</h4>
                    </div>
                    <div class="text-success">
                        <i class="bx bx-folder-open font-size-24"></i>
                    </div>
                </div>
            </div>
            <div class="card-body border-top py-3">
                <div class="text-truncate">
                    <span class="text-muted">Projets avec tâches assignées</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-4 col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="d-flex">
                    <div class="flex-1 overflow-hidden">
                        <p class="text-truncate font-size-14 mb-2">Tâches en cours</p>
                        <h4 class="mb-0">
                            {% set totalTasks = 0 %}
                            {% for item in projectsWithTasks %}
                                {% set totalTasks = totalTasks + item.tasks|length %}
                            {% endfor %}
                            {{ totalTasks }}
                        </h4>
                    </div>
                    <div class="text-info">
                        <i class="bx bx-list-check font-size-24"></i>
                    </div>
                </div>
            </div>
            <div class="card-body border-top py-3">
                <div class="text-truncate">
                    <span class="text-muted">À traiter</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    {# Mes projets et tâches #}
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Mes projets et tâches</h4>
                <div class="card-header-action">
                    <a href="{{ path('my_tasks_index') }}" class="btn btn-sm btn-primary">Voir toutes mes tâches</a>
                </div>
            </div>
            <div class="card-body">
                {% if projectsWithTasks is not empty %}
                    {% for item in projectsWithTasks %}
                        <div class="mb-4">
                            <h5 class="font-size-15">
                                <a href="{{ path('project_show', {'id': item.project.id}) }}">
                                    {{ item.project.name }}
                                </a>
                                <span class="badge bg-primary ms-2">{{ item.tasks|length }} tâche(s)</span>
                            </h5>
                            <div class="table-responsive">
                                <table class="table table-sm table-hover mb-0">
                                    <tbody>
                                        {% for task in item.tasks|slice(0, 3) %}
                                            <tr>
                                                <td style="width: 60%;">{{ task.name }}</td>
                                                <td>
                                                    {% if task.startDate %}
                                                        <small class="text-muted">
                                                            <i class="bx bx-calendar me-1"></i>{{ task.startDate|date('d/m/Y') }}
                                                        </small>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    <span class="badge bg-{% if task.status == 'completed' %}success{% elseif task.status == 'in_progress' %}warning{% else %}secondary{% endif %}">
                                                        {{ task.status|title }}
                                                    </span>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="text-center text-muted py-4">
                        <p>Aucun projet assigné</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    {# Sidebar - Mes temps récents et actions #}
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Mes temps récents</h4>
                <div class="card-header-action">
                    <a href="{{ path('timesheet_my_time') }}" class="btn btn-sm btn-outline-primary">Voir tous</a>
                </div>
            </div>
            <div class="card-body">
                {% for timesheet in recentTimesheets %}
                    <div class="d-flex align-items-center pb-3">
                        <div class="avatar-xs me-3">
                            <span class="avatar-title rounded-circle bg-primary font-size-12">
                                {{ timesheet.hours }}h
                            </span>
                        </div>
                        <div class="flex-1">
                            <h5 class="font-size-14 mb-1">{{ timesheet.project.name }}</h5>
                            <p class="text-muted font-size-13 mb-0">{{ timesheet.date|date('d/m/Y') }}</p>
                        </div>
                    </div>
                {% else %}
                    <div class="text-center text-muted py-4">
                        <p>Aucun temps saisi</p>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Actions rapides</h4>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('timesheet_index') }}" class="btn btn-success">
                        <i class="bx bx-time me-1"></i> Saisir mes temps
                    </a>
                    <a href="{{ path('my_tasks_index') }}" class="btn btn-primary">
                        <i class="bx bx-list-check me-1"></i> Voir mes tâches
                    </a>
                    <a href="{{ path('project_index') }}" class="btn btn-outline-primary">
                        <i class="bx bx-folder-open me-1"></i> Mes projets
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
