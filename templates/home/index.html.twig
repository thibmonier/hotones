{% extends 'layouts/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Tableau de bord</h4>
                <div class="page-title-right">
                    <p class="text-muted mb-0">Bonjour {{ app.user.firstName }} {{ app.user.lastName }} !</p>
                </div>
            </div>
        </div>
    </div>

    <!-- KPIs -->
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-1 overflow-hidden">
                            <p class="text-truncate font-size-14 mb-2">Total Projets</p>
                            <h4 class="mb-0">{{ totalProjects }}</h4>
                        </div>
                        <div class="text-primary">
                            <i class="bx bx-folder-open font-size-24"></i>
                        </div>
                    </div>
                </div>
                <div class="card-body border-top py-3">
                    <div class="text-truncate">
                        <span class="badge bg-success me-1">{{ activeProjects }}</span>
                        <span class="text-muted">actifs</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-1 overflow-hidden">
                            <p class="text-truncate font-size-14 mb-2">CA Total</p>
                            <h4 class="mb-0">{{ totalRevenue|number_format(0, '', ' ') }}€</h4>
                        </div>
                        <div class="text-success">
                            <i class="bx bx-euro font-size-24"></i>
                        </div>
                    </div>
                </div>
                <div class="card-body border-top py-3">
                    <div class="text-truncate">
                        <span class="text-muted">Tous projets confondus</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-1 overflow-hidden">
                            <p class="text-truncate font-size-14 mb-2">Heures ce mois</p>
                            <h4 class="mb-0">{{ monthlyHours|number_format(1, ',', ' ') }}h</h4>
                        </div>
                        <div class="text-info">
                            <i class="bx bx-time-five font-size-24"></i>
                        </div>
                    </div>
                </div>
                <div class="card-body border-top py-3">
                    <div class="text-truncate">
                        <span class="text-muted">Temps saisis</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-1 overflow-hidden">
                            <p class="text-truncate font-size-14 mb-2">Contributeurs</p>
                            <h4 class="mb-0">{{ totalContributors }}</h4>
                        </div>
                        <div class="text-warning">
                            <i class="bx bx-user font-size-24"></i>
                        </div>
                    </div>
                </div>
                <div class="card-body border-top py-3">
                    <div class="text-truncate">
                        <span class="text-muted">Actifs</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if is_granted('ROLE_MANAGER') and pendingVacations is not empty %}
    <div class="row">
        <div class="col-12">
            <div class="card border-warning">
                <div class="card-header bg-warning bg-soft">
                    <h4 class="card-title mb-0">
                        <i class="bx bx-calendar-exclamation me-2"></i>
                        Demandes de congés en attente
                        <span class="badge bg-warning ms-2">{{ pendingVacations|length }}</span>
                    </h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Contributeur</th>
                                    <th>Type</th>
                                    <th>Date de début</th>
                                    <th>Date de fin</th>
                                    <th>Jours ouvrés</th>
                                    <th>Demandé le</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for vacation in pendingVacations|slice(0, 5) %}
                                <tr>
                                    <td>
                                        <strong>{{ vacation.contributor.fullName }}</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">{{ vacation.typeLabel }}</span>
                                    </td>
                                    <td>{{ vacation.startDate|date('d/m/Y') }}</td>
                                    <td>{{ vacation.endDate|date('d/m/Y') }}</td>
                                    <td>{{ vacation.numberOfWorkingDays }} jour(s)</td>
                                    <td>{{ vacation.createdAt|date('d/m/Y') }}</td>
                                    <td>
                                        <a href="{{ path('vacation_approval_show', {id: vacation.id}) }}" class="btn btn-sm btn-primary">
                                            <i class="bx bx-check-circle"></i> Traiter
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% if pendingVacations|length > 5 %}
                    <div class="text-center mt-3">
                        <a href="{{ path('vacation_approval_index') }}" class="btn btn-outline-warning">
                            Voir toutes les demandes ({{ pendingVacations|length }})
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Projets récents</h4>
                    <div class="card-header-action">
                        <a href="{{ path('project_index') }}" class="btn btn-sm btn-primary">Voir tous</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-nowrap table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Projet</th>
                                    <th>Client</th>
                                    <th>Statut</th>
                                    <th>CA</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for project in recentProjects %}
                                <tr>
                                    <td>
                                        <h5 class="font-size-14 mb-0">
                                            <a href="{{ path('project_show', {'id': project.id}) }}">{{ project.name }}</a>
                                        </h5>
                                    </td>
                                    <td>{{ project.client ? project.client.name : '-' }}</td>
                                    <td>
                                        <span class="badge bg-{% if project.status == 'active' %}success{% elseif project.status == 'completed' %}primary{% else %}warning{% endif %}">
                                            {{ project.status|title }}
                                        </span>
                                    </td>
                                    <td>{{ project.totalSoldAmount|number_format(0, '', ' ') }}€</td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-4">
                                        <p>Aucun projet</p>
                                        {% if is_granted('ROLE_CHEF_PROJET') %}
                                            <a href="{{ path('project_new') }}" class="btn btn-primary btn-sm">Créer le premier projet</a>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            {% if contributor %}
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Mes temps récents</h4>
                    <div class="card-header-action">
                        <a href="{{ path('timesheet_my_time') }}" class="btn btn-sm btn-outline-primary">Voir tous</a>
                    </div>
                </div>
                <div class="card-body">
                    {% for timesheet in myRecentTimesheets %}
                    <div class="d-flex align-items-center pb-3">
                        <div class="avatar-xs me-3">
                            <span class="avatar-title rounded-circle bg-primary font-size-12">
                                {{ timesheet.hours }}h
                            </span>
                        </div>
                        <div class="flex-1">
                            <h5 class="font-size-14 mb-1">{{ timesheet.project.name }}</h5>
                            <p class="text-muted font-size-13 mb-0">{{ timesheet.date|date('d/m/Y') }}</p>
                        </div>
                    </div>
                    {% else %}
                    <div class="text-center text-muted py-4">
                        <p>Aucun temps saisi</p>
                        <a href="{{ path('timesheet_index') }}" class="btn btn-primary btn-sm">Saisir mes temps</a>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Actions rapides</h4>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        {% if is_granted('ROLE_CHEF_PROJET') %}
                        <a href="{{ path('project_new') }}" class="btn btn-primary">
                            <i class="bx bx-plus me-1"></i> Nouveau projet
                        </a>
                        {% endif %}
                        {% if contributor %}
                        <a href="{{ path('timesheet_index') }}" class="btn btn-success">
                            <i class="bx bx-time me-1"></i> Saisir mes temps
                        </a>
                        {% endif %}
                        <a href="{{ path('project_index') }}" class="btn btn-outline-primary">
                            <i class="bx bx-folder-open me-1"></i> Mes projets
                        </a>
                        {% if is_granted('ROLE_CHEF_PROJET') %}
                        <a href="{{ path('timesheet_all') }}" class="btn btn-outline-secondary">
                            <i class="bx bx-bar-chart me-1"></i> Tous les temps
                        </a>
                        {% endif %}
                        <a href="{{ path('profile_2fa_setup') }}" class="btn btn-outline-info">
                            <i class="bx bx-shield me-1"></i> Config 2FA
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
