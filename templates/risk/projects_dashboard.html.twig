{% extends 'layouts/base.html.twig' %}

{% block title %}Projets à risque{% endblock %}

{% block content %}
    {{ component('breadcrumb', { title: 'Projets à risque', pagetitle: 'Risques' }) }}

    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Projets à risque</h4>
                <div class="page-title-right">
                    <a href="{{ path('project_index') }}" class="btn btn-secondary">
                        <i class="bx bx-list-ul me-1"></i> Tous les projets
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques -->
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card card-h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted mb-3 lh-1 d-block text-truncate">Projets actifs</span>
                            <h4 class="mb-3">
                                <span class="counter-value text-primary">{{ stats.total }}</span>
                            </h4>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <div class="avatar-sm bg-soft-primary rounded">
                                <span class="avatar-title bg-soft-primary text-primary font-size-24">
                                    <i class="bx bx-briefcase"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted mb-3 lh-1 d-block text-truncate">À risque</span>
                            <h4 class="mb-3">
                                <span class="counter-value text-warning">{{ stats.atRisk }}</span>
                            </h4>
                            <small class="text-muted">
                                {{ stats.total > 0 ? ((stats.atRisk / stats.total) * 100)|round : 0 }}% des projets
                            </small>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <div class="avatar-sm bg-soft-warning rounded">
                                <span class="avatar-title bg-soft-warning text-warning font-size-24">
                                    <i class="bx bx-error-circle"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted mb-3 lh-1 d-block text-truncate">Risque élevé</span>
                            <h4 class="mb-3">
                                <span class="counter-value text-danger">{{ stats.high }}</span>
                            </h4>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <div class="avatar-sm bg-soft-danger rounded">
                                <span class="avatar-title bg-soft-danger text-danger font-size-24">
                                    <i class="bx bx-error"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted mb-3 lh-1 d-block text-truncate">Critique</span>
                            <h4 class="mb-3">
                                <span class="counter-value text-danger">{{ stats.critical }}</span>
                            </h4>
                        </div>
                        <div class="flex-shrink-0 text-end">
                            <div class="avatar-sm bg-soft-danger rounded">
                                <span class="avatar-title bg-soft-danger text-danger font-size-24">
                                    <i class="bx bxs-error"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Liste des projets à risque -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">
                        <i class="bx bx-list-ul me-2"></i>Détail des projets à risque
                    </h5>

                    {% if atRiskProjects|length == 0 %}
                        <div class="alert alert-success">
                            <i class="bx bx-check-circle me-2"></i>
                            Aucun projet à risque détecté ! Tous les projets actifs ont un score de santé supérieur à 80%.
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover table-centered table-nowrap align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 60px;" class="text-center">Score</th>
                                        <th style="width: 100px;">Niveau</th>
                                        <th>Projet</th>
                                        <th>Client</th>
                                        <th>Chef de projet</th>
                                        <th class="text-end">CA signé</th>
                                        <th class="text-end">Progression</th>
                                        <th class="text-center">Risques</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in atRiskProjects %}
                                        {% set project = item.project %}
                                        {% set analysis = item.analysis %}
                                        <tr>
                                            <td class="text-center">
                                                <div class="avatar-sm mx-auto">
                                                    <span class="avatar-title rounded-circle bg-soft-{{ analysis.riskLevel == 'critical' ? 'danger' : (analysis.riskLevel == 'high' ? 'warning' : 'info') }} text-{{ analysis.riskLevel == 'critical' ? 'danger' : (analysis.riskLevel == 'high' ? 'warning' : 'info') }} font-size-16">
                                                        {{ analysis.healthScore }}%
                                                    </span>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-{{ analysis.riskLevel == 'critical' ? 'danger' : (analysis.riskLevel == 'high' ? 'warning' : 'info') }}">
                                                    {% if analysis.riskLevel == 'critical' %}
                                                        Critique
                                                    {% elseif analysis.riskLevel == 'high' %}
                                                        Élevé
                                                    {% else %}
                                                        Moyen
                                                    {% endif %}
                                                </span>
                                            </td>
                                            <td>
                                                <a href="{{ path('project_show', {'id': project.id}) }}" class="fw-bold text-dark">
                                                    {{ project.name }}
                                                </a>
                                            </td>
                                            <td>
                                                {% if project.client %}
                                                    {{ project.client.name }}
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if project.projectManager %}
                                                    {{ project.projectManager.fullName }}
                                                {% else %}
                                                    <span class="text-muted">Non assigné</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-end">
                                                {{ project.totalSoldAmount|number_format(0, ',', ' ') }}€
                                            </td>
                                            <td class="text-end">
                                                <div class="d-flex align-items-center justify-content-end">
                                                    <span class="me-2">{{ project.globalProgress|number_format(0) }}%</span>
                                                    <div class="progress" style="width: 60px; height: 6px;">
                                                        <div class="progress-bar bg-primary" role="progressbar"
                                                             style="width: {{ project.globalProgress }}%"></div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-danger">{{ analysis.risks|length }}</span>
                                            </td>
                                            <td class="text-center">
                                                <a href="{{ path('project_show', {'id': project.id}) }}"
                                                   class="btn btn-sm btn-outline-primary"
                                                   title="Voir le projet">
                                                    <i class="bx bx-show"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="9" class="bg-light">
                                                <div class="ps-3">
                                                    <strong class="text-muted d-block mb-2">Risques identifiés :</strong>
                                                    <ul class="mb-0">
                                                        {% for risk in analysis.risks %}
                                                            <li class="text-muted small mb-1">
                                                                <span class="badge bg-{{ risk.severity == 'critical' ? 'danger' : (risk.severity == 'high' ? 'warning' : 'info') }} badge-sm me-1">
                                                                    {{ risk.severity == 'critical' ? 'Critique' : (risk.severity == 'high' ? 'Élevé' : 'Moyen') }}
                                                                </span>
                                                                {{ risk.message }}
                                                            </li>
                                                        {% endfor %}
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
