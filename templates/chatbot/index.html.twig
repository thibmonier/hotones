{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        (function() {
            const chatMessages = document.getElementById('chat-messages');
            const chatForm = document.getElementById('chat-form');
            const chatInput = document.getElementById('chat-input');
            const sendBtn = document.getElementById('send-btn');

            // Cr√©er l'indicateur de frappe
            const typingIndicator = document.createElement('div');
            typingIndicator.className = 'message bot';
            typingIndicator.innerHTML = `
                <div class="message-avatar">
                    <img src="{{ 'unit404.png' | imagine_filter('unit404_avatar_tiny') }}" alt="Unit 404">
                </div>
                <div class="typing-indicator">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            `;

            function addMessage(content, isUser = false) {
                const messageDiv = document.createElement('div');
                messageDiv.className = `message ${isUser ? 'user' : 'bot'}`;

                const time = new Date().toLocaleTimeString('fr-FR', {
                    hour: '2-digit',
                    minute: '2-digit'
                });

                const avatarContent = isUser
                    ? 'üë§'
                    : '<img src="{{ 'unit404.png' | imagine_filter('unit404_avatar_tiny') }}" alt="Unit 404">';

                messageDiv.innerHTML = `
                    <div class="message-avatar">${avatarContent}</div>
                    <div>
                        <div class="message-content">${escapeHtml(content)}</div>
                        <div class="message-time">${time}</div>
                    </div>
                `;

                // Supprimer le message de bienvenue si pr√©sent
                const welcomeMsg = chatMessages.querySelector('.welcome-message');
                if (welcomeMsg) {
                    welcomeMsg.remove();
                }

                chatMessages.appendChild(messageDiv);
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }

            function showTyping() {
                const welcomeMsg = chatMessages.querySelector('.welcome-message');
                if (welcomeMsg) {
                    welcomeMsg.remove();
                }
                chatMessages.appendChild(typingIndicator);
                typingIndicator.querySelector('.typing-indicator').classList.add('active');
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }

            function hideTyping() {
                typingIndicator.querySelector('.typing-indicator').classList.remove('active');
                if (typingIndicator.parentNode) {
                    typingIndicator.parentNode.removeChild(typingIndicator);
                }
            }

            function escapeHtml(text) {
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML.replace(/\n/g, '<br>');
            }

            chatForm.addEventListener('submit', async (e) => {
                e.preventDefault();

                const message = chatInput.value.trim();
                if (!message) return;

                // D√©sactiver l'input
                chatInput.disabled = true;
                sendBtn.disabled = true;

                // Ajouter le message de l'utilisateur
                addMessage(message, true);
                chatInput.value = '';

                // Afficher l'indicateur de frappe
                showTyping();

                try {
                    const response = await fetch('{{ path('chatbot_message') }}', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ message: message })
                    });

                    const data = await response.json();

                    hideTyping();

                    if (data.error) {
                        addMessage('*Soupir*... Une erreur est survenue. √âvidemment. L\'univers conspire contre nous. (' + data.error + ')', false);
                    } else {
                        addMessage(data.message, false);
                    }
                } catch (error) {
                    hideTyping();
                    addMessage('*Soupir profond*... Je savais que √ßa ne marcherait pas. L\'√©chec √©tait in√©vitable.', false);
                    console.error('Erreur:', error);
                } finally {
                    // R√©activer l'input
                    chatInput.disabled = false;
                    sendBtn.disabled = false;
                    chatInput.focus();
                }
            });

            // Focus automatique sur l'input
            chatInput.focus();
        })();
    </script>
{% endblock %}
