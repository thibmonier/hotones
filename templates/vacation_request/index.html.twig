{% extends 'layouts/base.html.twig' %}

{% block title %}Mes demandes de congés{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Mes demandes de congés</h4>
                <div class="page-title-right">
                    <a href="{{ path('vacation_request_new') }}" class="btn btn-primary">
                        <i class="bx bx-plus me-1"></i> Nouvelle demande
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    {% if vacations|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover table-nowrap mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Type</th>
                                        <th>Période</th>
                                        <th>Durée</th>
                                        <th>Statut</th>
                                        <th>Date de demande</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for vacation in vacations %}
                                        <tr>
                                            <td>
                                                <span class="badge bg-soft-primary text-primary">
                                                    {{ vacation.typeLabel }}
                                                </span>
                                            </td>
                                            <td>
                                                <strong>{{ vacation.startDate|date('d/m/Y') }}</strong>
                                                <i class="bx bx-right-arrow-alt mx-1"></i>
                                                <strong>{{ vacation.endDate|date('d/m/Y') }}</strong>
                                            </td>
                                            <td>
                                                {{ vacation.totalHours|number_format(1) }}h
                                                <small class="text-muted">({{ vacation.numberOfWorkingDays }} jours)</small>
                                            </td>
                                            <td>
                                                {% if vacation.status == 'pending' %}
                                                    <span class="badge bg-warning">En attente</span>
                                                {% elseif vacation.status == 'approved' %}
                                                    <span class="badge bg-success">Approuvée</span>
                                                {% elseif vacation.status == 'rejected' %}
                                                    <span class="badge bg-danger">Refusée</span>
                                                {% elseif vacation.status == 'cancelled' %}
                                                    <span class="badge bg-secondary">Annulée</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {{ vacation.createdAt|date('d/m/Y à H:i') }}
                                            </td>
                                            <td class="text-end">
                                                <a href="{{ path('vacation_request_show', {id: vacation.id}) }}"
                                                   class="btn btn-sm btn-outline-primary"
                                                   title="Voir les détails">
                                                    <i class="bx bx-show"></i>
                                                </a>
                                                {% if vacation.status == 'pending' %}
                                                    <button type="button"
                                                            class="btn btn-sm btn-outline-danger"
                                                            onclick="cancelVacation({{ vacation.id }})"
                                                            title="Annuler la demande">
                                                        <i class="bx bx-x"></i>
                                                    </button>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="bx bx-calendar font-size-48 text-muted d-block mb-3"></i>
                            <h5 class="text-muted">Aucune demande de congé</h5>
                            <p class="text-muted">Vous n'avez pas encore effectué de demande de congé.</p>
                            <a href="{{ path('vacation_request_new') }}" class="btn btn-primary mt-3">
                                <i class="bx bx-plus me-1"></i> Créer ma première demande
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Formulaire caché pour l'annulation -->
    <form id="cancel-form" method="post" style="display: none;">
        <input type="hidden" name="_token" id="cancel-token">
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function cancelVacation(id) {
            if (confirm('Voulez-vous vraiment annuler cette demande de congé ?')) {
                const form = document.getElementById('cancel-form');
                const token = '{{ csrf_token('cancel') }}' + id;
                document.getElementById('cancel-token').value = token;
                form.action = '{{ path('vacation_request_cancel', {id: '__ID__'}) }}'.replace('__ID__', id);
                form.submit();
            }
        }
    </script>
{% endblock %}
