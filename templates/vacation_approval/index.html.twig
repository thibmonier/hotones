{% extends 'layouts/base.html.twig' %}

{% block title %}Validation des congés{% endblock %}

{% block content %}
<div class="page-title-box">
    <h4 class="mb-0">Validation des demandes de congés</h4>
</div>

{% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Demandes en attente <span class="badge bg-warning">{{ pending_vacations|length }}</span></h5>

                {% if pending_vacations is empty %}
                    <p class="text-muted">Aucune demande de congé en attente.</p>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Collaborateur</th>
                                    <th>Type</th>
                                    <th>Date de début</th>
                                    <th>Date de fin</th>
                                    <th>Jours ouvrés</th>
                                    <th>Demandé le</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for vacation in pending_vacations %}
                                    <tr>
                                        <td>
                                            <strong>{{ vacation.contributor.fullName }}</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">{{ vacation.typeLabel }}</span>
                                        </td>
                                        <td>{{ vacation.startDate|date('d/m/Y') }}</td>
                                        <td>{{ vacation.endDate|date('d/m/Y') }}</td>
                                        <td>{{ vacation.numberOfWorkingDays }} jour(s)</td>
                                        <td>{{ vacation.createdAt|date('d/m/Y H:i') }}</td>
                                        <td>
                                            <a href="{{ path('vacation_approval_show', {id: vacation.id}) }}" class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye"></i> Voir
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Historique des demandes</h5>

                {% if all_vacations is empty %}
                    <p class="text-muted">Aucune demande de congé.</p>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Collaborateur</th>
                                    <th>Type</th>
                                    <th>Date de début</th>
                                    <th>Date de fin</th>
                                    <th>Jours ouvrés</th>
                                    <th>Statut</th>
                                    <th>Demandé le</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for vacation in all_vacations %}
                                    <tr>
                                        <td>
                                            <strong>{{ vacation.contributor.fullName }}</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">{{ vacation.typeLabel }}</span>
                                        </td>
                                        <td>{{ vacation.startDate|date('d/m/Y') }}</td>
                                        <td>{{ vacation.endDate|date('d/m/Y') }}</td>
                                        <td>{{ vacation.numberOfWorkingDays }} jour(s)</td>
                                        <td>
                                            {% if vacation.status == 'pending' %}
                                                <span class="badge bg-warning">En attente</span>
                                            {% elseif vacation.status == 'approved' %}
                                                <span class="badge bg-success">Approuvé</span>
                                            {% elseif vacation.status == 'rejected' %}
                                                <span class="badge bg-danger">Rejeté</span>
                                            {% elseif vacation.status == 'cancelled' %}
                                                <span class="badge bg-secondary">Annulé</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ vacation.createdAt|date('d/m/Y H:i') }}</td>
                                        <td>
                                            <a href="{{ path('vacation_approval_show', {id: vacation.id}) }}" class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye"></i> Voir
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
