{% extends 'layouts/base.html.twig' %}

{% block title %}Catégories de Service{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Catégories de Service</h4>
                <div class="page-title-right">
                    <a href="{{ path('service_category_new') }}" class="btn btn-primary">
                        <i class="bx bx-plus me-1"></i> Nouvelle catégorie
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Nom</th>
                                    <th>Description</th>
                                    <th>Couleur</th>
                                    <th>Projets</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for serviceCategory in serviceCategories %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            {% if serviceCategory.color %}
                                                <div class="me-2" style="width: 16px; height: 16px; background-color: {{ serviceCategory.color }}; border-radius: 3px;"></div>
                                            {% endif %}
                                            <strong>{{ serviceCategory.name }}</strong>
                                        </div>
                                    </td>
                                    <td>{{ serviceCategory.description ? serviceCategory.description|slice(0, 50) ~ (serviceCategory.description|length > 50 ? '...' : '') : '-' }}</td>
                                    <td>
                                        {% if serviceCategory.color %}
                                            <span class="badge" style="background-color: {{ serviceCategory.color }}; color: white;">{{ serviceCategory.color }}</span>
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>{{ serviceCategory.projects|length }}</td>
                                    <td>
                                        {% if serviceCategory.active %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Inactif</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('service_category_show', {'id': serviceCategory.id}) }}" class="btn btn-outline-secondary btn-sm" title="Voir">
                                                <i class="bx bx-show"></i>
                                            </a>
                                            <a href="{{ path('service_category_edit', {'id': serviceCategory.id}) }}" class="btn btn-outline-primary btn-sm" title="Modifier">
                                                <i class="bx bx-edit"></i>
                                            </a>
                                            <form method="post" action="{{ path('service_category_delete', {'id': serviceCategory.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ serviceCategory.id) }}">
                                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Supprimer" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')">
                                                    <i class="bx bx-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted">
                                        <div class="py-4">
                                            <i class="bx bx-category font-size-24 mb-2"></i>
                                            <p>Aucune catégorie trouvée</p>
                                            <a href="{{ path('service_category_new') }}" class="btn btn-primary">Créer la première catégorie</a>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}