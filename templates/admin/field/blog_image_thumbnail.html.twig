{# EasyAdmin field template: Blog image thumbnail for list view (150x100) #}
{% if field.value %}
    <img
        src="{{ field.value }}"
        alt="Image de l'article"
        style="width: 150px; height: 100px; object-fit: cover; border-radius: 8px;"
        loading="lazy"
        onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22150%22 height=%22100%22%3E%3Crect fill=%22%23f0f0f0%22 width=%22150%22 height=%22100%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 fill=%22%23999%22%3ENo Image%3C/text%3E%3C/svg%3E'"
    >
{% else %}
    <span style="display: inline-block; width: 150px; height: 100px; background: #f8f9fa; border-radius: 8px; text-align: center; line-height: 100px; color: #6c757d;">
        Pas d'image
    </span>
{% endif %}
