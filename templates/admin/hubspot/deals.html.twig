{% extends 'base.html.twig' %}

{% block title %}Affaires HubSpot en cours{% endblock %}

{% block body %}
    {% include 'components/page_header.html.twig' with {
        title: 'Affaires HubSpot en cours',
        subtitle: 'Liste des affaires non signees depuis HubSpot',
        breadcrumb: [
            {label: 'Administration', url: path('admin_dashboard')},
            {label: 'HubSpot', url: path('admin_hubspot_settings')},
            {label: 'Affaires', active: true}
        ]
    } %}

    <div class="row">
        <div class="col-12">
            {% if not dealsData.success %}
                <div class="alert alert-danger">
                    <i class="bx bx-error-circle me-1"></i>
                    Erreur lors de la recuperation des affaires: {{ dealsData.error }}
                </div>
            {% else %}
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bx bx-trending-up me-2"></i>
                            {{ dealsData.count }} affaire(s) en cours
                        </h5>
                        <a href="{{ path('admin_hubspot_settings') }}" class="btn btn-sm btn-outline-secondary">
                            <i class="bx bx-arrow-back me-1"></i> Retour
                        </a>
                    </div>
                    <div class="card-body">
                        {% if dealsData.deals|length == 0 %}
                            <div class="text-center py-5 text-muted">
                                <i class="bx bx-check-circle display-4"></i>
                                <p class="mt-3">Aucune affaire en cours trouvee.</p>
                                <p class="small">Les affaires avec les stages exclus ({{ settings.excludedStages }}) ne sont pas affichees.</p>
                            </div>
                        {% else %}
                            <div class="table-responsive">
                                <table class="table table-hover align-middle" id="deals-table">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Nom de l'affaire</th>
                                            <th>Pipeline</th>
                                            <th>Stage</th>
                                            <th class="text-end">Montant</th>
                                            <th>Date de cloture prevue</th>
                                            <th>Date de creation</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for deal in dealsData.deals %}
                                            <tr>
                                                <td>
                                                    <strong>{{ deal.name }}</strong>
                                                    <br>
                                                    <small class="text-muted">ID: {{ deal.id }}</small>
                                                </td>
                                                <td>
                                                    <span class="badge bg-light text-dark">{{ deal.pipeline }}</span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-info">{{ deal.stage }}</span>
                                                </td>
                                                <td class="text-end">
                                                    {% if deal.amount %}
                                                        <strong>{{ deal.amount|number_format(2, ',', ' ') }} €</strong>
                                                    {% else %}
                                                        <span class="text-muted">-</span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if deal.closeDate %}
                                                        {{ deal.closeDate|date('d/m/Y') }}
                                                        {% set closeDate = deal.closeDate|date('U') %}
                                                        {% set now = 'now'|date('U') %}
                                                        {% if closeDate < now %}
                                                            <span class="badge bg-danger ms-1">En retard</span>
                                                        {% elseif (closeDate - now) < 604800 %}
                                                            <span class="badge bg-warning ms-1">Cette semaine</span>
                                                        {% endif %}
                                                    {% else %}
                                                        <span class="text-muted">Non definie</span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if deal.createDate %}
                                                        {{ deal.createDate|date('d/m/Y') }}
                                                    {% else %}
                                                        <span class="text-muted">-</span>
                                                    {% endif %}
                                                </td>
                                                <td class="text-center">
                                                    <a href="https://app.hubspot.com/contacts/{{ settings.portalId }}/deal/{{ deal.id }}"
                                                       target="_blank"
                                                       class="btn btn-sm btn-outline-primary"
                                                       data-bs-toggle="tooltip"
                                                       title="Ouvrir dans HubSpot">
                                                        <i class="bx bx-link-external"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                            {# Statistiques rapides #}
                            <div class="row mt-4">
                                <div class="col-md-3">
                                    <div class="card bg-light">
                                        <div class="card-body text-center py-3">
                                            <h4 class="mb-1">{{ dealsData.count }}</h4>
                                            <small class="text-muted">Affaires en cours</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-light">
                                        <div class="card-body text-center py-3">
                                            {% set totalAmount = 0 %}
                                            {% for deal in dealsData.deals %}
                                                {% set totalAmount = totalAmount + (deal.amount|default(0)) %}
                                            {% endfor %}
                                            <h4 class="mb-1">{{ totalAmount|number_format(0, ',', ' ') }} €</h4>
                                            <small class="text-muted">Montant total</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-light">
                                        <div class="card-body text-center py-3">
                                            {% set pipelinesUsed = [] %}
                                            {% for deal in dealsData.deals %}
                                                {% if deal.pipeline not in pipelinesUsed %}
                                                    {% set pipelinesUsed = pipelinesUsed|merge([deal.pipeline]) %}
                                                {% endif %}
                                            {% endfor %}
                                            <h4 class="mb-1">{{ pipelinesUsed|length }}</h4>
                                            <small class="text-muted">Pipeline(s)</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-light">
                                        <div class="card-body text-center py-3">
                                            {% set avgAmount = dealsData.count > 0 ? totalAmount / dealsData.count : 0 %}
                                            <h4 class="mb-1">{{ avgAmount|number_format(0, ',', ' ') }} €</h4>
                                            <small class="text-muted">Montant moyen</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Initialize tooltips
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
{% endblock %}
