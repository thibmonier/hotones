{% extends 'base.html.twig' %}

{% block title %}Clients HubSpot{% endblock %}

{% block body %}
    {% include 'components/page_header.html.twig' with {
        title: 'Clients et Contacts HubSpot',
        subtitle: 'Liste des entreprises et leurs contacts associes depuis HubSpot',
        breadcrumb: [
            {label: 'Administration', url: path('admin_dashboard')},
            {label: 'HubSpot', url: path('admin_hubspot_settings')},
            {label: 'Clients', active: true}
        ]
    } %}

    <div class="row">
        <div class="col-12">
            {% if not clientsData.success %}
                <div class="alert alert-danger">
                    <i class="bx bx-error-circle me-1"></i>
                    Erreur lors de la recuperation des clients: {{ clientsData.error }}
                </div>
            {% else %}
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bx bx-building me-2"></i>
                            {{ clientsData.count }} client(s)
                        </h5>
                        <div class="d-flex gap-2">
                            <input type="text" class="form-control form-control-sm" id="search-clients" placeholder="Rechercher...">
                            <a href="{{ path('admin_hubspot_settings') }}" class="btn btn-sm btn-outline-secondary">
                                <i class="bx bx-arrow-back me-1"></i> Retour
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        {% if clientsData.clients|length == 0 %}
                            <div class="text-center py-5 text-muted">
                                <i class="bx bx-building display-4"></i>
                                <p class="mt-3">Aucun client trouve dans HubSpot.</p>
                            </div>
                        {% else %}
                            <div class="accordion" id="clients-accordion">
                                {% for client in clientsData.clients %}
                                    <div class="accordion-item client-item" data-name="{{ client.name|lower }}">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button"
                                                    data-bs-toggle="collapse"
                                                    data-bs-target="#client-{{ client.id }}"
                                                    aria-expanded="false">
                                                <div class="d-flex justify-content-between align-items-center w-100 me-3">
                                                    <div>
                                                        <strong>{{ client.name }}</strong>
                                                        {% if client.industry %}
                                                            <span class="badge bg-light text-dark ms-2">{{ client.industry }}</span>
                                                        {% endif %}
                                                        {% if client.city or client.country %}
                                                            <small class="text-muted ms-2">
                                                                <i class="bx bx-map-pin"></i>
                                                                {{ client.city }}{% if client.city and client.country %}, {% endif %}{{ client.country }}
                                                            </small>
                                                        {% endif %}
                                                    </div>
                                                    <div>
                                                        <span class="badge bg-primary rounded-pill">
                                                            {{ client.contactCount }} contact(s)
                                                        </span>
                                                    </div>
                                                </div>
                                            </button>
                                        </h2>
                                        <div id="client-{{ client.id }}" class="accordion-collapse collapse">
                                            <div class="accordion-body">
                                                <div class="row">
                                                    <div class="col-md-4 mb-3">
                                                        <h6 class="text-muted mb-2">Informations</h6>
                                                        <ul class="list-unstyled small">
                                                            {% if client.website %}
                                                                <li><i class="bx bx-globe me-1"></i>
                                                                    <a href="{{ client.website }}" target="_blank">{{ client.domain ?: client.website }}</a>
                                                                </li>
                                                            {% endif %}
                                                            {% if client.phone %}
                                                                <li><i class="bx bx-phone me-1"></i> {{ client.phone }}</li>
                                                            {% endif %}
                                                            <li class="mt-2">
                                                                <a href="https://app.hubspot.com/contacts/{{ settings.portalId }}/company/{{ client.id }}"
                                                                   target="_blank"
                                                                   class="btn btn-sm btn-outline-primary">
                                                                    <i class="bx bx-link-external me-1"></i> Voir dans HubSpot
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                    <div class="col-md-8">
                                                        <h6 class="text-muted mb-2">Contacts ({{ client.contacts|length }})</h6>
                                                        {% if client.contacts|length == 0 %}
                                                            <p class="text-muted small">Aucun contact associe a cette entreprise.</p>
                                                        {% else %}
                                                            <div class="table-responsive">
                                                                <table class="table table-sm table-hover">
                                                                    <thead class="table-light">
                                                                        <tr>
                                                                            <th>Nom</th>
                                                                            <th>Email</th>
                                                                            <th>Telephone</th>
                                                                            <th>Poste</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        {% for contact in client.contacts %}
                                                                            <tr>
                                                                                <td>
                                                                                    <strong>{{ contact.firstName }} {{ contact.lastName }}</strong>
                                                                                </td>
                                                                                <td>
                                                                                    {% if contact.email %}
                                                                                        <a href="mailto:{{ contact.email }}">{{ contact.email }}</a>
                                                                                    {% else %}
                                                                                        <span class="text-muted">-</span>
                                                                                    {% endif %}
                                                                                </td>
                                                                                <td>
                                                                                    {% if contact.phone %}
                                                                                        {{ contact.phone }}
                                                                                    {% elseif contact.mobilePhone %}
                                                                                        {{ contact.mobilePhone }} <small class="text-muted">(mobile)</small>
                                                                                    {% else %}
                                                                                        <span class="text-muted">-</span>
                                                                                    {% endif %}
                                                                                </td>
                                                                                <td>
                                                                                    {% if contact.jobTitle %}
                                                                                        {{ contact.jobTitle }}
                                                                                    {% else %}
                                                                                        <span class="text-muted">-</span>
                                                                                    {% endif %}
                                                                                </td>
                                                                            </tr>
                                                                        {% endfor %}
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>

                            {# Statistiques rapides #}
                            <div class="row mt-4">
                                <div class="col-md-4">
                                    <div class="card bg-light">
                                        <div class="card-body text-center py-3">
                                            <h4 class="mb-1">{{ clientsData.count }}</h4>
                                            <small class="text-muted">Entreprises</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card bg-light">
                                        <div class="card-body text-center py-3">
                                            {% set totalContacts = 0 %}
                                            {% for client in clientsData.clients %}
                                                {% set totalContacts = totalContacts + client.contactCount %}
                                            {% endfor %}
                                            <h4 class="mb-1">{{ totalContacts }}</h4>
                                            <small class="text-muted">Contacts</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card bg-light">
                                        <div class="card-body text-center py-3">
                                            {% set avgContacts = clientsData.count > 0 ? (totalContacts / clientsData.count)|round(1) : 0 %}
                                            <h4 class="mb-1">{{ avgContacts }}</h4>
                                            <small class="text-muted">Contacts/entreprise (moy.)</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Search functionality
        const searchInput = document.getElementById('search-clients');
        const clientItems = document.querySelectorAll('.client-item');

        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();

            clientItems.forEach(function(item) {
                const name = item.getAttribute('data-name');
                if (name.includes(searchTerm)) {
                    item.style.display = '';
                } else {
                    item.style.display = 'none';
                }
            });
        });
    </script>
{% endblock %}
