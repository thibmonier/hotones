{% extends 'layouts/base.html.twig' %}

{% block title %}{{ template.name }}{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">{{ template.name }}</h4>

                <div class="page-title-right">
                    <a href="{{ path('admin_onboarding_template_index') }}" class="btn btn-secondary">
                        <i class="bx bx-arrow-back me-1"></i> Retour
                    </a>
                    <a href="{{ path('admin_onboarding_template_edit', {id: template.id}) }}" class="btn btn-primary">
                        <i class="bx bx-edit me-1"></i> Éditer
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Informations</h5>

                    <div class="mb-3">
                        <strong>Profil :</strong><br>
                        {% if template.profile %}
                            <span class="badge badge-soft-primary">{{ template.profile.name }}</span>
                        {% else %}
                            <span class="badge badge-soft-secondary">Défaut (tous profils)</span>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        <strong>Statut :</strong><br>
                        {% if template.active %}
                            <span class="badge badge-soft-success">Actif</span>
                        {% else %}
                            <span class="badge badge-soft-danger">Inactif</span>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        <strong>Description :</strong><br>
                        {{ template.description ?: 'Aucune description' }}
                    </div>

                    <div class="mb-3">
                        <strong>Nombre de tâches :</strong><br>
                        {{ template.tasks|length }}
                    </div>

                    <div class="mb-3">
                        <strong>Créé le :</strong><br>
                        {{ template.createdAt|date('d/m/Y à H:i') }}
                    </div>

                    <div class="mb-3">
                        <strong>Mis à jour le :</strong><br>
                        {{ template.updatedAt ? template.updatedAt|date('d/m/Y à H:i') : 'Jamais' }}
                    </div>

                    <hr>

                    <form method="post" action="{{ path('admin_onboarding_template_duplicate', {id: template.id}) }}" class="mb-2">
                        <input type="hidden" name="_token" value="{{ csrf_token('duplicate-template-' ~ template.id) }}">
                        <input type="text" name="new_name" class="form-control mb-2" placeholder="Nom de la copie" value="{{ template.name }} (Copie)">
                        <button type="submit" class="btn btn-info w-100">
                            <i class="bx bx-copy me-1"></i> Dupliquer
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-3">Tâches ({{ template.tasks|length }})</h5>

                    {% if template.tasks is empty %}
                        <div class="alert alert-warning">
                            <i class="bx bx-error me-2"></i>
                            Ce template ne contient aucune tâche.
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Titre</th>
                                        <th>Type</th>
                                        <th>Assigné à</th>
                                        <th>J+</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for task in template.tasks %}
                                        <tr>
                                            <td>{{ task.order + 1 }}</td>
                                            <td>
                                                <strong>{{ task.title }}</strong>
                                                {% if task.description %}
                                                    <br>
                                                    <small class="text-muted">{{ task.description }}</small>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="badge badge-soft-info">
                                                    {% if task.type == 'action' %}Action
                                                    {% elseif task.type == 'lecture' %}Lecture
                                                    {% elseif task.type == 'formation' %}Formation
                                                    {% elseif task.type == 'meeting' %}Réunion
                                                    {% else %}Autre
                                                    {% endif %}
                                                </span>
                                            </td>
                                            <td>
                                                {% if task.assigned_to == 'manager' %}
                                                    <span class="badge badge-soft-primary">Manager</span>
                                                {% else %}
                                                    <span class="badge badge-soft-secondary">Collaborateur</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="badge badge-soft-dark">J+{{ task.days_after_start }}</span>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
