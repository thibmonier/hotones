{% extends 'layouts/base.html.twig' %}

{% block title %}Nouveau template d'onboarding{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Nouveau template d'onboarding</h4>

                <div class="page-title-right">
                    <a href="{{ path('admin_onboarding_template_index') }}" class="btn btn-secondary">
                        <i class="bx bx-arrow-back me-1"></i> Retour
                    </a>
                </div>
            </div>
        </div>
    </div>

    <form method="post" action="{{ path('admin_onboarding_template_create') }}">
        <input type="hidden" name="_token" value="{{ csrf_token('create-template') }}">

        {% include 'admin/onboarding_template/_form.html.twig' with {template: null} %}

        <div class="row mt-3">
            <div class="col-12">
                <div class="d-flex justify-content-end gap-2">
                    <a href="{{ path('admin_onboarding_template_index') }}" class="btn btn-secondary">
                        Annuler
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bx bx-save me-1"></i> Cr√©er le template
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}
