{% extends 'layouts/base.html.twig' %}

{% block title %}Ajouter une compétence à {{ contributor.fullName }}{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Ajouter une compétence</h4>
                <div class="page-title-right">
                    <a href="{{ path('contributor_skill_index', {contributorId: contributor.id}) }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bx bx-arrow-back me-1"></i>Retour
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">Compétence pour {{ contributor.fullName }}</h5>

                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.skill) }}
                        {{ form_widget(form.skill) }}
                        {{ form_errors(form.skill) }}
                        {{ form_help(form.skill) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.selfAssessmentLevel) }}
                        {{ form_widget(form.selfAssessmentLevel) }}
                        {{ form_errors(form.selfAssessmentLevel) }}
                        {{ form_help(form.selfAssessmentLevel) }}
                    </div>

                    {% if is_granted('ROLE_MANAGER') %}
                    <div class="mb-3">
                        {{ form_label(form.managerAssessmentLevel) }}
                        {{ form_widget(form.managerAssessmentLevel) }}
                        {{ form_errors(form.managerAssessmentLevel) }}
                        {{ form_help(form.managerAssessmentLevel) }}
                    </div>
                    {% endif %}

                    <div class="mb-3">
                        {{ form_label(form.dateAcquired) }}
                        {{ form_widget(form.dateAcquired) }}
                        {{ form_errors(form.dateAcquired) }}
                        {{ form_help(form.dateAcquired) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.notes) }}
                        {{ form_widget(form.notes) }}
                        {{ form_errors(form.notes) }}
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bx bx-save me-1"></i>Ajouter la compétence
                        </button>
                        <a href="{{ path('contributor_skill_index', {contributorId: contributor.id}) }}" class="btn btn-light">Annuler</a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bx bx-info-circle me-2"></i>Guide des niveaux
                    </h5>
                    <div class="mb-3">
                        <span class="badge bg-secondary mb-1">1 - Débutant</span>
                        <p class="text-muted small mb-0">Connaissance de base, nécessite de l'accompagnement</p>
                    </div>
                    <div class="mb-3">
                        <span class="badge bg-info mb-1">2 - Intermédiaire</span>
                        <p class="text-muted small mb-0">Autonome sur les tâches courantes</p>
                    </div>
                    <div class="mb-3">
                        <span class="badge bg-primary mb-1">3 - Confirmé</span>
                        <p class="text-muted small mb-0">Maîtrise avancée, peut former les autres</p>
                    </div>
                    <div class="mb-3">
                        <span class="badge bg-success mb-1">4 - Expert</span>
                        <p class="text-muted small mb-0">Expertise reconnue, référent technique</p>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Compétences actuelles</h6>
                    <div class="text-muted">
                        {{ contributor.contributorSkills|length }} compétence(s) déclarée(s)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
