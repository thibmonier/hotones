{% extends 'layouts/base.html.twig' %}

{% block title %}Compétences de {{ contributor.fullName }}{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Compétences de {{ contributor.fullName }}</h4>
                <div class="page-title-right">
                    <a href="{{ path('contributor_skill_new', {contributorId: contributor.id}) }}" class="btn btn-primary btn-sm">
                        <i class="bx bx-plus me-1"></i>Ajouter une compétence
                    </a>
                </div>
            </div>
        </div>
    </div>

    {# Statistics Cards #}
    <div class="row mb-3">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <span class="text-muted">Total compétences</span>
                            <h4 class="mb-0 mt-1">{{ contributor.contributorSkills|length }}</h4>
                        </div>
                        <div class="avatar-sm bg-soft-primary rounded">
                            <i class="bx bx-badge-check text-primary font-size-24"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% for level, label in {1: 'Débutant', 2: 'Intermédiaire', 3: 'Confirmé', 4: 'Expert'} %}
        {% set count = countByLevel[level] ?? 0 %}
        <div class="col-md-2">
            <div class="card">
                <div class="card-body text-center">
                    <span class="badge {% if level == 1 %}bg-secondary{% elseif level == 2 %}bg-info{% elseif level == 3 %}bg-primary{% else %}bg-success{% endif %} mb-2">
                        {{ label }}
                    </span>
                    <h4 class="mb-0">{{ count }}</h4>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    {# Skills by Category #}
    {% if skillsByCategory|length > 0 %}
        {% for category, skills in skillsByCategory %}
        <div class="row mb-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-4">
                            <span class="badge bg-secondary me-2">{{ skills|first.skill.categoryLabel }}</span>
                            {{ skills|length }} compétence(s)
                        </h5>
                        <div class="table-responsive">
                            <table class="table table-centered table-nowrap mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Compétence</th>
                                        <th class="text-center">Auto-évaluation</th>
                                        <th class="text-center">Évaluation manager</th>
                                        <th class="text-center">Niveau effectif</th>
                                        <th>Date acquisition</th>
                                        <th>Notes</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for contributorSkill in skills %}
                                    <tr>
                                        <td><strong>{{ contributorSkill.skill.name }}</strong></td>
                                        <td class="text-center">
                                            <span class="badge bg-secondary">{{ contributorSkill.selfAssessmentLevel }}</span>
                                        </td>
                                        <td class="text-center">
                                            {% if contributorSkill.managerAssessmentLevel %}
                                                <span class="badge bg-info">{{ contributorSkill.managerAssessmentLevel }}</span>
                                            {% else %}
                                                <button type="button" class="btn btn-sm btn-outline-info" data-bs-toggle="modal" data-bs-target="#assessModal{{ contributorSkill.id }}" {% if not is_granted('ROLE_MANAGER') %}disabled{% endif %}>
                                                    Évaluer
                                                </button>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            <span class="badge {{ contributorSkill.levelBadgeClass }}">
                                                {{ contributorSkill.effectiveLevel }}
                                            </span>
                                            {% if contributorSkill.hasAssessmentGap %}
                                                <i class="bx bx-error-circle text-warning" title="Écart : {{ contributorSkill.assessmentGap }}"></i>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if contributorSkill.dateAcquired %}
                                                {{ contributorSkill.dateAcquired|date('d/m/Y') }}
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if contributorSkill.notes %}
                                                {{ contributorSkill.notes|length > 40 ? contributorSkill.notes|slice(0, 40) ~ '...' : contributorSkill.notes }}
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group btn-group-sm">
                                                <a href="{{ path('contributor_skill_edit', {contributorId: contributor.id, id: contributorSkill.id}) }}" class="btn btn-outline-primary" title="Modifier">
                                                    <i class="bx bx-edit"></i>
                                                </a>
                                                <form method="post" action="{{ path('contributor_skill_delete', {contributorId: contributor.id, id: contributorSkill.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette compétence ?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contributorSkill.id) }}" />
                                                    <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                        <i class="bx bx-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>

                                    {# Assessment Modal #}
                                    {% if is_granted('ROLE_MANAGER') %}
                                    <div class="modal fade" id="assessModal{{ contributorSkill.id }}" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <form method="post" action="{{ path('contributor_skill_assess', {contributorId: contributor.id, id: contributorSkill.id}) }}">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Évaluer {{ contributorSkill.skill.name }}</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('assess' ~ contributorSkill.id) }}" />

                                                        <div class="mb-3">
                                                            <label class="form-label">Auto-évaluation du contributeur</label>
                                                            <div>
                                                                <span class="badge bg-secondary">{{ contributorSkill.selfAssessmentLevel }} - {{ contributorSkill.getLevelLabel(contributorSkill.selfAssessmentLevel) }}</span>
                                                            </div>
                                                        </div>

                                                        <div class="mb-3">
                                                            <label for="managerLevel{{ contributorSkill.id }}" class="form-label">Votre évaluation</label>
                                                            <select name="manager_level" id="managerLevel{{ contributorSkill.id }}" class="form-select" required>
                                                                <option value="">Sélectionnez un niveau</option>
                                                                <option value="1">1 - Débutant</option>
                                                                <option value="2">2 - Intermédiaire</option>
                                                                <option value="3">3 - Confirmé</option>
                                                                <option value="4">4 - Expert</option>
                                                            </select>
                                                        </div>

                                                        <div class="mb-3">
                                                            <label for="notes{{ contributorSkill.id }}" class="form-label">Notes (optionnel)</label>
                                                            <textarea name="notes" id="notes{{ contributorSkill.id }}" class="form-control" rows="3">{{ contributorSkill.notes }}</textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Annuler</button>
                                                        <button type="submit" class="btn btn-primary">Enregistrer l'évaluation</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    {% endif %}
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    {% else %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="bx bx-info-circle text-muted" style="font-size: 48px;"></i>
                    <h5 class="mt-3">Aucune compétence déclarée</h5>
                    <p class="text-muted">Commencez par ajouter des compétences à ce contributeur.</p>
                    <a href="{{ path('contributor_skill_new', {contributorId: contributor.id}) }}" class="btn btn-primary">
                        <i class="bx bx-plus me-1"></i>Ajouter une compétence
                    </a>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
