# MySQL/MariaDB Configuration for HotOnes
# Optimized for data integrity and performance

[mysqld]
# SQL Modes - Data Integrity (Lot 0.1.1)
# Added: NO_ZERO_DATE, NO_ZERO_IN_DATE for strict data validation
# Removed: NO_AUTO_CREATE_USER (deprecated in MySQL 5.7.8+)
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION

# Character Set & Collation
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# InnoDB Settings (Performance)
innodb_buffer_pool_size = 1G
innodb_log_file_size = 256M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1

# Query Cache (Disabled - deprecated)
query_cache_type = 0
query_cache_size = 0

# Connection Settings
max_connections = 200
max_allowed_packet = 64M

# Logging
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 1
log_queries_not_using_indexes = 1

# Binary Logging
log_bin = /var/log/mysql/mysql-bin.log
expire_logs_days = 7
max_binlog_size = 100M

[client]
default-character-set = utf8mb4
