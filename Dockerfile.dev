# Dockerfile pour développement
# Inclut PHP + Node.js pour faciliter le développement

FROM php:8.5-fpm-alpine

# Install system dependencies including Node.js
RUN apk add --no-cache \
    bash \
    git \
    unzip \
    libzip-dev \
    icu-dev \
    oniguruma-dev \
    mariadb-client \
    tzdata \
    freetype-dev \
    libjpeg-turbo-dev \
    libpng-dev \
    nodejs \
    npm \
    yarn \
    autoconf \
    g++ \
    make \
  && docker-php-ext-configure intl \
  && docker-php-ext-configure gd --with-freetype --with-jpeg \
  && pecl install apcu \
  && docker-php-ext-enable apcu \
  && pecl install redis \
  && docker-php-ext-enable redis \
  && pecl install pcov \
  && docker-php-ext-enable pcov \
  && docker-php-ext-install pdo \
  && docker-php-ext-install pdo_mysql \
  && docker-php-ext-install intl \
  && docker-php-ext-install gd \
  && docker-php-ext-install bcmath \
  && docker-php-ext-install zip \
  && rm -rf /var/cache/apk/*

# Install Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Configure PHP for development
COPY ./docker/php/php.ini /usr/local/etc/php/conf.d/php.ini
COPY ./docker/php/www.conf /usr/local/etc/php-fpm.d/zz-custom.conf

# Create OPcache file cache directory
RUN mkdir -p /tmp/php-opcache && chmod 777 /tmp/php-opcache

# Set working directory
WORKDIR /var/www/html

# Default command
CMD ["php-fpm"]
